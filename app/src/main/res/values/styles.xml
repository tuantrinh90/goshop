<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropdownStyle</item>
    </style>

    <style name="toolbarTheme" parent="AppTheme">
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>
    <style name="ActionButtonStyle" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:minWidth">44dp</item>
        <item name="android:paddingLeft">@dimen/size_16</item>
        <item name="android:paddingRight">@dimen/size_16</item>
    </style>
    <style name="SpinnerDropdownStyle" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ProgressDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomProgressDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomProgressDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <style name="textStyle">
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="windowMargin">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="textInputEditTheme" parent="AppTheme">
        <item name="android:textColorHint">@color/blackTrans38</item>
        <item name="colorControlNormal">@color/blackTrans38</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="btnStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@drawable/big_button_style_config</item>
        <item name="android:textColor">@color/blackTrans87</item>
    </style>

    <style name="textInputErrorStyle">
        <item name="android:textColor">@color/colorAccent</item><!--hint-->
    </style>

    <style name="homeTopCategoryText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackTrans87</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="homeItemTextSaleSymbol">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:text">@string/home_item_price_off</item>

    </style>

    <style name="homeCenterOnAirTab">
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_home_center_video_onair_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="homeCenterOnAirTabPartingLine">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/ic_home_center_video_line</item>
        <item name="android:contentDescription">line</item>
    </style>
    <style name="homeWrapWidthLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/blackTrans12</item>
    </style>

    <style name="pageCardInterval" parent="homeWrapWidthLine">
        <item name="android:layout_height">12dp</item>
    </style>

    <style name="homeItemProductName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackTrans87</item>
        <item name="android:text">@string/home_item_test_product_name</item>
    </style>

    <style name="otherItemProductName" parent="homeItemProductName">
        <item name="android:gravity">center</item>
    </style>

    <style name="homeItemProductOldPrice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blackTrans38</item>
        <item name="android:text">@string/home_item_test_product_price</item>
    </style>

    <style name="homeItemProductPrice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackTrans87</item>
        <item name="android:text">@string/home_item_test_product_price</item>
    </style>

    <style name="homeSlideItemBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_slide_menu_item_height</item>
        <item name="android:background">@drawable/slidemenu_bg_color_selected</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="homeSlideItemImage">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="homeSlideItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@drawable/text_color_selected</item>
    </style>

    <style name="homeSlideItemTextNum">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/bg_slide_menu_number</item>
        <item name="android:text">99+</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <style name="homeSlideItemSettingText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_slide_menu_item_height</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/text_color_selected</item>
        <item name="android:background">@drawable/slidemenu_bg_color_selected</item>
    </style>

    <style name="myOrderDetailTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blackTrans87</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="myOrderDetailInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackTrans38</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="checkoutRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blackTrans54</item>
        <item name="android:drawableLeft">@drawable/selector_check</item>
    </style>


    <style name="MyEditText" parent="AppTheme">
        <item name="colorControlNormal">@color/blackTrans12</item>
        <item name="colorControlActivated">@color/blackTrans12</item>
    </style>
    <style name="WhiteBackground" parent="AppTheme">
        <item name="android:windowBackground">@color/color_whole_bg</item>
    </style>

    <declare-styleable name="animET">
        <attr name="hint" format="reference"/>
    </declare-styleable>

    <declare-styleable name="animSpinner">
        <attr name="sp_hint" format="reference"/>
    </declare-styleable>

    <declare-styleable name="pwd">
        <attr name="pwd_hint" format="reference"/>
    </declare-styleable>

    <style name="PopMenuAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

    <style name="errorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_main_pink</item>
        <item name="android:textSize">@dimen/size_font_12</item>
        <item name="android:textColorHint">@color/color_main_pink</item>
    </style>

    <style name="hintAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textSize">@dimen/size_font_12</item>
        <item name="android:textColorHint">@color/color_hint_grey</item>
    </style>

    <style name="menuTextStyle">
        <item name="android:textSize">@dimen/size_font_16</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="mainTabStyle">
        <item name="android:textSize">@dimen/size_font_14</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
