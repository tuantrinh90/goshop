<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/size_16"
            android:layout_height="@dimen/size_16"
            android:contentDescription="@string/app_name"
            android:background="@drawable/ic_fly"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_8"
            android:textSize="@dimen/size_font_14"
            android:text="@string/delivery_info_tips_overseas"
            android:textColor="@color/color_text_hint"
            tools:ignore="RtlSymmetry"
            android:paddingStart="@dimen/size_8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/size_12"
        android:paddingBottom="@dimen/size_18"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/size_16"
            android:layout_height="@dimen/size_16"
            android:contentDescription="@string/app_name"
            android:background="@drawable/ic_money"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_8"
            android:textSize="@dimen/size_font_14"
            android:text="@string/delivery_info_tips_cash"
            android:textColor="@color/color_text_hint"
            tools:ignore="RtlSymmetry"
            android:paddingStart="@dimen/size_8"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingBottom="@dimen/size_16">

        <com.goshop.app.common.view.RobotoBoldTextView
            android:id="@+id/tv_btn_delivery_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_round_black"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_font_14"
            android:paddingLeft="@dimen/size_16"
            android:paddingRight="@dimen/size_16"
            android:paddingTop="@dimen/size_10"
            android:paddingBottom="@dimen/size_10"
            android:text="@string/check"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <com.goshop.app.common.view.RobotoRegularEditText
            android:id="@+id/et_delivery_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_8"
            android:paddingLeft="@dimen/size_12"
            android:paddingRight="@dimen/size_12"
            android:paddingTop="@dimen/size_10"
            android:paddingBottom="@dimen/size_10"
            android:background="@drawable/bg_et_editable"
            android:textSize="@dimen/size_font_14"
            android:hint="@string/enter_delivery"
            android:layout_toLeftOf="@id/tv_btn_delivery_check"
            android:layout_marginEnd="@dimen/size_8"
            android:layout_toStartOf="@id/tv_btn_delivery_check"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/color_divider_grey"/>

</LinearLayout>