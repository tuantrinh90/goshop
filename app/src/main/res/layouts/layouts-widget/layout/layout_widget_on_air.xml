<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingTop="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingBottom="@dimen/size_8">
        <com.goshop.app.common.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/size_font_18"
            android:textColor="@color/color_text_black"
            android:text="@string/on_air"/>
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_btn__on_air_tv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/arrow_right"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_font_14"
            android:text="@string/tv_schedule"
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_16"
        android:paddingBottom="@dimen/size_18"
        android:paddingLeft="@dimen/size_24"
        android:paddingRight="@dimen/size_24"
        android:orientation="horizontal">

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_on_air_ch118"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/size_font_16"
            android:textColor="@drawable/selector_text_black_grey"
            android:text="@string/ch118"
            android:textAllCaps="true"
            android:layout_weight="4"/>
        <ImageView
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginRight="@dimen/size_4"
            android:layout_weight="0.5"
            android:background="@mipmap/ic_home_center_video_line"
        />
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_on_air_ch120"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/size_font_16"
            android:textColor="@drawable/selector_text_black_grey"
            android:text="@string/ch120"
            android:textAllCaps="true"
            android:layout_weight="4"/>
        <ImageView
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginRight="@dimen/size_4"
            android:layout_weight="0.5"
            android:background="@mipmap/ic_home_center_video_line"
        />
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_on_air_ch303"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/size_font_16"
            android:textColor="@drawable/selector_text_black_grey"
            android:text="@string/ch303"
            android:textAllCaps="true"
            android:layout_weight="4"/>
        <ImageView
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginRight="@dimen/size_4"
            android:layout_weight="0.5"
            android:background="@mipmap/ic_home_center_video_line"
        />
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_on_air_fb_live"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/size_font_16"
            android:textColor="@drawable/selector_text_black_grey"
            android:text="@string/fb_live"
            android:textAllCaps="true"
            android:layout_weight="4"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_208"
        android:background="@mipmap/video"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_12"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <ImageView
            android:id="@+id/iv_on_air_display"
            android:layout_width="@dimen/size_92"
            android:layout_height="@dimen/size_92"
            android:background="@mipmap/onair_demo"/>
        <com.goshop.app.common.view.CustomBoldTextView
            android:id="@+id/tv_on_air_display_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_on_air_display"/>

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_on_air_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_on_air_display"
            android:paddingLeft="@dimen/size_12"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_font_14"/>
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_on_air_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_on_air_display"
            android:layout_below="@id/tv_on_air_title"
            android:paddingLeft="@dimen/size_12"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_font_14"/>
        <com.goshop.app.common.view.CustomBoldTextView
            android:id="@+id/tv_on_air_now_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_on_air_old_price"
            android:layout_toRightOf="@id/iv_on_air_display"
            android:paddingLeft="@dimen/size_12"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_font_14"/>

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_btn_buy_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_round_circle"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_on_air_title"
            android:layout_marginTop="@dimen/size_12"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10"
            android:paddingTop="@dimen/size_8"
            android:paddingBottom="@dimen/size_8"
            android:text="@string/buy_now"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_on_air_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_20"
        android:paddingBottom="@dimen/size_20"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:background="@mipmap/ic_chevron_titlebar_down"/>
    </LinearLayout>


</LinearLayout>
