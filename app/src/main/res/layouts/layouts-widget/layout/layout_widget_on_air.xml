<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingTop="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingBottom="@dimen/size_24">
        
        <ImageView
            android:id="@+id/iv_btn_on_air_right"
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:background="@drawable/ic_arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:layout_alignParentEnd="true"/>
        <com.goshop.app.common.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/size_font_18"
            android:textColor="@color/color_text_black"
            android:layout_centerVertical="true"
            android:text="@string/on_air"
            android:layout_alignParentStart="true"/>
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_btn_on_air_tv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_btn_on_air_right"
            android:layout_marginRight="@dimen/size_4"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_font_14"
            android:layout_centerVertical="true"
            android:text="@string/tv_schedule"
            tools:ignore="RelativeOverlap"
            android:layout_toStartOf="@id/iv_btn_on_air_right"
            android:layout_marginEnd="@dimen/size_4"/>
    </RelativeLayout>

    <include
        layout="@layout/layout_channels"/>

    <ImageView
        android:id="@+id/iv_on_air_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_208"
        android:layout_marginTop="@dimen/size_18"
        android:background="@drawable/ic_video"
        android:contentDescription="@string/app_name"
    />

    <RelativeLayout
        android:id="@+id/rl_on_air_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_12"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <ImageView
            android:id="@+id/iv_on_air_display"
            android:layout_width="@dimen/size_92"
            android:layout_height="@dimen/size_92"
            android:background="@drawable/ic_onair_demo"
            android:contentDescription="@string/app_name"/>
        <com.goshop.app.common.view.CustomBoldTextView
            android:id="@+id/tv_on_air_display_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_on_air_display"/>

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_on_air_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_on_air_display"
            android:paddingLeft="@dimen/size_12"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_font_14"
            tools:ignore="RtlSymmetry"
            android:layout_toEndOf="@id/iv_on_air_display"
            android:paddingStart="@dimen/size_12"/>
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_on_air_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_on_air_display"
            android:layout_below="@id/tv_on_air_title"
            android:paddingLeft="@dimen/size_12"
            android:textColor="@color/color_hint_grey"
            android:textSize="@dimen/size_font_14"
            tools:ignore="RtlSymmetry"
            android:layout_toEndOf="@id/iv_on_air_display"
            android:paddingStart="@dimen/size_12"/>
        <com.goshop.app.common.view.CustomBoldTextView
            android:id="@+id/tv_on_air_now_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_on_air_old_price"
            android:layout_toRightOf="@id/iv_on_air_display"
            android:paddingLeft="@dimen/size_12"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_font_14"
            tools:ignore="RtlSymmetry"
            android:layout_toEndOf="@id/iv_on_air_display"
            android:paddingStart="@dimen/size_12"/>

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_btn_buy_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_round_circle"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_on_air_title"
            android:layout_marginTop="@dimen/size_12"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10"
            android:paddingTop="@dimen/size_8"
            android:paddingBottom="@dimen/size_8"
            android:text="@string/buy_now"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_on_air_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_20"
        android:paddingBottom="@dimen/size_20"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:background="@drawable/ic_arrow_turn_down"
            android:contentDescription="@string/app_name"/>
    </LinearLayout>


</LinearLayout>
