<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_sort_item"
    android:background="@drawable/selector_btn_select_grey"
>
    <View
        android:id="@+id/v_sort_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_alignParentTop="true"
        android:background="@color/color_divider_grey"/>
    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_sort_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingTop="@dimen/size_16"
        android:paddingBottom="@dimen/size_16"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:textSize="@dimen/size_font_14"
        android:text="@string/new_arrivals"
        android:textColor="@color/color_text_black"
        android:layout_alignParentStart="true"
        tools:ignore="RtlHardcoded,RtlSymmetry"/>

    <ImageView
        android:id="@+id/iv_sort_select"
        android:layout_width="@dimen/size_20"
        android:layout_height="@dimen/size_20"
        android:layout_marginRight="@dimen/size_16"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_right"
        android:contentDescription="@string/app_name"
        android:layout_alignParentEnd="true"
        tools:ignore="RtlHardcoded"/>
</RelativeLayout>