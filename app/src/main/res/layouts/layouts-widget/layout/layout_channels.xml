<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rg_channels"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size_24"
    android:paddingRight="@dimen/size_24"
    android:orientation="horizontal">

    <com.goshop.app.common.view.CustomRadioButton
        android:id="@+id/rb_ch118"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:checked="true"
        android:button="@null"
        android:gravity="center"
        android:textSize="@dimen/size_font_16"
        android:textColor="@drawable/selector_check_text_black_grey"
        android:text="@string/ch118"
        android:textAllCaps="true"
        android:layout_weight="4"/>
    <ImageView
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_4"
        android:layout_marginRight="@dimen/size_4"
        android:layout_weight="0.5"
        android:background="@mipmap/ic_home_center_video_line"
    />
    <com.goshop.app.common.view.CustomRadioButton
        android:id="@+id/rb_ch120"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:button="@null"
        android:gravity="center"
        android:textSize="@dimen/size_font_16"
        android:textColor="@drawable/selector_check_text_black_grey"
        android:text="@string/ch120"
        android:textAllCaps="true"
        android:layout_weight="4"/>
    <ImageView
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_4"
        android:layout_marginRight="@dimen/size_4"
        android:layout_weight="0.5"
        android:background="@mipmap/ic_home_center_video_line"
    />
    <com.goshop.app.common.view.CustomRadioButton
        android:id="@+id/rb_ch303"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:button="@null"
        android:gravity="center"
        android:textSize="@dimen/size_font_16"
        android:textColor="@drawable/selector_check_text_black_grey"
        android:text="@string/ch303"
        android:textAllCaps="true"
        android:layout_weight="4"/>
    <ImageView
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_4"
        android:layout_marginRight="@dimen/size_4"
        android:layout_weight="0.5"
        android:background="@mipmap/ic_home_center_video_line"
    />
    <com.goshop.app.common.view.CustomRadioButton
        android:id="@+id/rb_fb_live"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:button="@null"
        android:gravity="center"
        android:textSize="@dimen/size_font_16"
        android:textColor="@drawable/selector_check_text_black_grey"
        android:text="@string/fb_live"
        android:textAllCaps="true"
        android:layout_weight="4"/>

</RadioGroup>