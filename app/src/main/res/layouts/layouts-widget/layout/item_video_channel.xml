<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_16"
    android:paddingBottom="@dimen/size_16"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_channel"
        android:layout_width="@dimen/size_8"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:background="@drawable/ic_home_center_video_line"
    />
    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_12"
        android:paddingRight="@dimen/size_12"
        android:gravity="center"
        android:textSize="@dimen/size_font_16"
        android:text="@string/ch120"
        android:textAllCaps="true" />

</LinearLayout>