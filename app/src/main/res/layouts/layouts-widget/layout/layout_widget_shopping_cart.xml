<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_cart_product_thumb"
        android:layout_width="@dimen/size_96"
        android:layout_height="@dimen/size_96"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_bought"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_16"
        android:layout_marginRight="@dimen/size_8"
        android:contentDescription="@string/app_name"
        tools:ignore="RtlHardcoded"/>

    <LinearLayout
        android:id="@+id/ll_cart_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_cart_product_thumb"
        android:layout_marginRight="@dimen/size_12"
        android:paddingLeft="@dimen/size_16"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded,RtlSymmetry">
        <ImageView
            android:layout_width="@dimen/size_12"
            android:layout_height="@dimen/size_24"
            android:src="@drawable/ic_icon_cart_menu"
            android:scaleType="center"
            android:contentDescription="@string/app_name"/>
    </LinearLayout>


    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_cart_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/size_font_14"
        android:layout_toLeftOf="@id/ll_cart_menu"
        android:layout_toRightOf="@id/iv_cart_product_thumb"
        android:layout_alignTop="@id/iv_cart_product_thumb"
        tools:ignore="RtlHardcoded"/>

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_product_cart_attr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_4"
        android:layout_below="@id/tv_cart_product_title"
        android:textColor="@color/color_text_old_grey"
        android:textSize="@dimen/size_font_12"
        android:layout_toLeftOf="@id/ll_cart_menu"
        android:layout_toRightOf="@id/iv_cart_product_thumb"
        tools:ignore="RtlHardcoded"/>

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_product_cart_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_6"
        android:layout_below="@id/tv_product_cart_attr"
        android:textColor="@color/color_text_old_grey"
        android:textSize="@dimen/size_font_12"
        android:layout_toRightOf="@id/iv_cart_product_thumb"
        tools:ignore="RtlHardcoded"/>

    <com.goshop.app.common.view.CustomBoldTextView
        android:id="@+id/tv_product_cart_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_2"
        android:layout_below="@id/tv_product_cart_old"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/size_font_14"
        android:layout_toRightOf="@id/iv_cart_product_thumb"
        tools:ignore="RtlHardcoded"/>

    <com.goshop.app.common.CustomMinusPlusEditText
        android:id="@+id/et_product_cart"
        android:layout_width="@dimen/size_88"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_16"
        android:layout_alignBottom="@id/iv_cart_product_thumb"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_alignParentEnd="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_divider"
        android:layout_below="@id/iv_cart_product_thumb"
        android:background="@color/color_divider_grey"/>

</RelativeLayout>