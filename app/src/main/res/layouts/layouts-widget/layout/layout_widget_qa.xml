<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.goshop.app.common.view.RobotoLightTextView
        android:id="@+id/tv_btn_ask_question"
        android:layout_width="@dimen/size_110"
        android:layout_height="@dimen/size_32"
        android:text="@string/ask_a_question"
        android:textSize="@dimen/size_font_14"
        android:layout_marginRight="@dimen/size_16"
        android:gravity="center"
        android:textColor="@color/color_grayscale_text"
        android:background="@drawable/bg_btn_buy_now"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:ignore="RelativeOverlap"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/size_16"
        android:layout_toLeftOf="@id/tv_btn_ask_question"
        android:orientation="horizontal"
        android:layout_alignParentStart="true">
        <com.goshop.app.common.view.RobotoMediumTextView
            android:id="@+id/tv_question_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_grayscale_text"
            android:textSize="@dimen/size_font_14"
            android:paddingRight="@dimen/size_4"
            tools:ignore="RtlSymmetry"
            android:paddingEnd="@dimen/size_4"/>
        <com.goshop.app.common.view.RobotoLightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/questions"
            android:background="@drawable/bg_right_line"
            android:textColor="@color/color_grayscale_text"
            android:textSize="@dimen/size_font_14"
            android:paddingRight="@dimen/size_8"
            tools:ignore="RtlSymmetry"
            android:paddingEnd="@dimen/size_8"/>
        <com.goshop.app.common.view.RobotoMediumTextView
            android:id="@+id/tv_answers_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8"
            android:textColor="@color/color_grayscale_text"
            android:textSize="@dimen/size_font_14"
            android:paddingRight="@dimen/size_4"
            tools:ignore="RtlSymmetry"
            android:paddingEnd="@dimen/size_4"/>

        <com.goshop.app.common.view.RobotoLightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/questions"
            android:textColor="@color/color_grayscale_text"
            android:textSize="@dimen/size_font_14"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_qa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_btn_ask_question"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_16"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_1_negative"
        android:layout_below="@id/recyclerview_qa">
        <include
            layout="@layout/item_text_more"/>
    </LinearLayout>


</RelativeLayout>