<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
>

    <com.goshop.app.common.view.CustomBoldTextView
        android:id="@+id/tv_pdp_top_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pdp_title"
        android:textColor="@color/color_grayscale_text"
        android:textSize="@dimen/size_font_20"
        android:padding="@dimen/size_16"/>

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_pdp_top_detail_old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:textColor="@color/color_text_hint"
        android:textSize="@dimen/size_font_18"
        tools:ignore="RtlSymmetry"
        android:paddingStart="@dimen/size_16"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_4"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">
        <com.goshop.app.common.view.CustomBoldTextView
            android:id="@+id/tv_pdp_top_detail_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_grayscale_text"
            android:textSize="@dimen/size_font_20"
            android:layout_alignParentStart="true"/>

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_pdp_top_detail_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_pdp_top_detail_now"
            android:layout_alignBottom="@id/tv_pdp_top_detail_now"
            android:paddingLeft="@dimen/size_4"
            android:textColor="@color/color_main_pink"
            android:textSize="@dimen/size_font_14"
            tools:ignore="RtlSymmetry"
            android:layout_toEndOf="@id/tv_pdp_top_detail_now"
            android:paddingStart="@dimen/size_4"/>

        <LinearLayout
            android:id="@+id/ll_pdp_top_detail_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="RelativeOverlap"
            android:layout_alignParentEnd="true">
            <RatingBar
                android:id="@+id/ratingbar_pdp_details"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_30"
                android:isIndicator="true"
                android:progressDrawable="@drawable/bg_rating"
                android:stepSize="1"
                android:rating="5"
                android:numStars="5"/>
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_pdp_top_star_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_hint"
                android:textSize="@dimen/size_font_14"
                android:paddingLeft="@dimen/size_8"
                tools:ignore="RtlSymmetry"
                android:paddingStart="@dimen/size_8"/>
        </LinearLayout>
    </RelativeLayout>


    <com.goshop.app.common.view.CustomBoldItaticTextView
        android:id="@+id/tv_pdp_top_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_hint"
        android:textSize="@dimen/size_font_14"
        android:padding="@dimen/size_16"
    />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/color_divider_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/size_18"
        android:paddingBottom="@dimen/size_16"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <RelativeLayout
            android:id="@+id/rl_pdp_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_round_grey_circle"
            android:layout_marginRight="@dimen/size_4"
            android:layout_marginEnd="@dimen/size_4">

            <ImageView
                android:id="@+id/iv_pdp_color"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_marginLeft="@dimen/size_8"
                android:layout_centerVertical="true"
                android:background="@color/color_corporate_dark_green"
                android:contentDescription="@string/app_name"
                android:layout_marginStart="@dimen/size_8"/>
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_pdp_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_16"
                android:layout_toRightOf="@id/iv_pdp_color"
                android:paddingLeft="@dimen/size_8"
                android:paddingTop="@dimen/size_12"
                android:paddingBottom="@dimen/size_12"
                android:textColor="@color/color_grayscale_text"
                tools:ignore="RelativeOverlap,RtlSymmetry"
                android:layout_toEndOf="@id/iv_pdp_color"
                android:paddingStart="@dimen/size_8"/>
            <ImageView
                android:layout_width="@dimen/size_12"
                android:layout_height="@dimen/size_12"
                android:background="@drawable/ic_right_bottom_triangle"
                android:layout_margin="@dimen/size_4"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/tv_pdp_color"
                android:contentDescription="@string/app_name"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pdp_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_round_grey_circle"
            android:layout_marginLeft="@dimen/size_4"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/size_4">

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_pdp_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_16"
                android:paddingLeft="@dimen/size_8"
                android:paddingTop="@dimen/size_12"
                android:paddingBottom="@dimen/size_12"
                android:textColor="@color/color_grayscale_text"
                tools:ignore="RelativeOverlap,RtlSymmetry"
                android:paddingStart="@dimen/size_8"/>
            <ImageView
                android:layout_width="@dimen/size_12"
                android:layout_height="@dimen/size_12"
                android:background="@drawable/ic_right_bottom_triangle"
                android:layout_margin="@dimen/size_4"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/tv_pdp_size"
                android:contentDescription="@string/app_name"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </LinearLayout>


    <com.goshop.app.common.CustomMinusPlusEditText
        android:id="@+id/mpet_pdp_quantily"
        android:layout_width="@dimen/size_160"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_20"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/color_divider_grey"/>

</LinearLayout>