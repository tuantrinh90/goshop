<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rl_expand_title"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector_bg_expand_pdp_title"
    tools:ignore="Overdraw">

    <View
        android:id="@+id/view_expand_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8"
        android:layout_alignParentTop="true"
        android:background="@drawable/drawable_biger_divider_with_shadow"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_expand_divider"
        android:paddingLeft="@dimen/size_16"
        android:paddingBottom="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/size_24">
        <com.goshop.app.common.view.RobotoMediumTextView
            android:id="@+id/tv_item_title_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/details"
            android:textSize="@dimen/size_font_18"
            android:textColor="@color/color_grayscale_text"/>

        <ImageView
            android:id="@+id/iv_item_title_expand"
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:src="@drawable/selector_image_expand_selected"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


</RelativeLayout>