<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_no_address"
        android:src="@drawable/ic_icon_book_nodata"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_no_address"
        android:scaleType="centerInside"
        android:layout_width="@dimen/size_100"
        android:layout_height="@dimen/size_100"
        android:contentDescription="@string/app_name"/>

    <com.goshop.app.common.view.RobotoRegularTextView
        android:id="@+id/tv_no_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_hint"
        android:layout_marginTop="@dimen/size_12"
        android:layout_centerInParent="true"
        android:text="@string/there_is_no_address_yes"
        android:textSize="@dimen/size_font_16"/>

    <com.goshop.app.common.view.RobotoRegularTextView
        android:id="@+id/tv_add_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_grayscale_secondary"
        android:background="@drawable/bg_btn_wireframe_black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_80"
        android:paddingRight="@dimen/size_23"
        android:paddingEnd="@dimen/size_23"
        android:paddingLeft="@dimen/size_23"
        android:paddingStart="@dimen/size_23"
        android:paddingBottom="@dimen/size_15"
        android:paddingTop="@dimen/size_15"
        android:text="@string/add_now"
        android:textSize="@dimen/size_font_16"/>
</RelativeLayout>