<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:paddingTop="@dimen/size_12">

    <ImageView
        android:id="@+id/iv_video_product_thumb"
        android:layout_width="@dimen/size_93"
        android:layout_height="@dimen/size_93"
        android:layout_marginRight="@dimen/size_12"
        android:contentDescription="@string/app_name"
        android:layout_marginEnd="@dimen/size_12"/>

    <com.goshop.app.common.view.RobotoRegularTextView
        android:id="@+id/tv_video_product_percent"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_21"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@id/iv_video_product_thumb"
        android:textSize="@dimen/size_font_13"
        android:textColor="@android:color/white"
        android:background="@color/color_main_pink"
        android:gravity="left|center_vertical"
        android:layout_alignParentStart="true"/>

    <com.goshop.app.common.view.RobotoLightTextView
        android:id="@+id/tv_video_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_grayscale_text"
        android:textSize="@dimen/size_font_14"
        android:layout_toRightOf="@id/iv_video_product_thumb"
        android:layout_toEndOf="@id/iv_video_product_thumb"/>

    <com.goshop.app.common.view.RobotoLightTextView
        android:id="@+id/tv_video_product_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12"
        android:paddingBottom="@dimen/size_2"
        android:textColor="@color/color_text_hint"
        android:textSize="@dimen/size_font_12"
        android:layout_toRightOf="@id/iv_video_product_thumb"
        android:layout_below="@id/tv_video_product_title"
        android:layout_toEndOf="@id/iv_video_product_thumb"/>

    <com.goshop.app.common.view.RobotoMediumTextView
        android:id="@+id/tv_video_product_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_grayscale_text"
        android:textSize="@dimen/size_font_14"
        android:layout_toRightOf="@id/iv_video_product_thumb"
        android:layout_below="@id/tv_video_product_old"
        android:layout_toEndOf="@id/iv_video_product_thumb"/>

    <com.goshop.app.common.view.RobotoLightTextView
        android:id="@+id/tv_btn_video_product_buy"
        android:layout_width="@dimen/size_83"
        android:layout_height="@dimen/size_32"
        android:layout_marginBottom="@dimen/size_6"
        android:layout_alignBottom="@id/iv_video_product_thumb"
        android:background="@drawable/bg_btn_buy_now"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="@string/buy_now"
        android:textSize="@dimen/size_font_14"
        android:layout_alignParentEnd="true"
        tools:ignore="RelativeOverlap"/>

</RelativeLayout>