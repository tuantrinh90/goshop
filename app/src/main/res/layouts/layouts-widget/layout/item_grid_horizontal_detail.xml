<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_16"
    android:paddingBottom="@dimen/size_16"
    android:paddingLeft="@dimen/size_8"
    android:paddingRight="@dimen/size_8">
    <ImageView
        android:id="@+id/iv_grid_pic"
        android:layout_width="@dimen/size_120"
        android:layout_height="@dimen/size_120"
        android:contentDescription="@string/app_name"/>

    <com.goshop.app.common.view.CustomBoldTextView
        android:id="@+id/tv_grid_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_font_12"
        android:padding="@dimen/size_4"
        android:layout_alignBottom="@id/iv_grid_pic"
        android:background="@color/color_main_pink"/>

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_grid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_18"
        android:layout_alignLeft="@id/iv_grid_pic"
        android:layout_alignRight="@id/iv_grid_pic"
        android:layout_below="@id/iv_grid_pic"
        android:textSize="@dimen/size_font_14"
        android:textColor="@color/color_grayscale_text"
        android:layout_alignStart="@id/iv_grid_pic"
        android:layout_alignEnd="@id/iv_grid_pic"/>

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_grid_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_grid_pic"
        android:layout_alignRight="@id/iv_grid_pic"
        android:layout_below="@id/tv_grid_title"
        android:textSize="@dimen/size_font_12"
        android:textColor="@color/color_text_old_grey"
        android:paddingTop="@dimen/size_6"
        android:layout_alignStart="@id/iv_grid_pic"
        android:layout_alignEnd="@id/iv_grid_pic"/>

    <com.goshop.app.common.view.CustomBoldTextView
        android:id="@+id/tv_grid_now_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_grid_pic"
        android:layout_alignRight="@id/iv_grid_pic"
        android:layout_below="@id/tv_grid_old"
        android:textSize="@dimen/size_font_14"
        android:textColor="@color/color_grayscale_text"
        android:paddingTop="@dimen/size_2"
        android:layout_alignStart="@id/iv_grid_pic"
        android:layout_alignEnd="@id/iv_grid_pic"/>
</RelativeLayout>