<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_12"
    android:orientation="vertical">

    <com.goshop.app.common.view.CustomBoldTextView
        android:id="@+id/tv_pdp_qa_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_font_14"
        android:textColor="@color/color_text_black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_8"
        android:paddingBottom="@dimen/size_12">

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_qa_item_answer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_hint_grey"/>

        <com.goshop.app.common.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_qa_item_answer_count"
            android:paddingLeft="@dimen/size_4"
            android:text="@string/answers"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_hint_grey"/>

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_qa_item_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_hint_grey"/>

        <com.goshop.app.common.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_qa_item_update"
            android:paddingRight="@dimen/size_4"
            android:text="@string/updated_at"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_hint_grey"/>
    </RelativeLayout>
</LinearLayout>