<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_12"
    android:orientation="vertical">

    <com.goshop.app.common.view.RobotoMediumTextView
        android:id="@+id/tv_pdp_qa_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_font_14"
        android:textColor="@color/color_grayscale_text"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_8"
        android:paddingBottom="@dimen/size_12">

        <com.goshop.app.common.view.RobotoRegularTextView
            android:id="@+id/tv_qa_item_answer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_text_hint"
            android:layout_alignParentStart="true"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_qa_item_answer_count"
            android:paddingLeft="@dimen/size_4"
            android:text="@string/answers"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_text_hint"
            tools:ignore="RtlSymmetry"
            android:layout_toEndOf="@id/tv_qa_item_answer_count"
            android:paddingStart="@dimen/size_4"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:id="@+id/tv_qa_item_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_text_hint"
            android:layout_alignParentEnd="true"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_qa_item_update"
            android:paddingRight="@dimen/size_4"
            android:text="@string/updated_at"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_text_hint"
            tools:ignore="RelativeOverlap,RtlSymmetry"
            android:layout_toStartOf="@id/tv_qa_item_update"
            android:paddingEnd="@dimen/size_4"/>
    </RelativeLayout>
</LinearLayout>