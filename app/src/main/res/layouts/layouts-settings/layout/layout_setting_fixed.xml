<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar_img_text_img_close"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_litte_grey">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.goshop.app.common.view.CustomBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingTop="@dimen/size_16"
                    android:paddingRight="@dimen/size_16"
                    android:paddingBottom="@dimen/size_8"
                    android:background="@android:color/white"
                    android:text="@string/newsletter_subscription"
                    android:textColor="@color/color_text_hint"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_16"
                    android:background="@drawable/bg_bottom_line">

                    <Switch
                        android:id="@+id/switch_setting_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/switch_thumb_selector"
                        android:track="@drawable/switch_track_selector"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/size_20"
                        android:text="@string/settings_email"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/size_font_16"
                        android:layout_toLeftOf="@id/switch_setting_email"
                        android:layout_toStartOf="@id/switch_setting_email"
                        tools:ignore="RtlSymmetry"
                        android:paddingEnd="@dimen/size_20"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_16"
                    android:background="@drawable/bg_bottom_line">

                    <Switch
                        android:id="@+id/switch_setting_sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/switch_thumb_selector"
                        android:track="@drawable/switch_track_selector"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/size_20"
                        android:text="@string/settings_sms"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/size_font_16"
                        android:layout_toLeftOf="@id/switch_setting_sms"
                        android:layout_toStartOf="@id/switch_setting_sms"
                        tools:ignore="RtlSymmetry"
                        android:paddingEnd="@dimen/size_20"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_16"
                    android:background="@drawable/bg_bottom_line">

                    <Switch
                        android:id="@+id/switch_setting_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/switch_thumb_selector"
                        android:track="@drawable/switch_track_selector"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/size_20"
                        android:text="@string/settings_notification"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/size_font_16"
                        android:layout_toLeftOf="@id/switch_setting_notification"
                        android:layout_toStartOf="@id/switch_setting_notification"
                        tools:ignore="RtlSymmetry"
                        android:paddingEnd="@dimen/size_20"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_16"
                    android:background="@drawable/bg_bottom_line">

                    <Switch
                        android:id="@+id/switch_setting_market"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/switch_thumb_selector"
                        android:track="@drawable/switch_track_selector"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/size_20"
                        android:text="@string/sms_marketing_consent"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/size_font_16"
                        android:layout_toLeftOf="@id/switch_setting_market"
                        android:layout_toStartOf="@id/switch_setting_market"
                        tools:ignore="RtlSymmetry"
                        android:paddingEnd="@dimen/size_20"/>

                </RelativeLayout>

                <View
                    android:id="@+id/view_brand_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_8"
                    android:background="@drawable/bg_top_bottom_shadow_grey"/>

                <com.goshop.app.common.view.CustomBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:textSize="@dimen/size_font_14"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingTop="@dimen/size_16"
                    android:paddingRight="@dimen/size_16"
                    android:paddingBottom="@dimen/size_8"
                    android:text="@string/account"
                    android:textColor="@color/color_text_hint"/>

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_setting_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bottom_line"
                    android:padding="@dimen/size_16"
                    android:paddingRight="@dimen/size_20"
                    android:text="@string/change_password"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/size_font_16"
                    tools:ignore="RtlSymmetry"
                    android:paddingEnd="@dimen/size_20"/>

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_setting_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bottom_line"
                    android:padding="@dimen/size_16"
                    android:paddingRight="@dimen/size_20"
                    android:text="@string/logout"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/size_font_16"
                    tools:ignore="RtlSymmetry"
                    android:paddingEnd="@dimen/size_20"/>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>


</LinearLayout>