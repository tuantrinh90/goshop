<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <include
        layout="@layout/toolbar_image_title_image"/>
    <View style="@style/homeWrapWidthLine"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
        <LinearLayout
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.goshop.app.common.view.CustomBoldTextView
                style="@style/myOrderDetailTitle"
                android:text="@string/my_orders_information"
            />

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_number"
                style="@style/myOrderDetailInfo"
                android:text="@string/my_orders_title_number"
            />
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_status"
                android:text="@string/my_orders_title_status"
                style="@style/myOrderDetailInfo"/>

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_track"
                android:text="@string/my_orders_placed_at"
                style="@style/myOrderDetailInfo"/>

            <com.goshop.app.common.view.CustomBoldTextView
                style="@style/myOrderDetailTitle"
                android:text="@string/my_orders_shipping_address"
            />

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_person_name"
                style="@style/myOrderDetailInfo"
                android:text="@string/my_orders_title_number"
            />
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_address"
                android:text="@string/my_orders_title_status"
                style="@style/myOrderDetailInfo"/>

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_city_and_postcode"
                android:text="@string/my_orders_placed_at"
                style="@style/myOrderDetailInfo"/>

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_country"
                android:text="@string/my_orders_placed_at"
                style="@style/myOrderDetailInfo"/>

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_tel"
                android:text="@string/my_orders_placed_at"
                style="@style/myOrderDetailInfo"/>

            <com.goshop.app.common.view.CustomBoldTextView
                style="@style/myOrderDetailTitle"
                android:text="@string/my_orders_payment_method"
            />

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_pay_method"
                android:text="@string/my_orders_placed_at"
                style="@style/myOrderDetailInfo"/>

            <com.goshop.app.common.view.CustomBoldTextView
                style="@style/myOrderDetailTitle"
                android:text="@string/my_orders_items"
            />
            <View style="@style/homeWrapWidthLine"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_order_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <com.goshop.app.common.view.CustomTextView
                        android:text="@string/my_orders_sub_total"
                        style="@style/homeItemProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <com.goshop.app.common.view.CustomTextView
                        android:id="@+id/tv_order_detail_sub_total"
                        android:text="@string/home_item_test_product_price"
                        android:layout_alignParentRight="true"
                        style="@style/homeItemProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <com.goshop.app.common.view.CustomTextView
                        android:text="@string/my_orders_rounding_amout"
                        style="@style/homeItemProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <com.goshop.app.common.view.CustomTextView
                        android:id="@+id/tv_order_detail_rounding_amout"
                        android:text="@string/home_item_test_product_price"
                        android:layout_alignParentRight="true"
                        style="@style/homeItemProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <com.goshop.app.common.view.CustomTextView
                        android:text="@string/my_orders_shipping"
                        style="@style/homeItemProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <com.goshop.app.common.view.CustomTextView
                        android:id="@+id/tv_order_detail_shipping"
                        android:text="@string/home_item_test_product_price"
                        android:layout_alignParentRight="true"
                        style="@style/homeItemProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <com.goshop.app.common.view.CustomTextView
                        android:text="@string/my_orders_discount"
                        style="@style/homeItemProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <com.goshop.app.common.view.CustomTextView
                        android:id="@+id/tv_order_detail_discount"
                        android:text="@string/home_item_test_product_price"
                        android:layout_alignParentRight="true"
                        style="@style/homeItemProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <com.goshop.app.common.view.CustomTextView
                        android:text="@string/my_orders_total_price"
                        style="@style/homeItemProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <com.goshop.app.common.view.CustomBoldTextView
                        android:id="@+id/tv_order_detail_total"
                        android:text="@string/home_item_test_product_price"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="@dimen/size_0"
                        android:paddingRight="@dimen/size_0"
                        android:textSize="16sp"
                        android:textColor="@color/blackTrans87"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
