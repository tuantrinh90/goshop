<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/windowMargin"
        android:layout_height="55dp">
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_order_id"
            android:text="#123019223"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/btn_order_track"
            android:text="@string/my_orders_track"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            style="@style/btnStyle"
            android:layout_alignParentRight="true"
        />
    </RelativeLayout>

    <RelativeLayout 
        android:background="@color/blackTrans12"
        android:layout_width="match_parent"
        style="@style/windowMargin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:layout_height="113dp">
        <ImageView
            android:id="@+id/iv_order_product_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/home_padding"
            android:background="@drawable/ic_launcher_background"
        />
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_order_item_price"
            android:layout_alignParentRight="true"
            android:text="@string/home_item_test_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_order_item_title"
            android:layout_toRightOf="@id/iv_order_product_icon"
            android:layout_toLeftOf="@id/tv_order_item_price"
            android:text="@string/home_item_test_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_order_item_color"
            android:layout_marginTop="@dimen/size_6"
            android:layout_below="@id/tv_order_item_title"
            android:layout_toRightOf="@id/iv_order_product_icon"
            android:layout_toLeftOf="@id/tv_order_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color: Blue"/>
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_order_item_size"
            android:layout_below="@id/tv_order_item_color"
            android:layout_marginTop="@dimen/size_2"
            android:layout_toRightOf="@id/iv_order_product_icon"
            android:layout_toLeftOf="@id/tv_order_item_price"
            android:layout_width="match_parent"
            android:text="Size: M"
            android:layout_height="wrap_content"/>
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_order_item_amount"
            android:text="* 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</LinearLayout>