<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar_img_text_img_close"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.goshop.app.common.view.CustomBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:paddingTop="@dimen/size_20"
                android:paddingBottom="@dimen/size_10"
                android:text="@string/my_orders_information"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_18"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:orientation="horizontal">
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_grayscale_text"
                    android:text="@string/order_number"/>

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_order_detail_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_4"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_grayscale_text"
                    android:text="@string/order_number"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:paddingTop="@dimen/size_8"
                android:orientation="horizontal">
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_grayscale_text"
                    android:text="@string/order_status"/>

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_order_detail_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_4"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_grayscale_text"
                    android:text="@string/order_number"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:paddingTop="@dimen/size_8"
                android:orientation="horizontal">
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_grayscale_text"
                    android:text="@string/placed_at"/>

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_order_detail_order_placed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_4"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_grayscale_text"
                    android:text="@string/order_number"/>

            </LinearLayout>


            <com.goshop.app.common.view.CustomBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:paddingTop="@dimen/size_20"
                android:paddingBottom="@dimen/size_10"
                android:text="@string/my_orders_shipping_address"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_18"
            />
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/order_number"/>
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/order_number"/>
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/order_number"/>
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/order_number"/>
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/order_number"/>

            <com.goshop.app.common.view.CustomBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:paddingTop="@dimen/size_20"
                android:paddingBottom="@dimen/size_10"
                android:text="@string/my_orders_payment_method"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_18"
            />

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_order_detail_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/order_number"/>
            <com.goshop.app.common.view.CustomBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:paddingTop="@dimen/size_20"
                android:paddingBottom="@dimen/size_10"
                android:background="@drawable/bg_bottom_line"
                android:text="@string/items"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_18"
            />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_order_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:layout_marginTop="@dimen/size_20">

                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:text="@string/sub_total"
                    android:textColor="@color/color_grayscale_text"
                    android:gravity="start"/>

                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:text="@string/demo_cart_price1"
                    android:textColor="@color/color_grayscale_text"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_8">

                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:text="@string/rounding_amount"
                    android:textColor="@color/color_grayscale_text"
                    android:gravity="start"/>

                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:text="@string/demo_cart_price1"
                    android:textColor="@color/color_grayscale_text"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:layout_marginTop="@dimen/size_8">

                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:text="@string/shipping"
                    android:textColor="@color/color_grayscale_text"
                    android:gravity="start"/>

                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:text="@string/demo_cart_price1"
                    android:textColor="@color/color_grayscale_text"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_8">

                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:text="@string/disscount"
                    android:textColor="@color/color_grayscale_text"
                    android:gravity="start"/>

                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:text="@string/demo_cart_price2"
                    android:textColor="@color/color_grayscale_text"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:paddingBottom="@dimen/size_20"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_8">

                <com.goshop.app.common.view.CustomBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_18"
                    android:text="@string/total_incl_gst"
                    android:textColor="@color/color_text_black"
                    android:gravity="start"/>

                <com.goshop.app.common.view.CustomBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_18"
                    android:text="@string/demo_cart_price3"
                    android:textColor="@color/color_grayscale_text"
                    android:gravity="end"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10"
                android:background="@drawable/bg_top_shadow_white">
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_order_detail_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/drawable_black_circle"
                    android:paddingTop="@dimen/size_8"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingLeft="@dimen/size_12"
                    android:paddingRight="@dimen/size_12"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:text="@string/cancel"/>
            </RelativeLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>