<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar_img_text_img_close"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.goshop.app.common.view.RobotoMediumTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingTop="@dimen/size_16"
                        android:paddingBottom="@dimen/size_10"
                        android:text="@string/my_orders_information"
                        android:textColor="@color/color_black_light"
                        android:textSize="@dimen/size_font_20"
                    />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:orientation="horizontal">
                        <com.goshop.app.common.view.RobotoLightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_16"
                            android:textColor="@color/color_black_light"
                            android:text="@string/order_number"/>

                        <com.goshop.app.common.view.RobotoLightTextView
                            android:id="@+id/tv_order_detail_order_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/size_4"
                            android:textSize="@dimen/size_font_16"
                            android:textColor="@color/color_black_light"
                            android:text="@string/order_number"
                            tools:ignore="RtlHardcoded,RtlSymmetry"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingTop="@dimen/size_4"
                        android:orientation="horizontal">
                        <com.goshop.app.common.view.RobotoLightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_16"
                            android:textColor="@color/color_black_light"
                            android:text="@string/order_status"/>

                        <com.goshop.app.common.view.RobotoLightTextView
                            android:id="@+id/tv_order_detail_order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/size_4"
                            android:textSize="@dimen/size_font_16"
                            android:textColor="@color/color_black_light"
                            android:text="@string/order_number"
                            tools:ignore="RtlHardcoded,RtlSymmetry"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingTop="@dimen/size_4"
                        android:paddingBottom="@dimen/size_16"
                        android:orientation="horizontal">
                        <com.goshop.app.common.view.RobotoLightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_16"
                            android:textColor="@color/color_grayscale_text"
                            android:text="@string/placed_at"/>

                        <com.goshop.app.common.view.RobotoLightTextView
                            android:id="@+id/tv_order_detail_order_placed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/size_4"
                            android:textSize="@dimen/size_font_16"
                            android:textColor="@color/color_grayscale_text"
                            android:text="@string/order_number"
                            tools:ignore="RtlHardcoded,RtlSymmetry"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_8"
                        android:background="@drawable/drawable_biger_divider_with_shadow"/>


                    <com.goshop.app.common.view.RobotoMediumTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingTop="@dimen/size_18"
                        android:paddingBottom="@dimen/size_14"
                        android:text="@string/my_orders_shipping_address"
                        android:textColor="@color/color_black_light"
                        android:textSize="@dimen/size_font_20"
                    />
                    <com.goshop.app.common.view.RobotoLightTextView
                        android:id="@+id/tv_order_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:textSize="@dimen/size_font_16"
                        android:textColor="@color/color_black_light"
                        android:text="@string/order_number"/>
                    <com.goshop.app.common.view.RobotoLightTextView
                        android:id="@+id/tv_order_detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingTop="@dimen/size_2"
                        android:textSize="@dimen/size_font_16"
                        android:textColor="@color/color_black_light"
                        android:text="@string/order_number"/>
                    <com.goshop.app.common.view.RobotoLightTextView
                        android:id="@+id/tv_order_detail_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingTop="@dimen/size_2"
                        android:textSize="@dimen/size_font_16"
                        android:textColor="@color/color_black_light"
                        android:text="@string/order_number"/>
                    <com.goshop.app.common.view.RobotoLightTextView
                        android:id="@+id/tv_order_detail_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingTop="@dimen/size_2"
                        android:textSize="@dimen/size_font_16"
                        android:textColor="@color/color_black_light"
                        android:text="@string/order_number"/>
                    <com.goshop.app.common.view.RobotoLightTextView
                        android:id="@+id/tv_order_detail_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingTop="@dimen/size_2"
                        android:paddingBottom="@dimen/size_16"
                        android:textSize="@dimen/size_font_16"
                        android:textColor="@color/color_black_light"
                        android:text="@string/order_number"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_8"
                        android:background="@drawable/drawable_biger_divider_with_shadow"/>

                    <com.goshop.app.common.view.RobotoMediumTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingTop="@dimen/size_18"
                        android:paddingBottom="@dimen/size_14"
                        android:text="@string/my_orders_payment_method"
                        android:textColor="@color/color_black_light"
                        android:textSize="@dimen/size_font_18"
                    />

                    <com.goshop.app.common.view.RobotoLightTextView
                        android:id="@+id/tv_order_detail_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingBottom="@dimen/size_16"
                        android:textSize="@dimen/size_font_16"
                        android:textColor="@color/color_black_light"
                        android:text="@string/order_number"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_8"
                        android:background="@drawable/drawable_biger_divider_with_shadow"/>
                    <com.goshop.app.common.view.RobotoMediumTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingTop="@dimen/size_18"
                        android:paddingBottom="@dimen/size_16"
                        android:background="@drawable/bg_bottom_line"
                        android:text="@string/items"
                        android:textColor="@color/color_black_light"
                        android:textSize="@dimen/size_font_20"
                    />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_order_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:paddingBottom="@dimen/size_16"
                        tools:targetApi="lollipop"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_8"
                        android:background="@drawable/drawable_biger_divider_with_shadow"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_22">

                        <com.goshop.app.common.view.RobotoLightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_14"
                            android:text="@string/sub_total"
                            android:textColor="@color/color_black_light"
                            android:gravity="start"/>

                        <com.goshop.app.common.view.RobotoLightTextView
                            android:id="@+id/tv_order_sub_total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_14"
                            android:text="@string/demo_cart_price1"
                            android:textColor="@color/color_black_light"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_8">

                        <com.goshop.app.common.view.RobotoLightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_14"
                            android:text="@string/shipping_fee"
                            android:textColor="@color/color_black_light"
                            android:gravity="start"/>

                        <com.goshop.app.common.view.RobotoLightTextView
                            android:id="@+id/tv_order_shipping"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_14"
                            android:text="@string/demo_cart_price1"
                            android:textColor="@color/color_black_light"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/size_8">

                        <com.goshop.app.common.view.RobotoLightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_14"
                            android:text="@string/disscount"
                            android:textColor="@color/color_black_light"
                            android:gravity="start"/>

                        <com.goshop.app.common.view.RobotoLightTextView
                            android:id="@+id/tv_order_disscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_14"
                            android:text="@string/demo_cart_price2"
                            android:textColor="@color/color_black_light"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/size_8">

                        <com.goshop.app.common.view.RobotoLightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_14"
                            android:text="@string/egift_card"
                            android:textColor="@color/color_black_light"
                            android:gravity="start"/>

                        <com.goshop.app.common.view.RobotoLightTextView
                            android:id="@+id/tv_order_egift_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_14"
                            android:text="@string/demo_cart_price2"
                            android:textColor="@color/color_black_light"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/size_8">

                        <com.goshop.app.common.view.RobotoLightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_14"
                            android:text="@string/go_shop_points_num"
                            android:textColor="@color/color_black_light"
                            android:gravity="start"/>

                        <com.goshop.app.common.view.RobotoLightTextView
                            android:id="@+id/tv_order_go_shop_points"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_14"
                            android:text="@string/demo_cart_price2"
                            android:textColor="@color/color_black_light"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingBottom="@dimen/size_20"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/size_6">

                        <com.goshop.app.common.view.RobotoMediumTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_18"
                            android:text="@string/total_incl_gst"
                            android:textColor="@color/color_black_light"
                            android:gravity="start"/>

                        <com.goshop.app.common.view.RobotoMediumTextView
                            android:id="@+id/tv_order_total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_18"
                            android:text="@string/demo_cart_price3"
                            android:textColor="@color/color_main_pink"
                            android:gravity="end"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_16"
                        android:background="@drawable/bg_top_shadow_white">
                        <com.goshop.app.common.view.RobotoRegularTextView
                            android:id="@+id/tv_order_detail_cancel"
                            android:layout_width="@dimen/size_73"
                            android:layout_height="@dimen/size_32"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/bg_btn_buy_now"
                            android:gravity="center"
                            android:textColor="@color/color_grayscale_text"
                            android:textSize="@dimen/size_font_14"
                            android:text="@string/cancel"
                            tools:ignore="RtlHardcoded"/>
                    </RelativeLayout>


                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_connection_break"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/layout_connection_break"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_4"
            android:background="@drawable/bg_navigation_bar_shadow"/>
    </FrameLayout>



</LinearLayout>