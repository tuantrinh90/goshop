<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--order number and status-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view_top_interspace"
            android:layout_height="12dp"
            style="@style/homeWrapWidthLine"
        />
        <com.goshop.app.common.view.RobotoRegularTextView
            android:id="@+id/tv_order_num"
            android:text="@string/my_orders_title_number"
            style="@style/homeItemProductName"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:id="@+id/tv_order_status"
            style="@style/homeItemProductName"
            android:text="@string/my_orders_title_status"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View style="@style/homeWrapWidthLine"
        />
    </LinearLayout>
</LinearLayout>