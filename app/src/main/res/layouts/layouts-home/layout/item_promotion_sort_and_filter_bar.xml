<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_top_condition_bar"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <LinearLayout
        android:id="@+id/ll_promotion_filter"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp">
        <ImageView
            android:background="@mipmap/ic_launcher"
            android:layout_marginRight="3dp"
            android:layout_gravity="center"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:contentDescription="@string/app_name"
            android:layout_marginEnd="3dp"/>
        <com.goshop.app.common.view.RobotoRegularTextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/promotion_filter" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_promotion_new_arrivals"
        android:layout_toLeftOf="@id/ll_promotion_filter"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/ll_promotion_filter"
        android:layout_marginEnd="10dp">
        <ImageView
            android:background="@mipmap/ic_launcher"
            android:layout_marginRight="3dp"
            android:layout_gravity="center"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:contentDescription="@string/app_name"
            android:layout_marginEnd="3dp"/>
        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_marginRight="@dimen/home_padding"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/promotion_new_arrivals"
            android:layout_marginEnd="@dimen/home_padding"/>
    </LinearLayout>
    <View
        style="@style/homeWrapWidthLine"
        android:layout_alignParentBottom="true"
    />
    <View
        style="@style/homeWrapWidthLine"
        android:layout_alignParentTop="true"
    />

</RelativeLayout>