<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/toolbar_slide_menu"/>

    <com.goshop.app.common.view.RobotoMediumTabLayout
        android:id="@+id/tablayout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tab_line"
        app:tabPaddingStart="@dimen/size_12"
        app:tabPaddingEnd="@dimen/size_12"
        app:tabMode="scrollable"
        app:tabTextColor="@color/color_text_hint"
        app:tabSelectedTextColor="@color/color_grayscale_text"
        app:tabIndicatorColor="@color/color_grayscale_text"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
