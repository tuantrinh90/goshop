<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">
    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_home_bottom_slide_title"
        android:text="trending now"
        android:textSize="22sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/home_bottom_slide_title_margin_top_and_bottom"
        android:layout_marginBottom="@dimen/home_bottom_slide_title_margin_top_and_bottom"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/color_grayscale_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        android:layout_marginStart="@dimen/activity_horizontal_margin"/>
</android.support.v7.widget.CardView>