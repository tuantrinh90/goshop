<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_16"
        android:orientation="vertical">
        <include
            layout="@layout/layout_channels"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_8"
            android:paddingLeft="@dimen/size_16"
            android:paddingRight="@dimen/size_16"
            android:paddingBottom="@dimen/size_16"
            android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/size_8"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_text_black"
                    android:text="12"
                    tools:ignore="HardcodedText"/>
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/size_8"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_text_black"
                    android:text="13"
                    tools:ignore="HardcodedText"/>
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/size_8"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_text_black"
                    android:text="14"
                    tools:ignore="HardcodedText"/>
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/size_8"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_text_black"
                    android:text="15"
                    tools:ignore="HardcodedText"/>

                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/size_8"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_main_pink"
                    android:text="16"
                    tools:ignore="HardcodedText"/>
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/size_8"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_text_black"
                    android:text="17"
                    tools:ignore="HardcodedText"/>
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/size_8"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_text_black"
                    android:text="18"
                    tools:ignore="HardcodedText"/>
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/size_8"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_text_black"
                    android:text="19"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_14"
                    android:textColor="@color/color_text_black"
                    android:text="MON"
                    tools:ignore="HardcodedText"/>
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_14"
                    android:textColor="@color/color_text_black"
                    android:text="TUE"
                    tools:ignore="HardcodedText"/>
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_14"
                    android:textColor="@color/color_text_black"
                    android:text="WED"
                    tools:ignore="HardcodedText"/>
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_14"
                    android:textColor="@color/color_text_black"
                    android:text="THU"
                    tools:ignore="HardcodedText"/>

                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_14"
                    android:textColor="@color/color_main_pink"
                    android:text="FRI"
                    tools:ignore="HardcodedText"/>
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_14"
                    android:textColor="@color/color_text_black"
                    android:text="SAT"
                    tools:ignore="HardcodedText"/>
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_14"
                    android:textColor="@color/color_text_black"
                    android:text="SUN"
                    tools:ignore="HardcodedText"/>
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/size_font_14"
                    android:textColor="@color/color_text_black"
                    android:text="MON"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/color_divider_grey"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_video_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_alignParentRight="true"
                tools:targetApi="lollipop"
                android:layout_alignParentEnd="true"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_video_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_toLeftOf="@id/recyclerview_video_right"
                tools:targetApi="lollipop"
                android:layout_toStartOf="@id/recyclerview_video_right"/>

        </RelativeLayout>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>

