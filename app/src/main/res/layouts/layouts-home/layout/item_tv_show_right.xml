<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/size_104"
    android:layout_height="@dimen/size_106"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/size_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_tv_show_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:background="@drawable/ic_bought"/>

        <com.goshop.app.common.view.RobotoBoldTextView
            android:id="@+id/tv_tv_show_right_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_font_16"
            android:padding="@dimen/size_8"
            android:layout_alignParentBottom="true"
            android:gravity="left"
            tools:ignore="RtlHardcoded"/>

        <ImageView
            android:id="@+id/iv_tvshow_right_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:background="@drawable/selector_tvshow_right"/>

    </RelativeLayout>


</RelativeLayout>