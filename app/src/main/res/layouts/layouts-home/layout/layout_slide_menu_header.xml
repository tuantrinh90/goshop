<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_150"
    android:background="@drawable/ic_icon_slide_menu_bg"
    android:padding="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="bottom">

    <com.goshop.app.common.view.RobotoBoldTextView
        android:id="@+id/tv_slide_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_login"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_font_18"
        android:layout_marginBottom="@dimen/size_42"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:id="@+id/ll_slide_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/size_8"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_slide_user"
            android:layout_width="@dimen/size_58"
            android:layout_height="@dimen/size_58"
            android:contentDescription="@string/app_name"
            android:background="@drawable/ic_icon_user_default"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:id="@+id/tv_slide_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_10"
            android:textSize="@dimen/size_font_14"
            android:textColor="@android:color/white"
            android:text="@string/hey_user"/>
    </LinearLayout>


</RelativeLayout>
