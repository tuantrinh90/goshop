<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_126"
    android:background="@drawable/ic_icon_slide_menu_bg"
    android:gravity="bottom">

    <com.goshop.app.common.view.RobotoMediumTextView
        android:id="@+id/tv_slide_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_login"
        android:paddingLeft="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_58"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_font_18"/>

    <RelativeLayout
        android:id="@+id/rl_slide_user_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size_58"
        android:paddingLeft="@dimen/size_16">


        <com.goshop.app.common.view.RobotoMediumTextView
            android:id="@+id/tv_slide_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_8"
            android:textSize="@dimen/size_font_18"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:text="@string/hey_user"/>

    </RelativeLayout>


</RelativeLayout>
