<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_brand_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8"
        android:background="@drawable/drawable_biger_divider_with_shadow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/size_16"
        android:paddingLeft="@dimen/size_16"
        android:paddingBottom="@dimen/size_16"
        android:paddingTop="@dimen/size_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_brands_logo"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_20"
            android:background="@drawable/ic_samsung_logo"
            android:contentDescription="@string/app_name"/>

        <com.goshop.app.common.view.RobotoMediumTextView
            android:id="@+id/tv_brands_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20"
            android:paddingLeft="@dimen/size_12"
            android:text="@string/samsung"
            android:textSize="@dimen/size_font_16"
            android:textColor="@color/color_black_light"
            android:textAllCaps="true"
            tools:ignore="RtlSymmetry"
            android:paddingStart="@dimen/size_12"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_brands_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_128"
        android:contentDescription="@string/app_name"
        android:background="@drawable/ic_samsung_detail"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_16"
        android:paddingBottom="@dimen/size_20"
        android:paddingLeft="@dimen/size_12"
        android:paddingRight="@dimen/size_12"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_brands_thumb_first"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_76"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginRight="@dimen/size_4"
            android:contentDescription="@string/app_name"
            android:background="@drawable/ic_samsung_thumb1"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_brands_thumb_second"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_76"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginRight="@dimen/size_4"
            android:contentDescription="@string/app_name"
            android:background="@drawable/ic_samsung_thumb2"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_brands_thumb_third"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_76"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginRight="@dimen/size_4"
            android:contentDescription="@string/app_name"
            android:background="@drawable/ic_samsung_thumb3"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_brands_thumb_four"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_76"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginRight="@dimen/size_4"
            android:contentDescription="@string/app_name"
            android:background="@drawable/ic_samsung_thumb3"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>