<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_imagetitle_image"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <LinearLayout
                    android:id="@+id/ll_promotion_filter"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@mipmap/ic_launcher"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center"
                        android:layout_width="11dp"
                        android:layout_height="11dp"/>
                    <com.goshop.app.common.view.CustomTextView
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/promotion_filter"
                    />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_promotion_new_arrivals"
                    android:layout_toLeftOf="@id/ll_promotion_filter"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@mipmap/ic_launcher"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center"
                        android:layout_width="11dp"
                        android:layout_height="11dp"/>
                    <com.goshop.app.common.view.CustomTextView
                        android:layout_marginRight="@dimen/home_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/promotion_new_arrivals"
                    />
                </LinearLayout>


            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_search_content_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>