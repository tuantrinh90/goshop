<?xml version="1.0" encoding="utf-8"?>
<!--top 4 category-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/grey_interval"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_top_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/home_padding"
        app:cardElevation="1dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/white"
    >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:baselineAligned="false">
            <LinearLayout
                android:id="@+id/ll_home_top_category_category"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/home_category_image_w_and_h"
                    android:layout_height="@dimen/home_category_image_w_and_h"
                    android:contentDescription="@string/app_name"
                    android:background="@drawable/ic_home_category"
                />
                <com.goshop.app.common.view.CustomTextView
                    style="@style/homeTopCategoryText"
                    android:text="@string/home_second_category"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_home_top_category_tv_shows"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/home_category_image_w_and_h"
                    android:layout_height="@dimen/home_category_image_w_and_h"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:background="@drawable/ic_home_tv_show"
                />
                <com.goshop.app.common.view.CustomTextView
                    style="@style/homeTopCategoryText"
                    android:text="@string/home_second_tv_shows"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_home_top_category_brands"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/home_category_image_w_and_h"
                    android:layout_height="@dimen/home_category_image_w_and_h"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:background="@drawable/ic_home_brands"
                />
                <com.goshop.app.common.view.CustomTextView
                    style="@style/homeTopCategoryText"
                    android:text="@string/home_second_brand"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_home_top_category_gift_card"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/home_category_image_w_and_h"
                    android:layout_height="@dimen/home_category_image_w_and_h"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:background="@drawable/ic_home_gifts"
                />
                <com.goshop.app.common.view.CustomTextView
                    style="@style/homeTopCategoryText"
                    android:text="@string/home_second_egift_cards"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>