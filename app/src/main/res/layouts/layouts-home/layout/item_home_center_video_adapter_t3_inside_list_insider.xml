<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_center_video_item_image_w_and_h"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/white"
    >
        <RelativeLayout
            android:layout_width="@dimen/home_center_video_item_image_w_and_h"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_center_video_list_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@mipmap/ic_launcher"
            />
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_home_home_item_sale_symbol"
                style="@style/homeItemTextSaleSymbol"
            />

        </RelativeLayout>


        <RelativeLayout
            android:layout_weight="1"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_video_list_name"
                android:text="@string/home_item_test_product_name"
                style="@style/homeItemProductName"/>
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_video_last_old_price"
                android:layout_below="@id/tv_video_list_name"
                android:layout_marginTop="@dimen/home_list_item_main_and_sub_title_margin"
                android:text="@string/home_item_test_product_price"
                style="@style/homeItemProductOldPrice"/>
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_video_list_price"
                android:layout_below="@id/tv_video_last_old_price"
                android:text="@string/home_item_test_product_price"
                style="@style/homeItemProductPrice"/>
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_video_item_buy_now"
                android:layout_width="88dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textSize="14sp"
                android:text="@string/home_video_item_buy_now"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/big_button_style_config"
                android:textColor="@color/blackTrans87"
            />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        style="@style/homeWrapWidthLine"/>
</RelativeLayout>