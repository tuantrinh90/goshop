<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_whole_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8"
        android:background="@drawable/drawable_biger_divider_with_shadow"/>

    <ImageView
        android:id="@+id/iv_single_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_168"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"/>


</LinearLayout>