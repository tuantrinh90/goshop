<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/home_bottom_slide_item_width"
    android:layout_height="@dimen/home_bottom_slide_item_height">

    <RelativeLayout
        android:id="@+id/rl_item_icon_root"
        android:layout_width="@dimen/home_bottom_slide_item_external_image_w_and_h"
        android:layout_height="@dimen/home_bottom_slide_item_external_image_w_and_h">
        <RelativeLayout
            android:layout_margin="@dimen/home_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="@dimen/home_bottom_slide_item_image_w_and_h"
                android:layout_height="@dimen/home_bottom_slide_item_image_w_and_h">
                <ImageView
                    android:id="@+id/iv_home_bottom_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/app_name"
                />
                <ImageView
                    android:id="@+id/iv_home_item_tv_symbol"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:contentDescription="@string/app_name"
                    android:background="@mipmap/ic_launcher"
                />
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_sale_symbol"
                    style="@style/homeItemTextSaleSymbol"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_alignParentTop="true"
            style="@style/homeWrapWidthLine"/>
        <View
            android:layout_alignParentBottom="true"
            style="@style/homeWrapWidthLine"/>
        <View
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:layout_width="@dimen/line_height"
            style="@style/homeWrapWidthLine"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_home_bottom_item_name"
        android:layout_below="@id/rl_item_icon_root"
        style="@style/homeItemProductName"
        android:layout_marginLeft="@dimen/home_padding"
        android:layout_marginTop="@dimen/home_padding"
        android:text="@string/home_item_test_product_name"
        android:layout_marginStart="@dimen/home_padding"/>
    <com.goshop.app.common.view.CustomTextView
        android:layout_below="@id/tv_home_bottom_item_name"
        android:id="@+id/tv_home_bottom_item_old_price"
        android:text="@string/home_item_test_product_price"
        android:layout_marginLeft="@dimen/home_padding"
        android:layout_marginTop="6dp"
        style="@style/homeItemProductOldPrice"
        android:layout_marginStart="@dimen/home_padding"/>
    <com.goshop.app.common.view.CustomTextView
        android:layout_below="@id/tv_home_bottom_item_old_price"
        android:id="@+id/tv_home_bottom_item_price"
        android:layout_marginLeft="@dimen/home_padding"
        android:text="@string/home_item_test_product_price"
        style="@style/homeItemProductPrice"
        android:layout_marginStart="@dimen/home_padding"/>
</RelativeLayout>