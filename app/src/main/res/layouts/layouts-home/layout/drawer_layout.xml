<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="start"
    android:background="@color/transparent"
    android:fillViewport="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:layout_height="match_parent">
        <LinearLayout
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:id="@+id/ll_profile"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:background="@color/color_main_grey"
            android:layout_height="130dp">
            <ImageView
                android:id="@+id/iv_user_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_launcher"/>
            <com.goshop.app.common.view.CustomTextView
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:textSize="18sp"
                android:text="@string/home_drawlayout_hey"
                android:layout_height="wrap_content"/>
            <com.goshop.app.common.view.CustomBoldTextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="18sp"
                android:text="@string/home_drawlayout_not_sign_up"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:background="@color/white"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_drawer_home"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_home"
                    style="@style/homeSlideItemImage"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_home"
                    android:layout_toRightOf="@+id/iv_home"
                    android:text="@string/home_drawlayout_home"
                    style="@style/homeSlideItemText"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_drawer_categorytree"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_category_tree"
                    style="@style/homeSlideItemImage"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_category_tree"
                    android:layout_toRightOf="@+id/iv_category_tree"
                    android:text="@string/home_drawlayout_category"
                    style="@style/homeSlideItemText"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_drawer_reward"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_reward"
                    style="@style/homeSlideItemImage"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_reward"
                    android:layout_toRightOf="@+id/iv_reward"
                    android:text="@string/home_drawlayout_rewards"
                    style="@style/homeSlideItemText"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_drawer_shoppingcart"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_shopping_cart"
                    style="@style/homeSlideItemImage"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_shopping_cart"
                    android:layout_toRightOf="@+id/iv_shopping_cart"
                    android:text="@string/home_drawlayout_shopping_cart"
                    style="@style/homeSlideItemText"/>


                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_shoppingCart_num"
                    style="@style/homeSlideItemTextNum"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_drawer_wishlist"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_wishlist"
                    style="@style/homeSlideItemImage"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_wishlist"
                    android:layout_toRightOf="@+id/iv_wishlist"
                    android:text="@string/home_drawlayout_my_wishlist"
                    style="@style/homeSlideItemText"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_wishlist_num"
                    style="@style/homeSlideItemTextNum"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_drawer_order"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_orderlist"
                    style="@style/homeSlideItemImage"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_order"
                    android:layout_toRightOf="@+id/iv_orderlist"
                    android:text="@string/home_drawlayout_my_orders"
                    style="@style/homeSlideItemText"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_drawer_notification"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_notification"
                    style="@style/homeSlideItemImage"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_notification"
                    android:layout_toRightOf="@+id/iv_notification"
                    android:text="@string/home_drawlayout_notifications"
                    style="@style/homeSlideItemText"/>

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_notification_num"
                    style="@style/homeSlideItemTextNum"/>
            </RelativeLayout>

            <View
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
               style="@style/homeWrapWidthLine"></View>

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_help_support"
                style="@style/homeSlideItemSettingText"
                android:text="@string/home_drawlayout_help_support"
            />

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_setting"
                style="@style/homeSlideItemSettingText"
                android:text="@string/home_drawlayout_settings"
            />

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>