<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="start"
    android:background="@color/transparent"
    android:fillViewport="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:layout_height="match_parent">
        <!--top user head portrait-->
        <RelativeLayout
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:id="@+id/rl_profile"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:background="@mipmap/ic_slidemenu_bg"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/iv_user_img"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:visibility="visible"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_slidemenu_user_nor"/>
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_sidemenu_login_name"
                android:layout_below="@id/iv_user_img"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:textSize="14sp"
                android:text="@string/home_drawlayout_hey"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <com.goshop.app.common.view.CustomBoldTextView
                android:id="@+id/tv_sidemenu_unlogin_name"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:text="@string/home_drawlayout_not_sign_up"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_drawer_home"
                style="@style/homeSlideItemBg">
                <ImageView
                    android:id="@+id/iv_home"
                    android:background="@mipmap/ic_slidemenu_home_nor"
                    style="@style/homeSlideItemImage"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_home"
                    android:layout_toRightOf="@+id/iv_home"
                    android:text="@string/home_drawlayout_home"
                    style="@style/homeSlideItemText"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_drawer_categorytree"
                style="@style/homeSlideItemBg">
                <ImageView
                    android:id="@+id/iv_category_tree"
                    android:background="@mipmap/ic_slidemenu_categories_nor"
                    style="@style/homeSlideItemImage"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_category_tree"
                    android:layout_toRightOf="@+id/iv_category_tree"
                    android:text="@string/home_drawlayout_category"
                    style="@style/homeSlideItemText"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_drawer_go_loyalty"
                style="@style/homeSlideItemBg">
                <ImageView
                    android:id="@+id/iv_go_loyalty"
                    android:background="@mipmap/ic_slidemenu_go_loyalty_nor"
                    style="@style/homeSlideItemImage"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_go_loyalty"
                    android:layout_toRightOf="@+id/iv_go_loyalty"
                    android:text="@string/home_drawlayout_rewards"
                    style="@style/homeSlideItemText"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_drawer_shoppingcart"
                style="@style/homeSlideItemBg">
                <ImageView
                    android:id="@+id/iv_shopping_cart"
                    android:background="@mipmap/ic_slidemenu_shopping_cart_nor"
                    style="@style/homeSlideItemImage"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_shopping_cart"
                    android:layout_toRightOf="@+id/iv_shopping_cart"
                    android:text="@string/home_drawlayout_shopping_cart"
                    style="@style/homeSlideItemText"/>


                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_shoppingCart_num"
                    style="@style/homeSlideItemTextNum"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_drawer_wishlist"
                style="@style/homeSlideItemBg">
                <ImageView
                    android:id="@+id/iv_wishlist"
                    android:background="@mipmap/ic_slidemenu_wishlist_nor"
                    style="@style/homeSlideItemImage"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_wishlist"
                    android:layout_toRightOf="@+id/iv_wishlist"
                    android:text="@string/home_drawlayout_my_wishlist"
                    style="@style/homeSlideItemText"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_wishlist_num"
                    style="@style/homeSlideItemTextNum"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_drawer_order"
                style="@style/homeSlideItemBg">
                <ImageView
                    android:id="@+id/iv_orderlist"
                    android:background="@mipmap/ic_slidemenu_myorders_nor"
                    style="@style/homeSlideItemImage"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_order"
                    android:layout_toRightOf="@+id/iv_orderlist"
                    android:text="@string/home_drawlayout_my_orders"
                    style="@style/homeSlideItemText"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_drawer_notification"
                style="@style/homeSlideItemBg">
                <ImageView
                    android:id="@+id/iv_notification"
                    android:background="@mipmap/ic_slidemenu_notification_nor"
                    style="@style/homeSlideItemImage"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_notification"
                    android:layout_toRightOf="@+id/iv_notification"
                    android:text="@string/home_drawlayout_notifications"
                    style="@style/homeSlideItemText"/>

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_notification_num"
                    style="@style/homeSlideItemTextNum"/>
                <View

                    style="@style/homeSlideItemTextNum"
                    android:visibility="visible"
                    android:background="@drawable/drawable_slidemenu_hint_point"
                    android:layout_width="@dimen/size_8"
                    android:layout_height="@dimen/size_8"/>

            </RelativeLayout>

            <View
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
               style="@style/homeWrapWidthLine"></View>

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_help_support"
                style="@style/homeSlideItemSettingText"
                android:text="@string/home_drawlayout_help_support"
            />

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_setting"
                style="@style/homeSlideItemSettingText"
                android:text="@string/home_drawlayout_settings"
            />

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>