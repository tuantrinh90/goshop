<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="start"
    android:background="@color/transparent"
    android:fillViewport="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:layout_height="match_parent">
        <LinearLayout
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:id="@+id/ll_profile"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:layout_height="130dp">
            <ImageView
                android:id="@+id/iv_user_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:textSize="18sp"
                android:text="@string/home_drawlayout_hey"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:textStyle="bold"
                android:ellipsize="end"
                android:textSize="18sp"
                android:text="@string/home_drawlayout_not_sign_up"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:background="@color/white"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_drawer_home"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="24dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"

                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/tv_home"
                    android:layout_toRightOf="@+id/iv_home"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text="@string/home_drawlayout_home"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_drawer_categorytree"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_category_tree"
                    android:layout_width="24dp"
                    android:layout_centerVertical="true"
                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/tv_category_tree"
                    android:layout_toRightOf="@+id/iv_category_tree"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text="@string/home_drawlayout_category"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_drawer_reward"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_reward"
                    android:layout_width="24dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/tv_reward"
                    android:layout_toRightOf="@+id/iv_reward"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text="@string/home_drawlayout_rewards"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_drawer_shoppingcart"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_shopping_cart"
                    android:layout_width="24dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"

                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/tv_shopping_cart"
                    android:layout_toRightOf="@+id/iv_shopping_cart"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text="@string/home_drawlayout_shopping_cart"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/tv_shoppingCart_num"
                    android:layout_width="24dp"
                    android:visibility="gone"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_slide_menu_number"
                    android:text="99+"
                    android:layout_centerVertical="true"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:gravity="center"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_drawer_wishlist"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_wishlist"
                    android:layout_width="24dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/tv_wishlist"
                    android:layout_toRightOf="@+id/iv_wishlist"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text="@string/home_drawlayout_my_wishlist"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_wishlist_num"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_slide_menu_number"
                    android:text="99+"
                    android:layout_centerVertical="true"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:gravity="center"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_drawer_order"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_orderlist"
                    android:layout_width="24dp"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/tv_order"
                    android:layout_toRightOf="@+id/iv_orderlist"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text="@string/home_drawlayout_my_orders"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_drawer_notification"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="24dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/tv_notification"
                    android:layout_toRightOf="@+id/iv_notification"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text="@string/home_drawlayout_notifications"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_notification_num"
                    android:layout_width="24dp"
                    android:visibility="gone"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_slide_menu_number"
                    android:text="99+"
                    android:layout_centerVertical="true"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:gravity="center"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/blackTrans12"
                android:layout_height="0.8dp"></View>

            <TextView
                android:id="@+id/tv_help_support"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:layout_height="40dp"
                android:textSize="12sp"
                android:text="@string/home_drawlayout_help_support"
            />

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:layout_height="40dp"
                android:textSize="12sp"
                android:text="@string/home_drawlayout_settings"
            />

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>