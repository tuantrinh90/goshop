<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    app:cardCornerRadius="0dp"
    android:id="@+id/cv_center_onair_content"
>
    <RelativeLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_center_onair_title"
            android:layout_width="match_parent"
            android:layout_height="66dp">
            <com.goshop.app.common.view.CustomTextView
                android:layout_centerInParent="true"
                android:textColor="@color/blackTrans87"
                android:fontFamily="sans-serif-medium"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_video_onair"
                />
            <View
                style="@style/homeWrapWidthLine"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@id/rl_center_onair_title"
            android:layout_marginLeft="@dimen/home_padding"
            android:layout_marginRight="@dimen/home_padding"
            android:orientation="horizontal"
            android:id="@+id/rl_centent_titles"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_center_bottom_title1"
                android:text="@string/home_video_onair_tab_ch118"
                style="@style/homeCenterOnAirTab"/>
            <ImageView
                style="@style/homeCenterOnAirTabPartingLine"
                android:layout_gravity="center"
            />
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_center_bottom_title2"
                android:text="@string/home_video_onair_tab_ch120"
                style="@style/homeCenterOnAirTab"/>
            <ImageView
                style="@style/homeCenterOnAirTabPartingLine"
                android:layout_gravity="center"
            />
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_center_bottom_title3"
                android:text="@string/home_video_onair_tab_ch303"
                style="@style/homeCenterOnAirTab"/>
            <ImageView
                style="@style/homeCenterOnAirTabPartingLine"
                android:layout_gravity="center"
            />
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_center_bottom_title4"
                android:text="@string/home_video_onair_tab_fb_live"
                style="@style/homeCenterOnAirTab"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/rl_centent_titles"
            android:id="@+id/rv_center_on_air_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

    </RelativeLayout>

</android.support.v7.widget.CardView>