<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_img_text_img_close"/>

    <com.goshop.app.common.view.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:text="@string/complement_email_tips"
        android:textSize="@dimen/size_font_16"
        android:textColor="@android:color/black"
        android:padding="@dimen/size_16"/>

    <com.goshop.app.common.view.CustomEditText
        android:id="@+id/et_complement_email_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:background="@drawable/bg_edittext_grayline"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginRight="@dimen/size_16"
        android:layout_marginLeft="@dimen/size_16"
        android:padding="@dimen/size_8"
        android:maxLines="1"
        android:textSize="@dimen/size_font_16"
        android:textColorHint="@color/pinkishGrey"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@null"
        android:imeOptions="actionDone"/>

    <com.goshop.app.common.view.CustomBoldButton
        android:id="@+id/btn_complement_email_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_gray"
        android:layout_marginTop="@dimen/size_30"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:textColor="@android:color/white"
        android:text="@string/submit"
        android:textSize="@dimen/size_font_18"/>


</LinearLayout>