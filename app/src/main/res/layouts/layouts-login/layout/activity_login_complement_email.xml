<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:animET="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <include
        layout="@layout/toolbar_img_text_img_close"/>

    <com.goshop.app.common.view.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_14"
        android:text="@string/complement_email_tips"
        android:textSize="@dimen/size_font_16"
        android:textColor="@color/color_text_black"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"/>

    <com.goshop.app.common.CustomAnimEditText
        android:id="@+id/ctd_et_complement_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_40"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        animET:hint="@string/email"
    />


    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_btn_complement_email_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_round_pink"
        android:layout_marginTop="@dimen/size_54"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:padding="@dimen/size_12"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="@string/submit"
        android:textSize="@dimen/size_font_16"/>


</LinearLayout>