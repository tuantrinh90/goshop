<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <include
        layout="@layout/toolbar_img_text_img_close"
    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_40"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:orientation="horizontal" android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.goshop.app.common.view.CustomTextView
                        android:id="@+id/tv_register_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_48"
                        android:text="@string/register_firstname"
                        android:layout_marginRight="@dimen/size_8"
                        android:maxLines="1"
                        android:padding="@dimen/size_8"
                        android:textSize="@dimen/size_font_16"
                        android:textColor="@android:color/black"
                        android:visibility="gone" android:layout_marginEnd="@dimen/size_8"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.goshop.app.common.view.CustomTextView
                        android:id="@+id/tv_register_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_48"
                        android:text="@string/register_lastname"
                        android:layout_marginRight="@dimen/size_8"
                        android:maxLines="1"
                        android:padding="@dimen/size_8"
                        android:textSize="@dimen/size_font_16"
                        android:textColor="@android:color/black"
                        android:visibility="gone" android:layout_marginEnd="@dimen/size_8"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_8"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16" android:baselineAligned="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/size_8"
                    android:layout_marginEnd="@dimen/size_8">


                    <com.goshop.app.common.view.CustomEditText
                        android:id="@+id/et_register_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_48"
                        android:hint="@string/register_firstname"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/size_8"
                        android:background="@drawable/bg_edittext_grayline"
                        android:textSize="@dimen/size_font_16"
                        android:textColorHint="@color/pinkishGrey"
                        android:textColor="@android:color/black"
                        android:textCursorDrawable="@null"
                        android:imeOptions="actionNext"/>
                    <ImageView
                        android:id="@+id/iv_first_name_delete"
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:layout_marginTop="@dimen/size_8"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/del"
                        android:visibility="gone"
                        android:contentDescription="@string/app_name"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_8"
                    android:layout_weight="1" android:layout_marginStart="@dimen/size_8">


                    <com.goshop.app.common.view.CustomEditText
                        android:id="@+id/et_register_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_48"
                        android:hint="@string/register_lastname"
                        android:maxLines="1"
                        android:inputType="text"
                        android:padding="@dimen/size_8"
                        android:background="@drawable/bg_edittext_grayline"
                        android:textSize="@dimen/size_font_16"
                        android:textColorHint="@color/pinkishGrey"
                        android:textColor="@android:color/black"
                        android:textCursorDrawable="@null"
                        android:imeOptions="actionNext"/>

                    <ImageView
                        android:id="@+id/iv_last_name_delete"
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:layout_marginTop="@dimen/size_8"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/del"
                        android:visibility="gone"
                        android:contentDescription="@string/app_name"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginRight="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16">
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_register_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:text="@string/email"
                    android:maxLines="1"
                    android:padding="@dimen/size_8"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@android:color/black"
                    android:visibility="gone"/>
                <com.goshop.app.common.view.CustomEditText
                    android:id="@+id/et_register_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:layout_below="@id/tv_register_email"
                    android:background="@drawable/bg_edittext_grayline"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="@dimen/size_8"
                    android:textSize="@dimen/size_font_16"
                    android:textColorHint="@color/pinkishGrey"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    android:imeOptions="actionNext"/>
                <ImageView
                    android:id="@+id/iv_register_email_delete"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_below="@id/tv_register_email"
                    android:layout_marginTop="@dimen/size_8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/del"
                    android:visibility="gone"
                    android:contentDescription="@string/app_name"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginRight="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16">

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_register_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:text="@string/password"
                    android:maxLines="1"
                    android:padding="@dimen/size_8"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@android:color/black"
                    android:visibility="gone"/>
                <com.goshop.app.common.view.CustomEditText
                    android:id="@+id/et_register_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:layout_below="@id/tv_register_pwd"
                    android:background="@drawable/bg_edittext_grayline"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="@dimen/size_8"
                    android:textSize="@dimen/size_font_16"
                    android:textColorHint="@color/pinkishGrey"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    android:imeOptions="actionNext"/>
                <ImageView
                    android:id="@+id/iv_register_eye"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_20"
                    android:layout_below="@id/tv_register_pwd"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/size_8"
                    android:layout_marginLeft="@dimen/size_8"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/eye"
                    android:contentDescription="@string/app_name"
                    android:layout_marginStart="@dimen/size_8"
                    android:layout_alignParentEnd="true"/>

                <ImageView
                    android:id="@+id/iv_register_pwd_delete"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_toLeftOf="@id/iv_register_eye"
                    android:layout_below="@id/tv_register_pwd"
                    android:layout_marginTop="@dimen/size_8"
                    android:src="@mipmap/del"
                    android:visibility="gone"
                    android:contentDescription="@string/app_name"
                    android:layout_toStartOf="@id/iv_register_eye"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginRight="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16">
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_register_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:text="@string/mobile_number"
                    android:maxLines="1"
                    android:padding="@dimen/size_8"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@android:color/black"
                    android:visibility="gone"/>
                <com.goshop.app.common.view.CustomEditText
                    android:id="@+id/et_register_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:layout_below="@id/tv_register_mobile"
                    android:background="@drawable/bg_edittext_grayline"
                    android:hint="@string/mobile_number"
                    android:inputType="number"
                    android:padding="@dimen/size_8"
                    android:maxLines="1"
                    android:textSize="@dimen/size_font_16"
                    android:textColorHint="@color/pinkishGrey"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    android:imeOptions="actionDone"/>
                <ImageView
                    android:id="@+id/iv_register_mobile_delete"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_below="@id/tv_register_mobile"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/size_8"
                    android:src="@mipmap/del"
                    android:visibility="gone"
                    android:contentDescription="@string/app_name"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>


            <CheckBox
                android:id="@+id/cb_register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:layout_marginRight="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16"
                android:checked="true"
                android:text="@string/register_tips_email"
                android:textColor="@android:color/black"/>

            <CheckBox
                android:id="@+id/cb_register_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:layout_marginRight="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16"
                android:checked="true"
                android:text="@string/register_tips_sms"
                android:textColor="@android:color/black"/>


            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_btn_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:gravity="center"
                android:text="@string/register"
                android:padding="@dimen/size_12"
                android:layout_marginTop="@dimen/size_8"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_font_18"
                android:background="@drawable/selector_btn_gray"/>

            <com.goshop.app.common.view.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_20"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:paddingBottom="@dimen/size_60"
                android:text="@string/register_tips"
                android:textSize="@dimen/size_font_16"
                android:textColor="@android:color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:background="@color/pinkishGrey"/>
            <LinearLayout
                android:id="@+id/ll_register_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/size_12"
                android:gravity="center">
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_have_account"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@android:color/black"/>
                <com.goshop.app.common.view.CustomBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@android:color/black"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>