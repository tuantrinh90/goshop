<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:animET="http://schemas.android.com/apk/res-auto"
    xmlns:pwd="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <include
        layout="@layout/toolbar_img_text_img_close"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/color_divider_grey"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_48">

                <ImageView
                    android:id="@+id/iv_name_center"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/app_name"/>

                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/ctd_et_register_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_name_center"
                    android:layout_centerVertical="true"
                    animET:hint="@string/register_firstname"
                    android:layout_toStartOf="@id/iv_name_center"/>
                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/ctd_et_register_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_name_center"
                    android:layout_centerVertical="true"
                    animET:hint="@string/register_lastname"
                    android:layout_toEndOf="@id/iv_name_center"/>

            </RelativeLayout>

            <com.goshop.app.common.CustomAnimEditText
                android:id="@+id/ctd_et_register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                animET:hint="@string/email"
            />

            <com.goshop.app.common.CustomPasswordEditText
                android:id="@+id/ctd_et_register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                pwd:pwd_hint="@string/password"
            />

            <com.goshop.app.common.CustomPasswordEditText
                android:id="@+id/ctd_et_register_confirmation_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                pwd:pwd_hint="@string/confirmation_password"
            />

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_register_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:drawableRight="@drawable/selector_image_expand_selected"
                android:background="@drawable/bg_white_bottom_line"
                android:paddingBottom="@dimen/size_8"
                android:paddingTop="@dimen/size_20"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/size_font_16"
                android:hint="@string/title_optional"
                android:drawableEnd="@drawable/selector_image_expand_selected"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_58">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_alignParentStart="true">
                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_12"
                        android:text="@string/gender"
                        android:textColor="@color/color_text_black"/>
                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_12"
                        android:paddingLeft="@dimen/size_4"
                        android:hint="@string/optional"
                        tools:ignore="RtlSymmetry"
                        android:paddingStart="@dimen/size_4"/>
                </LinearLayout>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    tools:ignore="RelativeOverlap"
                    android:layout_alignParentEnd="true">
                    <RadioButton
                        android:id="@+id/rb_register_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/size_font_16"
                        android:text="@string/male"
                    />
                    <RadioButton
                        android:id="@+id/rb_register_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_14"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/size_font_16"
                        android:text="@string/female"
                        android:layout_marginStart="@dimen/size_14"/>
                </RadioGroup>
            </RelativeLayout>

            <com.goshop.app.common.CustomAnimEditText
                android:id="@+id/ctd_et_register_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_48"
                animET:hint="@string/mobile_number"
            />

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_register_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:drawableRight="@drawable/selector_image_expand_selected"
                android:background="@drawable/bg_white_bottom_line"
                android:paddingBottom="@dimen/size_8"
                android:paddingTop="@dimen/size_20"
                android:textSize="@dimen/size_font_16"
                android:hint="@string/date_of_birth"
                android:drawableEnd="@drawable/selector_image_expand_selected"/>

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_register_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:drawableRight="@drawable/selector_image_expand_selected"
                android:background="@drawable/bg_white_bottom_line"
                android:paddingBottom="@dimen/size_8"
                android:paddingTop="@dimen/size_20"
                android:textSize="@dimen/size_font_16"
                android:hint="@string/language_optional"
                android:drawableEnd="@drawable/selector_image_expand_selected"/>

            <CheckBox
                android:id="@+id/cb_register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_28"
                android:checked="true"
                android:textSize="@dimen/size_font_12"
                android:text="@string/register_tips_email"
                android:textColor="@color/color_text_black"/>

            <CheckBox
                android:id="@+id/cb_register_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:checked="true"
                android:textSize="@dimen/size_font_12"
                android:text="@string/register_tips_sms"
                android:textColor="@color/color_text_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_28"
                android:orientation="vertical">
                <include
                    layout="@layout/layout_button_pink"/>
            </LinearLayout>

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_register_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_8"
                android:paddingLeft="@dimen/size_26"
                android:paddingRight="@dimen/size_26"
                android:paddingBottom="@dimen/size_60"
                android:gravity="center"
                android:textSize="@dimen/size_font_12"
                android:textColor="@color/color_text_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/size_12"
                android:gravity="center">
                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_have_account"
                    android:textSize="@dimen/size_font_12"
                    android:textColor="@color/color_text_black"/>
                <com.goshop.app.common.view.CustomBoldTextView
                    android:id="@+id/tv_btn_register_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:paddingLeft="@dimen/size_4"
                    android:textSize="@dimen/size_font_12"
                    android:textColor="@color/color_main_pink"
                    tools:ignore="RtlSymmetry"
                    android:paddingStart="@dimen/size_4"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>