<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:paddingBottom="@dimen/size_14"
        android:background="@drawable/bg_bottom_line">
        <com.goshop.app.common.view.RobotoMediumTextView
            android:id="@+id/tv_product_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/color_grayscale_text"
            android:textSize="@dimen/size_font_20"/>

        <com.goshop.app.common.view.RobotoLightTextView
            android:id="@+id/tv_product_detail_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_product_detail_title"
            android:layout_alignParentLeft="true"
            android:paddingTop="@dimen/size_10"
            android:textColor="@color/color_text_hint"
            android:textSize="@dimen/size_font_18"
            tools:ignore="RtlHardcoded"/>
        <com.goshop.app.common.view.RobotoMediumTextView
            android:id="@+id/tv_product_detail_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_product_detail_old"
            android:paddingRight="@dimen/size_4"
            android:gravity="center_vertical"
            android:textColor="@color/color_grayscale_text"
            android:textSize="@dimen/size_font_22"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>
        <com.goshop.app.common.view.RobotoLightTextView
            android:id="@+id/tv_product_detail_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_product_detail_now"
            android:layout_alignTop="@id/tv_product_detail_now"
            android:layout_alignBottom="@id/tv_product_detail_now"
            android:gravity="center"
            android:textColor="@color/color_main_pink"
            android:textSize="@dimen/size_font_14"/>

        <ImageView
            android:id="@+id/iv_product_detail_share"
            android:layout_width="@dimen/size_36"
            android:layout_height="@dimen/size_36"
            android:layout_below="@id/tv_product_detail_old"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_icon_share_pdp"
            tools:ignore="RtlHardcoded"/>

        <ImageView
            android:id="@+id/iv_product_detail_wish"
            android:layout_width="@dimen/size_36"
            android:layout_height="@dimen/size_36"
            android:layout_marginRight="@dimen/size_16"
            android:layout_below="@id/tv_product_detail_old"
            android:layout_toLeftOf="@id/iv_product_detail_share"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name"
            android:src="@drawable/selector_wishlist"
            tools:ignore="RtlHardcoded"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_16"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <RelativeLayout
            android:id="@+id/rl_product_detail_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/size_4"
            android:background="@drawable/drawable_round_grey_circle"
            tools:ignore="RtlHardcoded">

            <com.goshop.app.common.view.RobotoRegularTextView
                android:id="@+id/tv_product_detail_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_font_14"
                android:paddingLeft="@dimen/size_8"
                android:textColor="@color/color_grayscale_text"
                tools:ignore="RtlHardcoded,RtlSymmetry"/>
            <ImageView
                android:layout_width="@dimen/size_12"
                android:layout_height="@dimen/size_12"
                android:layout_margin="@dimen/size_4"
                android:background="@drawable/ic_icon_kind_bottom"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/app_name"
                tools:ignore="RtlHardcoded"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_product_detail_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size_4"
            android:background="@drawable/drawable_round_grey_circle"
            tools:ignore="RtlHardcoded">

            <com.goshop.app.common.view.RobotoRegularTextView
                android:id="@+id/tv_product_detail_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_font_14"
                android:paddingLeft="@dimen/size_8"
                android:textColor="@color/color_grayscale_text"
                tools:ignore="RtlHardcoded,RtlSymmetry"/>
            <ImageView
                android:layout_width="@dimen/size_12"
                android:layout_height="@dimen/size_12"
                android:layout_margin="@dimen/size_4"
                android:background="@drawable/ic_icon_kind_bottom"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/app_name"
                tools:ignore="RtlHardcoded"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_38"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_16"
        android:orientation="horizontal">
        <com.goshop.app.common.CustomMPEditText
            android:id="@+id/et_product_minus_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_4"
            android:layout_weight="1"
            tools:ignore="RtlHardcoded"/>
        <com.goshop.app.common.CustomMPEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:ignore="RtlHardcoded"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8"
        android:background="@drawable/drawable_biger_divider_with_shadow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_16"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/size_17"
                android:layout_height="@dimen/size_16"
                android:layout_marginRight="@dimen/size_12"
                android:scaleType="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_icon_cash"
                tools:ignore="RtlHardcoded"/>

            <com.goshop.app.common.view.RobotoLightTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_14"
                android:text="@string/delivery_info_tips_cash"
                android:textColor="@color/color_grayscale_secondary"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/size_10">

            <ImageView
                android:layout_width="@dimen/size_17"
                android:layout_height="@dimen/size_16"
                android:layout_marginRight="@dimen/size_12"
                android:scaleType="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_icon_seven"
                tools:ignore="RtlHardcoded"/>

            <com.goshop.app.common.view.RobotoLightTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_14"
                android:text="@string/seven_return"
                android:textColor="@color/color_grayscale_secondary"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/size_1"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/size_10">

            <ImageView
                android:layout_width="@dimen/size_17"
                android:layout_height="@dimen/size_16"
                android:layout_marginRight="@dimen/size_12"
                android:scaleType="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_icon_installment"
                tools:ignore="RtlHardcoded"/>

            <com.goshop.app.common.view.RobotoLightTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_14"
                android:text="@string/six_month"
                android:textColor="@color/color_grayscale_secondary"
            />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8"
        android:background="@drawable/drawable_biger_divider_with_shadow"/>


</LinearLayout>