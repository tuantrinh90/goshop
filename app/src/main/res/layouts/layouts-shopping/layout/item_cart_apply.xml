<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_20"
    android:paddingBottom="@dimen/size_20"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_et_editable">

        <com.goshop.app.common.view.CustomBoldTextView
            android:id="@+id/tv_btn_cart_apply"
            android:layout_width="@dimen/size_90"
            android:layout_height="@dimen/size_40"
            android:textSize="@dimen/size_font_14"
            android:text="@string/apply"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/drawable_round_black"
            android:layout_alignParentEnd="true"/>

        <com.goshop.app.common.view.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/discount_code"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_btn_cart_apply"
            android:layout_toStartOf="@id/tv_btn_cart_apply"
            android:layout_marginLeft="@dimen/size_10"
            android:textColorHint="@color/color_divider_grey"
            android:background="@null"
            android:layout_marginStart="@dimen/size_10"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginTop="@dimen/size_20"
        android:background="@color/color_divider_grey"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16">

        <com.goshop.app.common.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/sub_total"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_text_black"
            android:gravity="start"
            android:layout_alignParentStart="true"/>

        <com.goshop.app.common.view.CustomBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/demo_cart_price1"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_text_black"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8">

        <com.goshop.app.common.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/shipping_fee"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_text_black"
            android:gravity="start"
            android:layout_alignParentStart="true"/>

        <com.goshop.app.common.view.CustomBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/demo_cart_price1"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_text_black"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8">

        <com.goshop.app.common.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/disscount"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_text_black"
            android:gravity="start"
            android:layout_alignParentStart="true"/>

        <com.goshop.app.common.view.CustomBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/demo_cart_price2"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_text_black"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8">

        <com.goshop.app.common.view.CustomBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/grand_total"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_text_black"
            android:gravity="start"
            android:layout_alignParentStart="true"/>

        <com.goshop.app.common.view.CustomBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_16"
            android:text="@string/demo_cart_price3"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_main_pink"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>


</LinearLayout>