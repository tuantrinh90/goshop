<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_20"
    android:paddingBottom="@dimen/size_20"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.goshop.app.common.view.RobotoMediumTextView
            android:id="@+id/tv_btn_cart_apply"
            android:layout_width="@dimen/size_90"
            android:layout_height="@dimen/size_40"
            android:layout_marginLeft="@dimen/size_8"
            android:textSize="@dimen/size_font_14"
            android:text="@string/apply"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/drawable_round_black"
            android:layout_alignParentEnd="true"/>

        <com.goshop.app.common.view.RobotoRegularEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_apply_grey"
            android:hint="@string/enter_discount_code"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/size_12"
            android:paddingTop="@dimen/size_10"
            android:paddingBottom="@dimen/size_10"
            android:maxLines="1"
            android:layout_toLeftOf="@id/tv_btn_cart_apply"
            android:layout_toStartOf="@id/tv_btn_cart_apply"
            android:textColorHint="@color/color_divider_grey"
            android:background="@drawable/bg_et_editable"
            tools:ignore="RtlSymmetry"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_divider"
        android:layout_marginTop="@dimen/size_20"
        android:background="@color/color_divider_grey"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16">

        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/sub_total"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_grayscale_text"
            android:gravity="start"
            android:layout_alignParentStart="true"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/demo_cart_price1"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_grayscale_text"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8">

        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/rounding_amount"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_grayscale_text"
            android:gravity="start"
            android:layout_alignParentStart="true"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/demo_cart_price1"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_grayscale_text"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8">

        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/shipping_fee"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_grayscale_text"
            android:gravity="start"
            android:layout_alignParentStart="true"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/demo_cart_price1"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_grayscale_text"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8">

        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/disscount"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_grayscale_text"
            android:gravity="start"
            android:layout_alignParentStart="true"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/demo_cart_price2"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_grayscale_text"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8">

        <com.goshop.app.common.view.RobotoMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_18"
            android:text="@string/total_incl_gst"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_grayscale_text"
            android:gravity="start"
            android:layout_alignParentStart="true"/>

        <com.goshop.app.common.view.RobotoMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_18"
            android:text="@string/demo_cart_price3"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_main_pink"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>


</LinearLayout>