<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_20"
    android:paddingBottom="@dimen/size_8"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size_20"
        android:background="@drawable/bg_bottom_line">

        <com.goshop.app.common.view.RobotoMediumTextView
            android:id="@+id/tv_btn_cart_apply"
            android:layout_width="@dimen/size_68"
            android:layout_height="@dimen/size_36"
            android:textSize="@dimen/size_font_14"
            android:text="@string/apply"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/selector_bg_apply"
            android:layout_alignParentEnd="true"/>

        <com.goshop.app.common.view.RobotoRegularEditText
            android:id="@+id/et_cart_apply"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:layout_marginRight="@dimen/size_8"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_grayscale_text"
            android:hint="@string/enter_discount_code"
            android:paddingLeft="@dimen/size_12"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:layout_toLeftOf="@id/tv_btn_cart_apply"
            android:layout_toStartOf="@id/tv_btn_cart_apply"
            android:textColorHint="@color/color_apply_grey"
            android:background="@drawable/bg_et_editable"
            tools:ignore="RtlSymmetry"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16">

        <com.goshop.app.common.view.RobotoLightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/sub_total"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_black_light"
            android:gravity="start"
            android:layout_alignParentStart="true"/>

        <com.goshop.app.common.view.RobotoLightTextView
            android:id="@+id/tv_cart_billing_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/demo_cart_price1"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_black_light"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8">

        <com.goshop.app.common.view.RobotoLightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/shipping_fee"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_black_light"
            android:gravity="start"
            android:layout_alignParentStart="true"/>

        <com.goshop.app.common.view.RobotoLightTextView
            android:id="@+id/tv_cart_billing_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/demo_cart_price1"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_black_light"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cart_disscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">
            <com.goshop.app.common.view.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_14"
                android:text="@string/disscount_only"
                android:textColor="@color/color_black_light"
                android:gravity="start"
               />
            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_cart_disscount_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_14"
                android:textColor="@color/color_black_light"
                android:gravity="start" />
        </LinearLayout>

        <com.goshop.app.common.view.RobotoLightTextView
            android:id="@+id/tv_cart_billing_disscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:text="@string/demo_cart_price2"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_black_light"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6">

        <com.goshop.app.common.view.RobotoMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_18"
            android:text="@string/total_incl_gst"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_black_light"
            android:gravity="start"
            android:layout_alignParentStart="true"/>

        <com.goshop.app.common.view.RobotoMediumTextView
            android:id="@+id/tv_cart_billing_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_18"
            android:text="@string/demo_cart_price3"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_main_pink"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>


</LinearLayout>