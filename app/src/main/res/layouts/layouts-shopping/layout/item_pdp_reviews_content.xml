<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:paddingTop="@dimen/size_8"
    android:orientation="vertical">

    <RatingBar
        android:id="@+id/ratingbar_pdp_review_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_28"
        android:progressDrawable="@drawable/bg_rating"
        android:isIndicator="true"
        android:stepSize="1"
        android:rating="5"
        android:numStars="5"/>

    <com.goshop.app.common.view.CustomBoldTextView
        android:id="@+id/tv_pdp_review_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_font_14"
        android:textColor="@color/color_main_black"/>

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_pdp_review_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_4"
        android:textSize="@dimen/size_font_14"
        android:textColor="@color/color_main_black"/>

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_pdp_reviewer_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_2"
        android:textSize="@dimen/size_12"
        android:textColor="@color/color_main_grey"/>

</LinearLayout>