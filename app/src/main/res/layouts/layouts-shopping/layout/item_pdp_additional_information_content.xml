<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_4"
    android:paddingBottom="@dimen/size_4"
    android:paddingRight="@dimen/size_16"
    android:paddingLeft="@dimen/size_16"
    android:orientation="horizontal">

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_pdp_additional_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/pdp_additionall_value"
        android:textSize="@dimen/size_font_14"
        android:textColor="@color/color_main_grey"
    />

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_pdp_additional_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="@string/pdp_additionall_value"
        android:textSize="@dimen/size_font_14"
        android:textColor="@color/color_main_grey"
    />


</LinearLayout>