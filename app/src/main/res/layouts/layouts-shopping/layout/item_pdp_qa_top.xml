<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_30"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16">

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_btn_pdp_qa_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ask_a_question"
        android:textSize="@dimen/size_font_14"
        android:textColor="@color/color_main_pink"
        android:background="@drawable/bg_btn_round_pink_circle"
        android:paddingBottom="@dimen/size_6"
        android:paddingTop="@dimen/size_6"
        android:paddingRight="@dimen/size_16"
        android:paddingLeft="@dimen/size_16"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_btn_pdp_qa_top"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/tv_btn_pdp_qa_top">
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_pdp_qa_top_question_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_main_pink"
            android:textSize="@dimen/size_font_12"
            android:paddingRight="@dimen/size_4"
            tools:ignore="RtlSymmetry"
            android:paddingEnd="@dimen/size_4"/>
        <com.goshop.app.common.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/questions"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_font_12"
            android:paddingRight="@dimen/size_18"
            tools:ignore="RtlSymmetry"
            android:paddingEnd="@dimen/size_18"/>
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_pdp_qa_top_answers_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_main_pink"
            android:textSize="@dimen/size_font_12"
            android:paddingLeft="@dimen/size_4"
            tools:ignore="RtlSymmetry"
            android:paddingStart="@dimen/size_4"/>

        <com.goshop.app.common.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/questions"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_font_12"/>
    </LinearLayout>


</RelativeLayout>