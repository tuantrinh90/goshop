<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_30"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16">

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_btn_pdp_ask_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ask_a_question"
        android:textColor="@color/color_main_pink"
        android:background="@drawable/bg_btn_round_pink_circle"
        android:paddingBottom="@dimen/size_6"
        android:paddingTop="@dimen/size_6"
        android:paddingRight="@dimen/size_16"
        android:paddingLeft="@dimen/size_16"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_btn_pdp_ask_question"
        android:orientation="horizontal">
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_btn_pdp_aq_question_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_main_pink"
            android:textSize="@dimen/size_12"
            android:paddingRight="@dimen/size_4"/>
        <com.goshop.app.common.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/questions"
            android:textColor="@color/color_main_black"
            android:textSize="@dimen/size_12"
            android:paddingRight="@dimen/size_18"/>
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_btn_pdp_aq_answers_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_main_pink"
            android:textSize="@dimen/size_12"
            android:paddingLeft="@dimen/size_4"/>

        <com.goshop.app.common.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/questions"
            android:textColor="@color/color_main_black"
            android:textSize="@dimen/size_12"/>
    </LinearLayout>


</RelativeLayout>