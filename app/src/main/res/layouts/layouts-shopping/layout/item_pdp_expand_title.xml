<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_50"
    android:layout_marginLeft="@dimen/size_16"
    android:layout_marginRight="@dimen/size_16"
    android:background="@drawable/selector_bg_expand_pdp_title">

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_item_pdp_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/details"
        android:textAllCaps="true"
        android:textSize="@dimen/size_18"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/iv_item_pdp_expand"
        android:layout_width="@dimen/size_16"
        android:layout_height="@dimen/size_16"
        android:src="@drawable/selector_image_expand_selected"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"/>
</RelativeLayout>