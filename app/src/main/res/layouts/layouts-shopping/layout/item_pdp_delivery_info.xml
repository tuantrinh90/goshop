<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/size_16"
    android:paddingLeft="@dimen/size_16"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/cb_pdp_overseas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:checked="true"
        android:textSize="@dimen/size_font_14"
        android:text="@string/delivery_info_tips_overseas"
        android:textColor="@color/color_grayscale_text"/>

    <CheckBox
        android:id="@+id/cb_pdp_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginBottom="@dimen/size_8"
        android:checked="true"
        android:textSize="@dimen/size_font_14"
        android:text="@string/delivery_info_tips_cash"
        android:textColor="@color/color_grayscale_text"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/color_divider_grey"/>

</LinearLayout>