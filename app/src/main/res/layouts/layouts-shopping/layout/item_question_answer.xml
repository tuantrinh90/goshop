<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:orientation="vertical">

    <View
        android:id="@+id/view_question_answer_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_divider"
        android:background="@color/color_divider_grey"/>

    <com.goshop.app.common.view.CustomBoldTextView
        android:id="@+id/tv_question_answer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_16"
        android:textSize="@dimen/size_font_16"
        android:textColor="@color/color_grayscale_text"/>

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_question_answer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_8"
        android:textSize="@dimen/size_font_14"
        android:textColor="@color/color_grayscale_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_16"
        android:orientation="horizontal">

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_question_answer_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:gravity="left"
            android:textColor="@color/color_text_hint"/>

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_question_answer_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_text_hint"/>

    </LinearLayout>
</LinearLayout>