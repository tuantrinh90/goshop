<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_30"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_8"
        android:paddingBottom="@dimen/size_8">
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_btn_pdp_re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ask_a_question"
            android:textColor="@color/color_main_pink"
            android:background="@drawable/bg_btn_round_pink_circle"
            android:paddingBottom="@dimen/size_6"
            android:paddingTop="@dimen/size_6"
            android:paddingRight="@dimen/size_16"
            android:paddingLeft="@dimen/size_16"
            android:layout_alignParentRight="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_btn_pdp_re"
            android:orientation="vertical">
            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_btn_pdp_aq_reviews_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_main_pink"
                android:textSize="@dimen/size_12"
                android:paddingRight="@dimen/size_4"/>
            <com.goshop.app.common.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/questions"
                android:layout_toRightOf="@id/tv_btn_pdp_aq_reviews_num"
                android:textColor="@color/color_main_grey"
                android:textSize="@dimen/size_12"
                android:paddingRight="@dimen/size_18"/>
            <RatingBar
                android:id="@+id/ratingbar_pdp_reviews_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_btn_pdp_aq_reviews_num"
                android:progressDrawable="@drawable/bg_rating"
                android:stepSize="1"
                android:rating="5"
                android:numStars="5"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/color_main_grey"/>


</LinearLayout>