<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:animET="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_right_text"/>

    <ImageView
        android:id="@+id/iv_review_thumb"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_60"
        android:layout_marginTop="@dimen/size_26"
        android:background="@drawable/ic_bought"/>
    <RatingBar
        android:id="@+id/ratingbar_write_review"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_28"
        android:layout_marginTop="@dimen/size_16"
        android:progressDrawable="@drawable/bg_rating"
        android:isIndicator="true"
        android:stepSize="1"
        android:rating="5"
        android:numStars="5"/>

    <com.goshop.app.common.CustomAnimEditText
        android:id="@+id/et_write_review_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        animET:hint="@string/title"/>

    <com.goshop.app.common.CustomAnimEditText
        android:id="@+id/et_write_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        animET:hint="@string/review_content"/>

    <com.goshop.app.common.view.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/size_16"
        android:gravity="right"
        android:text="@string/content_count"/>
</LinearLayout>