<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_336">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_product_detail_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.goshop.app.common.view.CustomPagerCircleIndicator
            android:id="@+id/indicator_product_detail_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_8"
            android:layout_centerHorizontal="true"
        />
    </RelativeLayout>

    <com.goshop.app.common.view.RobotoMediumTextView
        android:id="@+id/tv_product_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pdp_title"
        android:textColor="@color/color_grayscale_text"
        android:textSize="@dimen/size_font_20"
        android:padding="@dimen/size_16"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <com.goshop.app.common.view.RobotoRegularTextView
            android:id="@+id/tv_product_detail_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/color_text_hint"
            android:textSize="@dimen/size_font_18"
            tools:ignore="RtlHardcoded"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_4"
            android:gravity="center_vertical"
            android:layout_below="@id/tv_product_detail_old"
            android:orientation="horizontal">
            <com.goshop.app.common.view.RobotoMediumTextView
                android:id="@+id/tv_product_detail_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/size_4"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_22"
                tools:ignore="RtlHardcoded,RtlSymmetry"/>

            <com.goshop.app.common.view.RobotoRegularTextView
                android:id="@+id/tv_product_detail_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_main_pink"
                android:textSize="@dimen/size_font_14"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_product_detail_share"
            android:layout_width="@dimen/size_36"
            android:layout_height="@dimen/size_36"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_icon_share_pdp"
            tools:ignore="RtlHardcoded"/>

        <ImageView
            android:id="@+id/iv_product_detail_wish"
            android:layout_width="@dimen/size_36"
            android:layout_height="@dimen/size_36"
            android:layout_marginRight="@dimen/size_16"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_product_detail_share"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name"
            android:src="@drawable/selector_wishlist"
            tools:ignore="RtlHardcoded"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_divider"
        android:background="@color/color_bg_disabled_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_16"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <RelativeLayout
            android:id="@+id/rl_product_detail_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/size_4"
            android:background="@drawable/drawable_round_grey_circle"
            tools:ignore="RtlHardcoded">

            <com.goshop.app.common.view.RobotoRegularTextView
                android:id="@+id/tv_product_detail_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_font_14"
                android:paddingLeft="@dimen/size_8"
                android:textColor="@color/color_grayscale_text"
                tools:ignore="RtlHardcoded,RtlSymmetry"/>
            <ImageView
                android:layout_width="@dimen/size_12"
                android:layout_height="@dimen/size_12"
                android:layout_margin="@dimen/size_4"
                android:background="@drawable/ic_icon_kind_bottom"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/app_name"
                tools:ignore="RtlHardcoded"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_product_detail_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size_4"
            android:background="@drawable/drawable_round_grey_circle"
            tools:ignore="RtlHardcoded">

            <com.goshop.app.common.view.RobotoRegularTextView
                android:id="@+id/tv_product_detail_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_font_14"
                android:paddingLeft="@dimen/size_8"
                android:textColor="@color/color_grayscale_text"
                tools:ignore="RtlHardcoded,RtlSymmetry"/>
            <ImageView
                android:layout_width="@dimen/size_12"
                android:layout_height="@dimen/size_12"
                android:layout_margin="@dimen/size_4"
                android:background="@drawable/ic_icon_kind_bottom"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/app_name"
                tools:ignore="RtlHardcoded"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_38"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_16"
        android:orientation="horizontal">
        <com.goshop.app.common.CustomMPEditText
            android:id="@+id/et_product_minus_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_4"
            android:layout_weight="1"
            tools:ignore="RtlHardcoded"/>
        <com.goshop.app.common.CustomMPEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:ignore="RtlHardcoded"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8"
        android:background="@drawable/bg_top_bottom_shadow_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_16"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/size_4"
            android:paddingBottom="@dimen/size_6">

            <ImageView
                android:layout_width="@dimen/size_16"
                android:layout_height="@dimen/size_16"
                android:layout_marginRight="@dimen/size_12"
                android:scaleType="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_icon_cash"
                tools:ignore="RtlHardcoded"/>

            <com.goshop.app.common.view.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_14"
                android:text="@string/delivery_info_tips_cash"
                android:textColor="@color/color_grayscale_secondary"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/size_6"
            android:paddingBottom="@dimen/size_6">

            <ImageView
                android:layout_width="@dimen/size_16"
                android:layout_height="@dimen/size_16"
                android:layout_marginRight="@dimen/size_12"
                android:scaleType="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_icon_seven"
                tools:ignore="RtlHardcoded"/>

            <com.goshop.app.common.view.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_14"
                android:text="@string/seven_return"
                android:textColor="@color/color_grayscale_secondary"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/size_6"
            android:paddingBottom="@dimen/size_4">

            <ImageView
                android:layout_width="@dimen/size_16"
                android:layout_height="@dimen/size_16"
                android:layout_marginRight="@dimen/size_12"
                android:scaleType="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_icon_installment"
                tools:ignore="RtlHardcoded"/>

            <com.goshop.app.common.view.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_14"
                android:text="@string/six_month"
                android:textColor="@color/color_grayscale_secondary"
            />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8"
        android:background="@drawable/bg_top_bottom_shadow_grey"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/size_20"
        android:paddingBottom="@dimen/size_20">

        <com.goshop.app.common.view.RobotoMediumTextView
            android:id="@+id/tv_btn_product_detail_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_round_black"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_font_14"
            android:paddingLeft="@dimen/size_16"
            android:paddingRight="@dimen/size_16"
            android:paddingTop="@dimen/size_10"
            android:paddingBottom="@dimen/size_10"
            android:text="@string/check"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <com.goshop.app.common.view.RobotoRegularEditText
            android:id="@+id/et_product_detail_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_8"
            android:padding="@dimen/size_10"
            android:background="@drawable/bg_et_editable"
            android:textSize="@dimen/size_font_14"
            android:hint="@string/enter_delivery"
            android:textColorHint="@color/color_text_hint"
            android:layout_toLeftOf="@id/tv_btn_product_detail_check"
            android:layout_marginEnd="@dimen/size_8"
            android:layout_toStartOf="@id/tv_btn_product_detail_check"/>

    </RelativeLayout>


</LinearLayout>
