<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_shadow_white"
    android:orientation="vertical">

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_btn_cart_checkout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:background="@drawable/bg_btn_round_pink"
        android:gravity="center"
        android:text="@string/proceed_to_checkout"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_font_16"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_14"
    />

</LinearLayout>