<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_top_line"
    android:layout_marginLeft="@dimen/size_16"
    android:layout_marginRight="@dimen/size_16"
    android:paddingTop="@dimen/size_20"
    android:paddingBottom="@dimen/size_20"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_points_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_font_16"/>
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_points_order_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_font_14"/>
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_points_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_hint_grey"
            android:textSize="@dimen/size_font_14"/>
    </LinearLayout>

    <com.goshop.app.common.view.CustomBoldTextView
        android:id="@+id/tv_points_counts"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_4"
        android:paddingRight="@dimen/size_4"
        android:textSize="@dimen/size_font_14"
        android:gravity="right"
        android:textColor="@color/color_text_black"
        android:layout_weight="1"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        android:paddingEnd="@dimen/size_4"/>
    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_points_date"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_4"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/size_font_14"
        android:gravity="right"
        android:layout_weight="1"
        tools:ignore="RtlHardcoded"/>

</LinearLayout>