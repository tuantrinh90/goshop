<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.goshop.app.common.view.RobotoBoldTextView
        android:id="@+id/tv_address_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/size_20"
        android:paddingBottom="@dimen/size_12"
        android:textColor="@color/color_grayscale_text"
        android:textSize="@dimen/size_font_18"/>
    <com.goshop.app.common.view.RobotoRegularTextView
        android:id="@+id/tv_address_book_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/size_8"
        android:textSize="@dimen/size_font_14"
        android:textColor="@color/color_grayscale_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.goshop.app.common.view.RobotoRegularTextView
            android:id="@+id/tv_address_book_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_16"
            android:paddingTop="@dimen/size_8"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_grayscale_text"
            android:paddingStart="@dimen/size_16"
            tools:ignore="RtlSymmetry"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/size_4"
            android:paddingTop="@dimen/size_8"
            android:text="@string/comma"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_grayscale_text"
            android:paddingEnd="@dimen/size_4"
            tools:ignore="RtlSymmetry"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:id="@+id/tv_address_book_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_8"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_grayscale_text"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/size_4"
            android:paddingTop="@dimen/size_8"
            android:text="@string/comma"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_grayscale_text"
            android:paddingEnd="@dimen/size_4"
            tools:ignore="RtlSymmetry"/>

        <com.goshop.app.common.view.RobotoRegularTextView
            android:id="@+id/tv_address_book_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_8"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_grayscale_text"/>
    </LinearLayout>


    <com.goshop.app.common.view.RobotoRegularTextView
        android:id="@+id/tv_address_book_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/size_8"
        android:textSize="@dimen/size_font_14"
        android:textColor="@color/color_grayscale_text"/>

    <com.goshop.app.common.view.RobotoRegularTextView
        android:id="@+id/tv_address_book_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/size_8"
        android:paddingBottom="@dimen/size_12"
        android:textSize="@dimen/size_font_14"
        android:textColor="@color/color_grayscale_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_divider"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:background="@color/color_divider_grey"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/size_16"
        android:paddingLeft="@dimen/size_16">

        <LinearLayout
            android:id="@+id/ll_address_book_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded">
            <ImageView
                android:id="@+id/iv_address_book_selector"
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:background="@drawable/selector_radio_button"
                android:contentDescription="@string/app_name"/>
            <com.goshop.app.common.view.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_8"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/default_text"
                tools:ignore="RtlHardcoded,RtlSymmetry"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_address_book_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/size_14"
            android:paddingBottom="@dimen/size_14"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_margin="@dimen/size_4"
                android:scaleType="center"
                android:background="@drawable/ic_icon_remove"
                android:contentDescription="@string/app_name"/>

            <com.goshop.app.common.view.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_14"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/remove"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_address_book_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/size_22"
            android:paddingTop="@dimen/size_14"
            android:paddingBottom="@dimen/size_14"
            android:layout_toLeftOf="@id/ll_address_book_remove"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/size_22"
            android:layout_toStartOf="@id/ll_address_book_remove"
            tools:ignore="RelativeOverlap,RtlSymmetry">

            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_margin="@dimen/size_4"
                android:scaleType="center"
                android:background="@drawable/ic_icon_edit"
                android:contentDescription="@string/app_name"/>

            <com.goshop.app.common.view.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_14"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/edit"/>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_divider"
        android:background="@color/color_divider_grey"/>

</LinearLayout>