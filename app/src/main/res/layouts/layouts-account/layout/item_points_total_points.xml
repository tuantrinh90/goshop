<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size_16"
    android:paddingTop="@dimen/size_20"
    android:paddingBottom="@dimen/size_20"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry"
    android:paddingStart="@dimen/size_16">
    <com.goshop.app.common.view.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/size_font_16"
        android:text="@string/you_have"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_8"
        android:orientation="horizontal">
        <com.goshop.app.common.view.CustomBoldTextView
            android:id="@+id/tv_points_totals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/size_8"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_font_28"
            tools:ignore="RtlSymmetry"
            android:paddingEnd="@dimen/size_8"/>

        <com.goshop.app.common.view.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_font_16"
            android:text="@string/pts"/>
    </LinearLayout>

</LinearLayout>