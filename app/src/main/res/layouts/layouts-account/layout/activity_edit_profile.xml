<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:animET="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_right_text"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/size_36"
            android:orientation="vertical">
            <com.goshop.app.common.CustomAnimEditText
                android:id="@+id/et_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_14"
                animET:hint="@string/email"/>

            <com.goshop.app.common.CustomAnimEditText
                android:id="@+id/et_profile_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_14"
                animET:hint="@string/register_firstname"/>

            <com.goshop.app.common.CustomAnimEditText
                android:id="@+id/et_profile_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_14"
                animET:hint="@string/register_lastname"/>

            <include
                layout="@layout/layout_gender_select"/>

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_profile_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_14"
                android:drawableRight="@drawable/selector_image_expand_selected"
                android:background="@drawable/bg_bottom_line"
                android:paddingBottom="@dimen/size_8"
                android:paddingTop="@dimen/size_20"
                android:textSize="@dimen/size_font_16"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/color_grayscale_text"
                android:hint="@string/date_of_birth"
                android:drawableEnd="@drawable/selector_image_expand_selected"/>

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_profile_date_of_birth_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_8"
                android:paddingTop="@dimen/size_4"
                android:visibility="gone"
                android:text="@string/birth_empty"
                android:textSize="@dimen/size_font_12"
                android:textColor="@color/color_orange_red"/>

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_profile_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_14"
                android:drawableRight="@drawable/selector_image_expand_selected"
                android:background="@drawable/bg_bottom_line"
                android:paddingBottom="@dimen/size_8"
                android:paddingTop="@dimen/size_20"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_16"
                android:hint="@string/title_optional"
                android:drawableEnd="@drawable/selector_image_expand_selected"/>

            <com.goshop.app.common.CustomAnimEditText
                android:id="@+id/et_profile_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_14"
                animET:hint="@string/mobile_number"/>

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_profile_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_14"
                android:drawableRight="@drawable/selector_image_expand_selected"
                android:background="@drawable/bg_bottom_line"
                android:paddingBottom="@dimen/size_8"
                android:paddingTop="@dimen/size_20"
                android:textSize="@dimen/size_font_16"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/color_grayscale_text"
                android:hint="@string/language_optional"
                android:drawableEnd="@drawable/selector_image_expand_selected"/>

            <com.goshop.app.common.view.CustomTextView
                android:id="@+id/tv_profile_race"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_14"
                android:drawableRight="@drawable/selector_image_expand_selected"
                android:background="@drawable/bg_bottom_line"
                android:paddingBottom="@dimen/size_8"
                android:paddingTop="@dimen/size_20"
                android:textSize="@dimen/size_font_16"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/color_grayscale_text"
                android:hint="@string/race_optional"
                android:drawableEnd="@drawable/selector_image_expand_selected"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>