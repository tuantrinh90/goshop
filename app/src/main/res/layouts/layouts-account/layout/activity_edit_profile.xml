<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:animET="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_right_text"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_16"
            android:paddingRight="@dimen/size_16"
            android:paddingBottom="@dimen/size_36"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:paddingBottom="@dimen/size_36"
                android:paddingTop="@dimen/size_4"
                android:orientation="vertical">
                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_24"
                    animET:hint="@string/email"/>

                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_6"
                    animET:hint="@string/name"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_6"
                    android:orientation="vertical">
                    <com.goshop.app.common.view.RobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_12"
                        android:text="@string/gender"
                        android:textColor="@color/color_grayscale_secondary"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/size_14"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:id="@+id/ll_select_male"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/iv_select_male"
                                android:layout_width="@dimen/size_20"
                                android:layout_height="@dimen/size_20"
                                android:contentDescription="@string/app_name"
                                android:background="@drawable/selector_radio_button"
                            />
                            <com.goshop.app.common.view.RobotoRegularTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/size_8"
                                android:textColor="@color/color_grayscale_text"
                                android:textSize="@dimen/size_font_13"
                                android:text="@string/male"
                                tools:ignore="RtlSymmetry"
                                android:paddingStart="@dimen/size_8"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_select_female"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/iv_select_female"
                                android:layout_width="@dimen/size_20"
                                android:layout_height="@dimen/size_20"
                                android:contentDescription="@string/app_name"
                                android:background="@drawable/selector_radio_button"/>
                            <com.goshop.app.common.view.RobotoRegularTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/size_8"
                                android:textColor="@color/color_grayscale_text"
                                android:textSize="@dimen/size_font_13"
                                android:text="@string/female"
                                tools:ignore="RtlSymmetry"
                                android:paddingStart="@dimen/size_8"/>
                        </LinearLayout>
                    </LinearLayout>

                    <com.goshop.app.common.view.RobotoRegularTextView
                        android:id="@+id/tv_gender_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/size_8"
                        android:paddingTop="@dimen/size_4"
                        android:visibility="gone"
                        android:text="@string/gender_empty"
                        android:textSize="@dimen/size_font_12"
                        android:textColor="@color/color_orange_red"/>
                </LinearLayout>

                <com.goshop.app.common.view.RobotoRegularTextView
                    android:id="@+id/tv_date_birth_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_12"
                    android:layout_marginTop="@dimen/size_28"
                    android:layout_marginBottom="@dimen/size_18_negative"
                    android:visibility="invisible"
                    android:textColor="@color/color_grayscale_secondary"
                    android:text="@string/date_of_birth"/>
                <com.goshop.app.common.view.RobotoRegularTextView
                    android:id="@+id/tv_profile_date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:paddingRight="@dimen/size_8"
                    android:drawableRight="@drawable/ic_icon_spinner_down"
                    android:background="@drawable/selector_textinput_edittext"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingTop="@dimen/size_20"
                    android:textSize="@dimen/size_font_16"
                    android:textColorHint="@color/color_text_hint"
                    android:textColor="@color/color_grayscale_text"
                    android:hint="@string/date_of_birth"
                    android:drawableEnd="@drawable/ic_icon_spinner_down"
                    tools:ignore="RtlSymmetry"
                    android:paddingEnd="@dimen/size_8"/>

                <com.goshop.app.common.view.RobotoRegularTextView
                    android:id="@+id/tv_profile_date_of_birth_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_4"
                    android:visibility="invisible"
                    android:text="@string/birth_empty"
                    android:textSize="@dimen/size_font_12"
                    android:textColor="@color/color_orange_red"/>

                <com.goshop.app.common.view.RobotoRegularTextView
                    android:id="@+id/tv_profile_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginTop="@dimen/size_11"
                    android:paddingRight="@dimen/size_8"
                    android:drawableRight="@drawable/ic_icon_spinner_down"
                    android:background="@drawable/selector_textinput_edittext"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingTop="@dimen/size_20"
                    android:textColorHint="@color/color_text_hint"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:hint="@string/title_optional"
                    android:drawableEnd="@drawable/ic_icon_spinner_down"
                    tools:ignore="RtlSymmetry"
                    android:paddingEnd="@dimen/size_8"/>

                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_profile_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_35"
                    animET:hint="@string/mobile_number"/>

                <com.goshop.app.common.view.RobotoRegularTextView
                    android:id="@+id/tv_profile_language"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginTop="@dimen/size_2"
                    android:paddingRight="@dimen/size_8"
                    android:drawableRight="@drawable/ic_icon_spinner_down"
                    android:background="@drawable/selector_textinput_edittext"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingTop="@dimen/size_20"
                    android:text="@string/malay"
                    android:textSize="@dimen/size_font_16"
                    android:textColorHint="@color/color_text_hint"
                    android:textColor="@color/color_grayscale_text"
                    android:hint="@string/language_optional"
                    android:drawableEnd="@drawable/ic_icon_spinner_down"
                    tools:ignore="RtlSymmetry"
                    android:paddingEnd="@dimen/size_8"/>

                <com.goshop.app.common.view.RobotoRegularTextView
                    android:id="@+id/tv_profile_race"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginTop="@dimen/size_28"
                    android:paddingRight="@dimen/size_8"
                    android:drawableRight="@drawable/ic_icon_spinner_down"
                    android:background="@drawable/selector_textinput_edittext"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingTop="@dimen/size_20"
                    android:textSize="@dimen/size_font_16"
                    android:textColorHint="@color/color_text_hint"
                    android:textColor="@color/color_grayscale_text"
                    android:hint="@string/race_optional"
                    android:drawableEnd="@drawable/ic_icon_spinner_down"
                    tools:ignore="RtlSymmetry"
                    android:paddingEnd="@dimen/size_8"/>

            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_4"
            android:background="@drawable/bg_navigation_bar_shadow"/>
    </FrameLayout>

</LinearLayout>