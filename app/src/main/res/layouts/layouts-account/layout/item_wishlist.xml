<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_wishlist_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_divider"
        android:background="@color/color_divider_grey"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingBottom="@dimen/size_16"
        android:paddingTop="@dimen/size_16"
        android:paddingRight="@dimen/size_8"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_wishlist_thumb"
            android:layout_width="@dimen/size_97"
            android:layout_height="@dimen/size_97"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/app_name"
            tools:ignore="RtlHardcoded"/>
        <com.goshop.app.common.view.RobotoRegularTextView
            android:id="@+id/tv_wishlist_percent"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_21"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@id/iv_wishlist_thumb"
            android:textSize="@dimen/size_font_13"
            android:paddingLeft="@dimen/size_4"
            android:textColor="@android:color/white"
            android:background="@color/color_main_pink"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/iv_wishlist_menu"
            android:layout_width="@dimen/size_14"
            android:layout_height="@dimen/size_24"
            android:src="@drawable/ic_icon_cart_menu"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            tools:ignore="RtlHardcoded"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_wishlist_thumb"
            android:layout_toLeftOf="@id/iv_wishlist_menu"
            android:paddingLeft="@dimen/size_8"
            android:paddingRight="@dimen/size_10"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">
            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_wishlist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_14"/>
            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_wishlist_attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_4"
                android:textColor="@color/color_grayscale_secondary"
                android:textSize="@dimen/size_font_12"/>
            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_wishlist_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_6"
                android:textColor="@color/color_grayscale_secondary"
                android:textSize="@dimen/size_font_12"/>

            <com.goshop.app.common.view.RobotoMediumTextView
                android:id="@+id/tv_wishlist_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_1"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_14"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>