<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_wishlist_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_divider"
        android:background="@color/color_divider_grey"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_16"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_wishlist_thumb"
            android:layout_width="@dimen/size_96"
            android:layout_height="@dimen/size_96"
            android:background="@drawable/ic_bought"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/app_name"
            tools:ignore="RtlHardcoded"/>

        <ImageView
            android:id="@+id/iv_wishlist_menu"
            android:layout_width="@dimen/size_14"
            android:layout_height="@dimen/size_24"
            android:src="@drawable/ic_icon_cart_menu"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            tools:ignore="RtlHardcoded"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_wishlist_thumb"
            android:layout_toLeftOf="@id/iv_wishlist_menu"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">
            <com.goshop.app.common.view.RobotoRegularTextView
                android:id="@+id/tv_wishlist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_16"/>
            <com.goshop.app.common.view.RobotoRegularTextView
                android:id="@+id/tv_wishlist_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_14"
                android:textColor="@color/color_text_hint"
                android:textSize="@dimen/size_font_12"/>

            <com.goshop.app.common.view.RobotoMediumTextView
                android:id="@+id/tv_wishlist_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_2"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_16" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>