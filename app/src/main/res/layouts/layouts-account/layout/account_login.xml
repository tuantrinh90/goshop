<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_launcher"
    />

    <!--login-->
    <com.goshop.app.common.view.CustomButtomLineRelativeLayout
        android:id="@+id/rl_login_email"
        style="@style/windowMargin"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_login_logo"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <TextView
            android:id="@+id/tv_email_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/login_email"
            android:textSize="@dimen/labelTextFontSize"
            android:textColor="@color/label_saved"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_email_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_email_text2"
            android:text="@string/login_email"
            android:textSize="@dimen/labelTextFontSize"
            android:textColor="@color/colorAccent"
            android:visibility="invisible"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_email_text2"
            android:layout_marginBottom="@dimen/table_lable_margain_bottom"
            android:layout_marginTop="@dimen/table_lable_margain_top">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_clear_mail"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="@string/login_email"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/editTextFontSize"
                android:textColor="@color/colorAccent"
                android:textCursorDrawable="@null"
            />

            <ImageView
                android:id="@+id/iv_clear_mail"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/text_elimination"
                android:visibility="gone"/>
        </RelativeLayout>
    </com.goshop.app.common.view.CustomButtomLineRelativeLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_email"
        android:layout_below="@id/rl_login_email"
        style="@style/windowMargin"
        android:layout_width="match_parent"
        app:errorTextAppearance="@style/textInputErrorStyle"
        android:theme="@style/textInputEditTheme"
        android:layout_height="60dp">
        <EditText
            android:id="@+id/et_email_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_clear_mail"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:hint="@string/login_email"
            android:singleLine="true"
            android:textColorHint="@color/hint"
            android:textSize="@dimen/editTextFontSize"
            android:textCursorDrawable="@null"
        />
    </android.support.design.widget.TextInputLayout>

    <!--password-->
    <com.goshop.app.common.view.CustomButtomLineRelativeLayout
        android:layout_centerHorizontal="true"
        style="@style/windowMargin"
        android:id="@+id/rl_login_password"
        android:layout_below="@id/text_email"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <TextView
            android:id="@+id/tv_password_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/login_email"
            android:textSize="@dimen/labelTextFontSize"
            android:textColor="@color/label_saved"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_password_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_password_text2"
            android:text="@string/login_password"
            android:textSize="@dimen/labelTextFontSize"
            android:textColor="@color/colorAccent"
            android:visibility="invisible"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_password_text2"
            android:layout_marginBottom="@dimen/table_lable_margain_bottom"
            android:layout_marginTop="@dimen/table_lable_margain_top">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_clear_password"
                android:inputType="textPassword"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="@string/login_password"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/editTextFontSize"
                android:textColor="@color/colorAccent"
                android:textCursorDrawable="@null"
            />
            <ImageView
                android:id="@+id/iv_clear_password"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/text_elimination"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/iv_visible_password"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@id/iv_clear_password"
                android:background="@mipmap/ic_password_not_visible"
                />
        </RelativeLayout>
    </com.goshop.app.common.view.CustomButtomLineRelativeLayout>

    <Button
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:id="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rl_login_password"
        android:text="@string/login_login"
        android:background="@drawable/big_button_style_config"
        android:textColor="@color/whiteffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_centerHorizontal="true"
        android:text="@string/login_forgot_password"
        android:layout_below="@id/btn_login"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        style="@style/windowMargin"
        android:id="@+id/rl_text_or"
        android:layout_below="@id/tv_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_centerVertical="true"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"/>
        <TextView
            android:text="@string/login_or"
            android:padding="24dp"
            android:background="@color/whiteffffff"
            android:layout_centerInParent="true"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_text_or"
        android:id="@+id/rl_login_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
        >
            <ImageView
                android:id="@+id/iv_login_facebook_icon"
                android:background="@drawable/ic_launcher_background"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@id/iv_login_facebook_icon"
                android:text="@string/login_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/pinkishGrey"
        />
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_below="@id/view_bottom_line"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_new_to_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_bottom_describe"
                android:textColor="@color/colorAccent"
            />
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_new_to_shop"
                android:text="@string/login_register"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
            />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>