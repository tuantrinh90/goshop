<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:animET="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <include
        layout="@layout/toolbar_img_text_img_close"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_4"
        android:background="@drawable/bg_navigation_bar_shadow"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.goshop.app.common.view.RobotoMediumTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_20"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/office_address_"
                android:paddingTop="@dimen/size_20"
                android:paddingLeft="@dimen/size_16"
                tools:ignore="RtlSymmetry"
                android:paddingStart="@dimen/size_16"/>


            <com.goshop.app.common.view.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/contact_us_address_content"
                android:paddingTop="@dimen/size_16"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_100"
                android:paddingStart="@dimen/size_16"
                android:paddingEnd="@dimen/size_100"/>

            <com.goshop.app.common.view.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/via_email"
                android:paddingTop="@dimen/size_16"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_100"
                android:paddingStart="@dimen/size_16"
                android:paddingEnd="@dimen/size_100"/>

            <com.goshop.app.common.view.RobotoRegularTextView
                android:id="@+id/tv_contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_main_pink"
                android:paddingTop="@dimen/size_4"
                android:paddingLeft="@dimen/size_16"
                android:paddingStart="@dimen/size_16"
                tools:ignore="RtlSymmetry"/>

            <com.goshop.app.common.view.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/via_phone"
                android:paddingTop="@dimen/size_16"
                android:paddingLeft="@dimen/size_16"
                android:paddingStart="@dimen/size_16"
                tools:ignore="RtlSymmetry"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_4"
                android:paddingLeft="@dimen/size_16"
                android:orientation="horizontal"
                tools:ignore="RtlSymmetry"
                android:paddingStart="@dimen/size_16">
                <com.goshop.app.common.view.RobotoRegularTextView
                    android:id="@+id/tv_contact_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_main_pink"
                    tools:ignore="RtlSymmetry" />

                <com.goshop.app.common.view.RobotoRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_text_hint"
                    android:text="@string/contact_us_after_phone"
                    android:paddingTop="@dimen/size_4"
                    android:paddingLeft="@dimen/size_6"
                    tools:ignore="RtlSymmetry"
                    android:paddingStart="@dimen/size_6"/>
            </LinearLayout>


            <com.goshop.app.common.view.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/via_social_media"
                android:paddingTop="@dimen/size_16"
                android:paddingLeft="@dimen/size_16"
                android:paddingStart="@dimen/size_16"
                tools:ignore="RtlSymmetry"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingTop="@dimen/size_12"
                android:paddingBottom="@dimen/size_24"
                android:orientation="horizontal"
                tools:ignore="RtlSymmetry"
                android:paddingStart="@dimen/size_16">

                <ImageView
                    android:id="@+id/iv_contact_facebook"
                    android:layout_width="@dimen/size_36"
                    android:layout_height="@dimen/size_36"
                    android:src="@drawable/ic_icon_facebook"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"/>
                <ImageView
                    android:id="@+id/iv_contact_twitter"
                    android:layout_width="@dimen/size_36"
                    android:layout_height="@dimen/size_36"
                    android:layout_marginLeft="@dimen/size_16"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_twitter"
                    android:scaleType="center"
                    android:layout_marginStart="@dimen/size_16"/>
                <ImageView
                    android:id="@+id/iv_contact_group"
                    android:layout_width="@dimen/size_36"
                    android:layout_height="@dimen/size_36"
                    android:layout_marginLeft="@dimen/size_16"
                    android:src="@drawable/ic_icon_group"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:layout_marginStart="@dimen/size_16"/>
            </LinearLayout>

            <View
                android:id="@+id/v_help_support_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_8"
                android:background="@drawable/drawable_biger_divider_with_shadow"/>

            <com.goshop.app.common.view.RobotoMediumTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_20"
                android:textColor="@color/color_grayscale_text"
                android:text="@string/send_message_to_us"
                android:paddingTop="@dimen/size_24"
                android:paddingLeft="@dimen/size_16"
                tools:ignore="RtlSymmetry"
                android:paddingStart="@dimen/size_16"/>

            <com.goshop.app.common.CustomAnimEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                animET:hint="@string/name"
            />

            <com.goshop.app.common.CustomAnimEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                animET:hint="@string/email"
            />

            <com.goshop.app.common.CustomAnimEditText
                android:id="@+id/et_contact_us_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                animET:hint="@string/mobile_number_optional"
            />

            <com.goshop.app.common.CustomAnimEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                animET:hint="@string/product_handing"
            />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinputlayout_contact_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:layout_marginBottom="@dimen/size_24"
                android:hint="@string/details"
                app:counterEnabled="true"
                app:counterMaxLength="1000"
                app:counterOverflowTextAppearance="@style/OverflowTextAppearance"
                app:counterTextAppearance="@style/counterTextAppearance"
                app:errorTextAppearance="@style/errorAppearance"
                app:hintTextAppearance="@style/hintAppearance">

                <com.goshop.app.common.view.RobotoRegularEditText
                    android:id="@+id/et_contact_us_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:paddingTop="@dimen/size_8"
                    android:paddingBottom="@dimen/size_8"
                    android:background="@drawable/selector_textinput_edittext"
                    android:textColor="@color/color_grayscale_text"
                    android:textColorHint="@color/color_text_hint"
                    android:textSize="@dimen/size_font_16"
                    android:textCursorDrawable="@null" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/ll_contact_us_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_8"
                android:orientation="vertical">
                <include
                    layout="@layout/layout_button_pink"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>