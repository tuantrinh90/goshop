<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:animET="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/ll_contact_us_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_top_shadow_white"
        android:paddingRight="@dimen/size_16"
        android:paddingLeft="@dimen/size_16"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        android:orientation="vertical">
        <include
            layout="@layout/layout_button_pink"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/ll_contact_us_bottom">

        <include
            layout="@layout/toolbar_img_text_img_close"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/color_divider_grey"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_25"
                android:orientation="vertical">

                <com.goshop.app.common.view.CustomBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_text_black"
                    android:text="@string/office_address_"
                    android:paddingTop="@dimen/size_20"
                    android:paddingLeft="@dimen/size_16"
                    tools:ignore="RtlSymmetry"
                    android:paddingStart="@dimen/size_16"/>


                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:textColor="@color/color_text_black"
                    android:text="@string/contact_us_address_content"
                    android:paddingTop="@dimen/size_10"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_100"
                    android:paddingStart="@dimen/size_16"
                    android:paddingEnd="@dimen/size_100"/>

                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:textColor="@color/color_text_black"
                    android:text="@string/via_email"
                    android:paddingTop="@dimen/size_20"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_100"
                    android:paddingStart="@dimen/size_16"
                    android:paddingEnd="@dimen/size_100"/>

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_contact_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:textColor="@color/color_text_black"
                    android:paddingTop="@dimen/size_4"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_100"
                    android:paddingStart="@dimen/size_16"
                    android:paddingEnd="@dimen/size_100"/>

                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:textColor="@color/color_text_black"
                    android:text="@string/via_phone"
                    android:paddingTop="@dimen/size_20"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_100"
                    android:paddingStart="@dimen/size_16"
                    android:paddingEnd="@dimen/size_100"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.goshop.app.common.view.CustomTextView
                        android:id="@+id/tv_contact_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:textColor="@color/color_text_black"
                        android:paddingTop="@dimen/size_4"
                        android:paddingLeft="@dimen/size_16"
                        tools:ignore="RtlSymmetry"
                        android:paddingStart="@dimen/size_16"/>

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:textColor="@color/color_hint_grey"
                        android:text="@string/contact_us_after_phone"
                        android:paddingTop="@dimen/size_4"
                        android:paddingLeft="@dimen/size_6"
                        tools:ignore="RtlSymmetry"
                        android:paddingStart="@dimen/size_6"/>
                </LinearLayout>


                <com.goshop.app.common.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:textColor="@color/color_text_black"
                    android:text="@string/via_social_media"
                    android:paddingTop="@dimen/size_20"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_100"
                    android:paddingStart="@dimen/size_16"
                    android:paddingEnd="@dimen/size_100"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingTop="@dimen/size_10"
                    android:orientation="horizontal"
                    tools:ignore="RtlSymmetry"
                    android:paddingStart="@dimen/size_16">

                    <ImageView
                        android:id="@+id/iv_contact_facebook"
                        android:layout_width="@dimen/size_36"
                        android:layout_height="@dimen/size_36"
                        android:background="@drawable/ic_facebook"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:id="@+id/iv_contact_twitter"
                        android:layout_width="@dimen/size_36"
                        android:layout_height="@dimen/size_36"
                        android:layout_marginLeft="@dimen/size_16"
                        android:contentDescription="@string/app_name"
                        android:background="@drawable/ic_twitter"
                        android:layout_marginStart="@dimen/size_16"/>
                    <ImageView
                        android:id="@+id/iv_contact_group"
                        android:layout_width="@dimen/size_36"
                        android:layout_height="@dimen/size_36"
                        android:layout_marginLeft="@dimen/size_16"
                        android:background="@drawable/ic_group"
                        android:contentDescription="@string/app_name"
                        android:layout_marginStart="@dimen/size_16"/>
                </LinearLayout>

                <com.goshop.app.common.view.CustomBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_text_black"
                    android:text="@string/send_message_to_us"
                    android:paddingTop="@dimen/size_40"
                    android:paddingLeft="@dimen/size_16"
                    tools:ignore="RtlSymmetry"
                    android:paddingStart="@dimen/size_16"/>

                <com.goshop.app.common.CustomAnimEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_44"
                    android:layout_marginLeft="@dimen/size_16"
                    android:layout_marginRight="@dimen/size_16"
                    animET:hint="@string/name"
                />

                <com.goshop.app.common.CustomAnimEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_44"
                    android:layout_marginLeft="@dimen/size_16"
                    android:layout_marginRight="@dimen/size_16"
                    animET:hint="@string/email"
                />

                <com.goshop.app.common.CustomAnimEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_44"
                    android:layout_marginLeft="@dimen/size_16"
                    android:layout_marginRight="@dimen/size_16"
                    animET:hint="@string/mobile_number_optional"
                />

                <com.goshop.app.common.CustomAnimEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_44"
                    android:layout_marginLeft="@dimen/size_16"
                    android:layout_marginRight="@dimen/size_16"
                    animET:hint="@string/product_handing"
                />

                <com.goshop.app.common.CustomAnimEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_44"
                    android:layout_marginLeft="@dimen/size_16"
                    android:layout_marginRight="@dimen/size_16"
                    animET:hint="@string/details"
                />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>