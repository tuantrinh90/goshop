<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pwd="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:id="@+id/ll_container"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_right_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_4"
        android:background="@drawable/bg_navigation_bar_shadow"/>


    <com.goshop.app.common.CustomPasswordEditText
        android:id="@+id/cp_et_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_16"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginTop="@dimen/size_24"
        pwd:pwd_hint="@string/current_password"/>


    <com.goshop.app.common.CustomPasswordEditText
        android:id="@+id/cp_et_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_16"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginTop="@dimen/size_4"
        pwd:pwd_hint="@string/new_password"/>


</LinearLayout>