<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:pwd="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/toolbar_img_text_img_close"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/grey_f1f1f1"/>

        <com.goshop.app.common.CustomPasswordEditText
            android:id="@+id/cp_et_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_16"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_marginTop="@dimen/size_20"
            pwd:pwd_hint="@string/current_password"/>

        <com.goshop.app.common.CustomPasswordEditText
            android:id="@+id/cp_et_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_16"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_marginTop="@dimen/size_20"
            pwd:pwd_hint="@string/new_password"/>

        <com.goshop.app.common.CustomPasswordEditText
            android:id="@+id/cp_et_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_16"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_marginTop="@dimen/size_20"
            pwd:pwd_hint="@string/confirm_new_password"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_shadow_white"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:layout_alignParentBottom="true">
        <include
            layout="@layout/layout_button_pink"/>
    </LinearLayout>

</RelativeLayout>