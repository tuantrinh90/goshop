<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar_img_text_img_close"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_4"
        android:background="@drawable/bg_navigation_bar_shadow"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_142"
                android:paddingTop="@dimen/size_36"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:background="@drawable/ic_icon_account_top">

                <ImageView
                    android:id="@+id/iv_my_account_thumb"
                    android:layout_width="@dimen/size_62"
                    android:layout_height="@dimen/size_64"
                    android:layout_alignParentRight="true"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:background="@drawable/ic_icon_user_default"
                    tools:ignore="RtlHardcoded"/>
                <com.goshop.app.common.view.RobotoMediumTextView
                    android:id="@+id/tv_my_account_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_my_account_thumb"
                    android:text="@string/user_name"
                    android:textSize="@dimen/size_font_32"
                    android:textColor="@color/color_grayscale_text"
                    tools:ignore="RtlHardcoded"/>
                <com.goshop.app.common.view.RobotoRegularTextView
                    android:id="@+id/tv_my_account_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_8"
                    android:layout_below="@id/tv_my_account_username"
                    android:layout_toLeftOf="@+id/iv_my_account_thumb"
                    android:text="@string/edit_profile"
                    android:textSize="@dimen/size_font_14"
                    android:textColor="@color/color_grayscale_secondary"
                    tools:ignore="RtlHardcoded"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_account_wishlist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_66"
                android:background="@drawable/selector_btn_press_gray_line">
                <ImageView
                    android:id="@+id/iv_left_wishlist"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_marginLeft="@dimen/size_16"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_my_wishlist"
                    tools:ignore="RtlHardcoded"/>

                <ImageView
                    android:id="@+id/iv_right_wishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/size_16"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_right_expand"
                    tools:ignore="RtlHardcoded"/>

                <com.goshop.app.common.view.RobotoLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/size_16"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:text="@string/my_wishlist"
                    android:paddingLeft="@dimen/size_16"
                    android:layout_toRightOf="@id/iv_left_wishlist"
                    android:layout_toLeftOf="@id/iv_right_wishlist"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_6"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/bg_account_shadow"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_account_orders"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_66"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:background="@drawable/selector_btn_press_gray_line">
                <ImageView
                    android:id="@+id/iv_left_orders"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_my_orders"
                    tools:ignore="RtlHardcoded"/>

                <ImageView
                    android:id="@+id/iv_right_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_right_expand"
                    tools:ignore="RtlHardcoded"/>

                <com.goshop.app.common.view.RobotoLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:text="@string/my_orders"
                    android:paddingLeft="@dimen/size_16"
                    android:layout_toRightOf="@id/iv_left_orders"
                    android:layout_toLeftOf="@id/iv_right_orders"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_account_reviews"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_66"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:background="@drawable/selector_btn_press_gray_line">
                <ImageView
                    android:id="@+id/iv_left_reviews"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_review"
                    tools:ignore="RtlHardcoded"/>

                <ImageView
                    android:id="@+id/iv_right_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_right_expand"
                    tools:ignore="RtlHardcoded"/>

                <com.goshop.app.common.view.RobotoLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:text="@string/my_product_reviews"
                    android:paddingLeft="@dimen/size_16"
                    android:layout_toRightOf="@id/iv_left_reviews"
                    android:layout_toLeftOf="@id/iv_right_reviews"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_account_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_66"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:background="@drawable/selector_btn_press_gray_line">
                <ImageView
                    android:id="@+id/iv_left_address"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_address_book"
                    tools:ignore="RtlHardcoded"/>

                <ImageView
                    android:id="@+id/iv_right_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_right_expand"
                    tools:ignore="RtlHardcoded"/>

                <com.goshop.app.common.view.RobotoLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:text="@string/my_address_book"
                    android:paddingLeft="@dimen/size_16"
                    android:layout_toRightOf="@id/iv_left_address"
                    android:layout_toLeftOf="@id/iv_right_address"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_account_rewards"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_66"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:background="@drawable/selector_btn_press_gray_line">
                <ImageView
                    android:id="@+id/iv_left_rewards"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_rewards"
                    tools:ignore="RtlHardcoded"/>

                <ImageView
                    android:id="@+id/iv_right_rewards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_right_expand"
                    tools:ignore="RtlHardcoded"/>

                <com.goshop.app.common.view.RobotoLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:text="@string/my_rewards"
                    android:paddingLeft="@dimen/size_16"
                    android:layout_toRightOf="@id/iv_left_rewards"
                    android:layout_toLeftOf="@id/iv_right_rewards"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_account_points"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_66"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:background="@drawable/selector_btn_press_gray_line">
                <ImageView
                    android:id="@+id/iv_left_points"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_goshop_points"
                    tools:ignore="RtlHardcoded"/>

                <ImageView
                    android:id="@+id/iv_right_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_right_expand"
                    tools:ignore="RtlHardcoded"/>

                <com.goshop.app.common.view.RobotoLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:text="@string/my_point"
                    android:paddingLeft="@dimen/size_16"
                    android:layout_toRightOf="@id/iv_left_points"
                    android:layout_toLeftOf="@id/iv_right_points"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_account_egift"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_66"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:background="@drawable/selector_btn_press_gray_line">
                <ImageView
                    android:id="@+id/iv_left_egift"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_egift"
                    tools:ignore="RtlHardcoded"/>

                <ImageView
                    android:id="@+id/iv_right_egift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_icon_right_expand"
                    tools:ignore="RtlHardcoded"/>

                <com.goshop.app.common.view.RobotoLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:text="@string/my_egift_cards"
                    android:paddingLeft="@dimen/size_16"
                    android:layout_toRightOf="@id/iv_left_egift"
                    android:layout_toLeftOf="@id/iv_right_egift"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>
            </RelativeLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>