<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/size_8"
    android:paddingBottom="@dimen/size_8"
    android:background="@drawable/bg_bottom_line">

    <View
        android:id="@+id/view_notification_icon"
        android:layout_width="@dimen/size_8"
        android:layout_height="@dimen/size_8"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_marginRight="@dimen/size_8"
        android:layout_marginTop="@dimen/size_8"
        android:visibility="visible"
        android:background="@drawable/drawable_slidemenu_hint_point"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.goshop.app.common.view.RobotoRegularTextView
            android:id="@+id/tv_notification_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:textSize="@dimen/size_font_16"
            android:text="@string/home_item_test_product_name"
            android:textColor="@color/color_grayscale_text" />
        <com.goshop.app.common.view.RobotoRegularTextView
            android:id="@+id/tv_notification_date"
            android:textColor="@color/color_text_hint"
            android:textSize="@dimen/size_font_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>