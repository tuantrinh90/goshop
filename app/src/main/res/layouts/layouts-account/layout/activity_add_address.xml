<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:animET="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <include
        layout="@layout/toolbar_img_text_img_close"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_34"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:orientation="vertical">

                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_add_address_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    animET:hint="@string/register_firstname"/>

                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_add_address_last"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    animET:hint="@string/register_lastname"/>

                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_add_address_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    animET:hint="@string/address_one"/>

                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_add_address_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    animET:hint="@string/address_two"/>

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_add_address_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_32"
                    android:paddingRight="@dimen/size_8"
                    android:drawableRight="@drawable/ic_icon_spinner_down"
                    android:background="@drawable/bg_bottom_line"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingTop="@dimen/size_20"
                    android:textColorHint="@color/color_text_hint"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:hint="@string/country"
                    android:drawableEnd="@drawable/ic_icon_spinner_down"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_add_address_country_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingTop="@dimen/size_4"
                    android:visibility="gone"
                    android:text="@string/country_empty"
                    android:textSize="@dimen/size_font_12"
                    android:textColor="@color/color_orange_red"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_add_address_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_32"
                    android:paddingRight="@dimen/size_8"
                    android:drawableRight="@drawable/ic_icon_spinner_down"
                    android:background="@drawable/bg_bottom_line"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingTop="@dimen/size_20"
                    android:textColorHint="@color/color_text_hint"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:hint="@string/state"
                    android:drawableEnd="@drawable/ic_icon_spinner_down"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_add_address_state_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingTop="@dimen/size_4"
                    android:visibility="gone"
                    android:text="@string/state_empty"
                    android:textSize="@dimen/size_font_12"
                    android:textColor="@color/color_orange_red"/>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_add_address_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_32"
                    android:paddingRight="@dimen/size_8"
                    android:drawableRight="@drawable/ic_icon_spinner_down"
                    android:background="@drawable/bg_bottom_line"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingTop="@dimen/size_20"
                    android:textColorHint="@color/color_text_hint"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:hint="@string/city"
                    android:drawableEnd="@drawable/ic_icon_spinner_down"/>

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_add_address_city_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingTop="@dimen/size_4"
                    android:visibility="gone"
                    android:text="@string/state_empty"
                    android:textSize="@dimen/size_font_12"
                    android:textColor="@color/color_orange_red"/>
                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_add_address_zip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    animET:hint="@string/zip_postal_code"/>

                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_add_address_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    animET:hint="@string/phone_number"/>

                <LinearLayout
                    android:id="@+id/ll_add_address_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_24"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_add_address_email"
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:contentDescription="@string/app_name"
                        android:background="@drawable/selector_box_button"/>

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_12"
                        android:paddingLeft="@dimen/size_8"
                        android:text="@string/add_address_box"
                        android:textColor="@color/color_greyish_brown"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_add_address_sms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_add_address_sms"
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:contentDescription="@string/app_name"
                        android:background="@drawable/selector_box_button"/>

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_12"
                        android:paddingLeft="@dimen/size_8"
                        android:text="@string/add_address_box"
                        android:textColor="@color/color_greyish_brown"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_add_address_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_top_shadow_white"
                android:paddingTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16">
                <include
                    layout="@layout/layout_button_pink"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>