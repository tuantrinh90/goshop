<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:animET="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <include
        layout="@layout/toolbar_right_text"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_20"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:orientation="vertical">

                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_add_address_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_28"
                    animET:hint="@string/register_firstname"/>

                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_add_address_last"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4"
                    animET:hint="@string/register_lastname"/>

                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_add_address_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4"
                    animET:hint="@string/address_one"/>

                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_add_address_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4"
                    animET:hint="@string/address_two"/>

                <com.goshop.app.common.view.RobotoRegularTextView
                    android:id="@+id/tv_add_address_country"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginTop="@dimen/size_2"
                    android:paddingRight="@dimen/size_8"
                    android:drawableRight="@drawable/ic_icon_spinner_down"
                    android:background="@drawable/selector_textinput_edittext"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingTop="@dimen/size_20"
                    android:textColorHint="@color/color_text_hint"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:hint="@string/country"
                    android:drawableEnd="@drawable/ic_icon_spinner_down"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>
                <com.goshop.app.common.view.RobotoRegularTextView
                    android:id="@+id/tv_add_address_country_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_4"
                    android:visibility="invisible"
                    android:text="@string/country_empty"
                    android:textSize="@dimen/size_font_12"
                    android:textColor="@color/color_orange_red"/>
                <com.goshop.app.common.view.RobotoRegularTextView
                    android:id="@+id/tv_add_address_state"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginTop="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    android:drawableRight="@drawable/ic_icon_spinner_down"
                    android:background="@drawable/selector_textinput_edittext"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingTop="@dimen/size_20"
                    android:textColorHint="@color/color_text_hint"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:hint="@string/state"
                    android:drawableEnd="@drawable/ic_icon_spinner_down"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>
                <com.goshop.app.common.view.RobotoRegularTextView
                    android:id="@+id/tv_add_address_state_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_4"
                    android:visibility="invisible"
                    android:text="@string/state_empty"
                    android:textSize="@dimen/size_font_12"
                    android:textColor="@color/color_orange_red"/>
                <com.goshop.app.common.view.RobotoRegularTextView
                    android:id="@+id/tv_add_address_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginTop="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    android:drawableRight="@drawable/ic_icon_spinner_down"
                    android:background="@drawable/selector_textinput_edittext"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingTop="@dimen/size_20"
                    android:textColorHint="@color/color_text_hint"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:hint="@string/city"
                    android:drawableEnd="@drawable/ic_icon_spinner_down"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>

                <com.goshop.app.common.view.RobotoRegularTextView
                    android:id="@+id/tv_add_address_city_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_4"
                    android:visibility="invisible"
                    android:text="@string/state_empty"
                    android:textSize="@dimen/size_font_12"
                    android:textColor="@color/color_orange_red"/>
                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_add_address_zip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_16"
                    animET:hint="@string/zip_postal_code"/>

                <com.goshop.app.common.CustomAnimEditText
                    android:id="@+id/et_add_address_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_2"
                    animET:hint="@string/phone_number"/>

                <LinearLayout
                    android:id="@+id/ll_add_address_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_6_negative"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_add_address_email"
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:contentDescription="@string/app_name"
                        android:background="@drawable/selector_box_button"/>

                    <com.goshop.app.common.view.RobotoLightTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_12"
                        android:paddingLeft="@dimen/size_8"
                        android:text="@string/add_address_box"
                        android:textColor="@color/color_greyish_brown"
                        tools:ignore="RtlHardcoded,RtlSymmetry"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_add_address_sms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_add_address_sms"
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:contentDescription="@string/app_name"
                        android:background="@drawable/selector_box_button"/>

                    <com.goshop.app.common.view.RobotoLightTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_12"
                        android:paddingLeft="@dimen/size_8"
                        android:text="@string/add_address_box"
                        android:textColor="@color/color_greyish_brown"
                        tools:ignore="RtlHardcoded,RtlSymmetry"/>
                </LinearLayout>
            </LinearLayout>


        </ScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_4"
            android:background="@drawable/bg_navigation_bar_shadow"/>
    </FrameLayout>


</LinearLayout>