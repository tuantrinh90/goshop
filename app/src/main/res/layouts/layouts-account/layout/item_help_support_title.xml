<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/v_help_support_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8"
        android:background="@drawable/bg_top_bottom_shadow_grey"/>

    <com.goshop.app.common.view.RobotoMediumTextView
        android:id="@+id/tv_help_support_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:textColor="@color/color_text_hint"
        android:textSize="@dimen/size_font_14"
        android:paddingLeft="@dimen/size_16"
        android:paddingBottom="@dimen/size_8"
        android:paddingTop="@dimen/size_16"
        android:paddingRight="@dimen/size_16"/>

</LinearLayout>