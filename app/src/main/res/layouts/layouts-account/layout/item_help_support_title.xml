<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/v_help_support_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8"
        android:background="@color/color_divider_grey"/>

    <com.goshop.app.common.view.CustomBoldTextView
        android:id="@+id/tv_help_support_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/size_font_20"
        android:padding="@dimen/size_16"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/color_divider_grey"/>

</LinearLayout>