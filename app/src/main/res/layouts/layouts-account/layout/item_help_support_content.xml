<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_bottom_divider_line"
    android:paddingLeft="@dimen/size_16"
    android:paddingTop="@dimen/size_16"
    android:paddingBottom="@dimen/size_16"
    android:paddingRight="@dimen/size_10">

    <ImageView
        android:id="@+id/iv_help_right_arrow"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_icon_right_expand"
        android:scaleType="center"
        android:contentDescription="@string/app_name"
        android:layout_alignParentEnd="true"/>

    <com.goshop.app.common.view.RobotoRegularTextView
        android:id="@+id/tv_help_support_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_font_16"
        android:textColor="@color/color_grayscale_text"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/iv_help_right_arrow"
        android:layout_toStartOf="@id/iv_help_right_arrow"/>

</RelativeLayout>