<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_img_text_img_close"/>

    <com.goshop.app.common.view.CustomBoldTabLayout
        android:id="@+id/tablayout_my_rewards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabPaddingStart="@dimen/size_12"
        app:tabPaddingEnd="@dimen/size_12"
        app:tabMode="fixed"
        app:tabTextColor="@color/color_hint_grey"
        app:tabSelectedTextColor="@color/color_text_black"
        app:tabIndicatorColor="@color/color_text_black"
        app:tabTextAppearance="@style/mainTabStyle"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_my_rewards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>