<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingTop="@dimen/size_24"
    android:paddingBottom="@dimen/size_22"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_go_loyalty_thumb"
        android:layout_width="@dimen/size_65"
        android:layout_height="@dimen/size_67"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center_horizontal"
        android:scaleType="center"
        android:background="@drawable/ic_icon_user_default"/>

    <com.goshop.app.common.view.RobotoLightTextView
        android:id="@+id/tv_go_loyalty_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:textSize="@dimen/size_font_16"
        android:textColor="@color/color_black_light_second"
        android:layout_marginTop="@dimen/size_12"
        android:gravity="center"/>

    <com.goshop.app.common.view.RobotoMediumTextView
        android:id="@+id/tv_go_loyalty_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_shop_member"
        android:textAllCaps="true"
        android:textSize="@dimen/size_font_20"
        android:textColor="@color/color_black_light_second"
        android:layout_marginTop="@dimen/size_2"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_28"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/ll_loyalty_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <com.goshop.app.common.view.RobotoMediumTextView
                android:id="@+id/tv_loyalty_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/go_shop_member"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_black_light_second"/>

            <com.goshop.app.common.view.RobotoLightTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_3"
                android:gravity="center"
                android:text="@string/go_loyalty_id"
                android:textSize="@dimen/size_font_14"
                android:textColor="@color/color_black_light_second"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_loyalty_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <com.goshop.app.common.view.RobotoMediumTextView
                android:id="@+id/tv_loyalty_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/go_shop_member"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_black_light_second"/>

            <com.goshop.app.common.view.RobotoLightTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_3"
                android:gravity="center"
                android:text="@string/go_shop_points"
                android:textSize="@dimen/size_font_14"
                android:textColor="@color/color_black_light_second"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>