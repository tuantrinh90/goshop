<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size_16"
    android:paddingBottom="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_redeemed_thumb"
        android:layout_width="@dimen/size_84"
        android:layout_height="@dimen/size_84"
        android:layout_marginRight="@dimen/size_16"
        android:contentDescription="@string/app_name"
        android:layout_marginEnd="@dimen/size_16"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_redeemed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_grayscale_text"
            android:textSize="@dimen/size_font_14"
            android:maxLines="1"
            android:ellipsize="end"
        />
        <com.goshop.app.common.view.CustomBoldTextView
            android:id="@+id/tv_redeemed_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_grayscale_text"
            android:textSize="@dimen/size_font_16"
            android:maxLines="1"
            android:ellipsize="end"/>

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_redeemed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_grayscale_text"
            android:textSize="@dimen/size_font_14"
            android:maxLines="1"
            android:ellipsize="end"/>

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_redeemed_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_grayscale_text"
            android:textSize="@dimen/size_font_14"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>


</LinearLayout>