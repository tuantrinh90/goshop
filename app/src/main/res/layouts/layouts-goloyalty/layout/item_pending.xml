<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size_16"
    android:paddingBottom="@dimen/size_16"
    android:paddingRight="@dimen/size_16">

    <ImageView
        android:id="@+id/iv_pending_thumb"
        android:layout_width="@dimen/size_85"
        android:layout_height="@dimen/size_85"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/size_16"
        android:contentDescription="@string/app_name"
        tools:ignore="RtlHardcoded"/>
    <com.goshop.app.common.view.RobotoLightTextView
        android:id="@+id/tv_pending_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_pending_thumb"
        android:textColor="@color/color_black_light_second"
        android:textSize="@dimen/size_font_14"
        android:maxLines="1"
        android:ellipsize="end"
        tools:ignore="RtlHardcoded"/>
    <com.goshop.app.common.view.RobotoMediumTextView
        android:id="@+id/tv_pending_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_pending_thumb"
        android:layout_below="@id/tv_pending_name"
        android:textColor="@color/color_black_light_second"
        android:textSize="@dimen/size_font_16"
        android:maxLines="1"
        android:ellipsize="end"
        tools:ignore="RtlHardcoded"/>

    <com.goshop.app.common.view.RobotoLightTextView
        android:id="@+id/tv_pending_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_8"
        android:layout_toRightOf="@id/iv_pending_thumb"
        android:layout_below="@id/tv_pending_detail"
        android:textColor="@color/color_black_light_second"
        android:textSize="@dimen/size_font_13"
        android:maxLines="1"
        android:ellipsize="end"
        tools:ignore="RtlHardcoded"/>

    <com.goshop.app.common.view.RobotoLightTextView
        android:id="@+id/tv_pending_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_pending_thumb"
        android:paddingTop="@dimen/size_2"
        android:layout_below="@id/tv_pending_time"
        android:textColor="@color/color_black_light_second"
        android:textSize="@dimen/size_font_14"
        android:maxLines="1"
        android:ellipsize="end"
        tools:ignore="RtlHardcoded"/>
    <ImageView
        android:id="@+id/iv_pending_cards"
        android:layout_width="@dimen/size_28"
        android:layout_height="@dimen/size_28"
        android:src="@drawable/ic_icon_redeem_ticket"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/size_2"
        android:layout_alignBottom="@id/iv_pending_thumb"
        android:contentDescription="@string/app_name"
        tools:ignore="RtlHardcoded"/>

</RelativeLayout>