<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size_16"
    android:paddingBottom="@dimen/size_18"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry"
    android:paddingStart="@dimen/size_16">

    <ImageView
        android:id="@+id/iv_deal_thumb"
        android:layout_width="@dimen/size_182"
        android:layout_height="@dimen/size_182"
        android:contentDescription="@string/app_name"
    />
    <com.goshop.app.common.view.RobotoLightTextView
        android:id="@+id/tv_deal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_9"
        android:textColor="@color/color_black_light_second"
        android:textSize="@dimen/size_font_14"
        android:maxLines="1"
        android:ellipsize="end"
    />
    <com.goshop.app.common.view.RobotoMediumTextView
        android:id="@+id/tv_deal_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black_light_second"
        android:textSize="@dimen/size_font_16"
        android:maxLines="1"
        android:ellipsize="end"/>

    <com.goshop.app.common.view.RobotoLightTextView
        android:id="@+id/tv_deal_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:textColor="@color/color_black_light_second"
        android:textSize="@dimen/size_font_14"
        android:maxLines="1"
        android:ellipsize="end"/>

    <com.goshop.app.common.view.RobotoLightTextView
        android:id="@+id/tv_deal_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_1"
        android:textColor="@color/color_black_light_second"
        android:textSize="@dimen/size_font_14"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>