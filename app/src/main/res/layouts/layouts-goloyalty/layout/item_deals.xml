<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size_16"
    android:paddingBottom="@dimen/size_20"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_deal_thumb"
        android:layout_width="@dimen/size_182"
        android:layout_height="@dimen/size_182"
    />
    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_deal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_grayscale_text_two"
        android:textSize="@dimen/size_font_14"
        android:maxLines="1"
        android:ellipsize="end"
    />
    <com.goshop.app.common.view.CustomBoldTextView
        android:id="@+id/tv_deal_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_grayscale_text_two"
        android:textSize="@dimen/size_font_16"
        android:maxLines="1"
        android:ellipsize="end"/>

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_deal_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_grayscale_text_two"
        android:textSize="@dimen/size_font_14"
        android:maxLines="1"
        android:ellipsize="end"/>

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_deal_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_grayscale_text_two"
        android:textSize="@dimen/size_font_14"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>