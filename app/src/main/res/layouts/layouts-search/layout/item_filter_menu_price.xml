<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_12"
    android:orientation="vertical">

    <com.goshop.app.common.view.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_2"
        android:text="@string/price_rm"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_center_price"
            android:layout_width="@dimen/size_8"
            android:layout_height="@dimen/size_1"
            android:layout_marginRight="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_centerInParent="true"
            android:background="@color/color_main_grey"/>

        <com.goshop.app.common.view.CustomEditText
            android:id="@+id/et_search_filter_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textCursorDrawable="@null"
            android:background="@drawable/bg_edittext_grayline"
            android:gravity="center"
            android:inputType="number"
            android:layout_toLeftOf="@id/iv_center_price"/>

        <com.goshop.app.common.view.CustomEditText
            android:id="@+id/et_search_filter_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textCursorDrawable="@null"
            android:background="@drawable/bg_edittext_grayline"
            android:gravity="center"
            android:inputType="number"
            android:layout_toRightOf="@id/iv_center_price"/>
    </RelativeLayout>
</LinearLayout>