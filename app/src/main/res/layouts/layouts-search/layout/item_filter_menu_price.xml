<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_12"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_center_price"
        android:layout_width="@dimen/size_8"
        android:layout_height="@dimen/size_1"
        android:layout_marginRight="@dimen/size_20"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:background="@color/color_line_grey"/>

    <com.goshop.app.common.view.CustomEditText
        android:id="@+id/et_search_filter_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textCursorDrawable="@null"
        android:background="@drawable/bg_edittext_grayline"
        android:gravity="left"
        android:inputType="number"
        android:hint="@string/min"
        android:textColor="@color/color_text_black"
        android:textColorHint="@color/color_hint_grey"
        android:textSize="@dimen/size_font_12"
        android:padding="@dimen/size_8"
        android:layout_toLeftOf="@id/iv_center_price"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/iv_center_price"
        tools:ignore="RtlHardcoded"/>

    <com.goshop.app.common.view.CustomEditText
        android:id="@+id/et_search_filter_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textCursorDrawable="@null"
        android:background="@drawable/bg_edittext_grayline"
        android:gravity="left"
        android:textSize="@dimen/size_font_12"
        android:textColor="@color/color_text_black"
        android:hint="@string/max"
        android:padding="@dimen/size_8"
        android:inputType="number"
        android:textColorHint="@color/color_hint_grey"
        android:layout_toRightOf="@id/iv_center_price"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/iv_center_price"
        tools:ignore="RtlHardcoded"/>

</RelativeLayout>