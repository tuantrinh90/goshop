<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_8"
    android:paddingBottom="@dimen/size_16"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_center_price"
        android:layout_width="@dimen/size_4"
        android:layout_height="@dimen/size_1"
        android:layout_marginRight="@dimen/size_20"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:background="@color/color_grayscale_text"/>

    <com.goshop.app.common.view.CustomEditText
        android:id="@+id/et_search_filter_min"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_32"
        android:layout_alignParentLeft="true"
        android:textCursorDrawable="@null"
        android:background="@drawable/bg_et_editable"
        android:gravity="left|center_vertical"
        android:inputType="number"
        android:textColor="@color/color_grayscale_text"
        android:textColorHint="@color/color_text_hint"
        android:textSize="@dimen/size_font_12"
        android:layout_toLeftOf="@id/iv_center_price"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/iv_center_price"
        tools:ignore="RtlHardcoded"/>

    <com.goshop.app.common.view.CustomEditText
        android:id="@+id/et_search_filter_max"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_32"
        android:layout_alignParentRight="true"
        android:textCursorDrawable="@null"
        android:background="@drawable/bg_et_editable"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/size_font_12"
        android:textColor="@color/color_grayscale_text"
        android:inputType="number"
        android:textColorHint="@color/color_text_hint"
        android:layout_toRightOf="@id/iv_center_price"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/iv_center_price"
        tools:ignore="RtlHardcoded"/>

</RelativeLayout>