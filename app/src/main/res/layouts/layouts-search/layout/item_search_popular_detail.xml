<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingRight="@dimen/size_24"
    android:paddingLeft="@dimen/size_24"
    android:paddingBottom="@dimen/size_8"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/iv_search_detail"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_60"
        android:background="@mipmap/bought"
        android:contentDescription="@string/app_name"/>

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_search_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_search_detail"
        android:textSize="@dimen/size_font_12"
        android:textColor="@color/color_text_black"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingTop="@dimen/size_8"
        android:paddingLeft="@dimen/size_8"
        tools:ignore="RtlSymmetry"
        android:layout_toEndOf="@id/iv_search_detail"
        android:paddingStart="@dimen/size_8"/>

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_search_detail_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_search_detail_title"
        android:layout_toRightOf="@id/iv_search_detail"
        android:textSize="@dimen/size_font_12"
        android:textColor="@color/color_hint_grey"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingTop="@dimen/size_4"
        android:paddingLeft="@dimen/size_8"
        tools:ignore="RtlSymmetry"
        android:layout_toEndOf="@id/iv_search_detail"
        android:paddingStart="@dimen/size_8"/>

    <com.goshop.app.common.view.CustomBoldTextView
        android:id="@+id/tv_search_detail_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_search_detail_old"
        android:layout_toRightOf="@id/iv_search_detail"
        android:textSize="@dimen/size_font_12"
        android:textColor="@color/color_text_black"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingTop="@dimen/size_4"
        android:paddingLeft="@dimen/size_8"
        tools:ignore="RtlSymmetry"
        android:layout_toEndOf="@id/iv_search_detail"
        android:paddingStart="@dimen/size_8"/>

</RelativeLayout>