<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:openDrawer="end">

    <include
        layout="@layout/search_result_main_contain"/>

    <RelativeLayout
        android:id="@+id/rl_drawer_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_gravity="end"
        android:fitsSystemWindows="true">

        <include
            layout="@layout/layout_filter_menu"/>

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_btn_search_filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="@string/filter"
            android:paddingRight="@dimen/size_20"
            android:textColor="@color/color_main_black"
            android:textSize="@dimen/size_font_14"
            tools:ignore="RtlSymmetry"
            android:layout_alignParentEnd="true"
            android:paddingEnd="@dimen/size_20"/>

        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_btn_search_arrival"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/new_arrivals"
            android:paddingRight="@dimen/size_18"
            android:layout_toLeftOf="@id/tv_btn_search_filter"
            android:textColor="@color/color_main_black"
            android:textSize="@dimen/size_font_14"
            tools:ignore="RtlSymmetry"
            android:paddingEnd="@dimen/size_18"
            android:layout_toStartOf="@id/tv_btn_search_filter"/>

    </RelativeLayout>



</android.support.v4.widget.DrawerLayout>
