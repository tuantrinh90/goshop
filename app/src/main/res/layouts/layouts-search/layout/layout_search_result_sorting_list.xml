<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_search_result_sorting_arrivals"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:background="@drawable/selector_bg_white_pink">
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_search_result_sorting_arrivals"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/size_font_14"
            android:text="@string/new_arrivals"
            android:textColor="@drawable/selector_text_white_pink"/>

        <ImageView
            android:id="@+id/iv_search_result_sorting_arrivals"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/right"
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_search_result_sorting_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:background="@drawable/selector_bg_white_pink">
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_search_result_sorting_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/size_font_14"
            android:text="@string/price_low_high"
            android:textColor="@drawable/selector_text_white_pink"
        />

        <ImageView
            android:id="@+id/iv_search_result_sorting_price"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/right"
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_search_result_sorting_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:background="@drawable/selector_bg_white_pink">
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_search_result_sorting_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/size_font_14"
            android:text="@string/name_a_z"
            android:textColor="@drawable/selector_text_white_pink"/>

        <ImageView
            android:id="@+id/iv_search_result_sorting_name"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/right"
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_search_result_sorting_promotion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:background="@drawable/selector_bg_white_pink">
        <com.goshop.app.common.view.CustomTextView
            android:id="@+id/tv_search_result_sorting_promotion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/size_font_14"
            android:text="@string/promotion"
            android:textColor="@drawable/selector_text_white_pink"/>

        <ImageView
            android:id="@+id/iv_search_result_sorting_promotion"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/right"
        />
    </RelativeLayout>

</LinearLayout>