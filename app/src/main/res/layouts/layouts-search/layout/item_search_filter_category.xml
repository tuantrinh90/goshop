<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_48"
    android:gravity="center_vertical"
    android:paddingRight="@dimen/size_48"
    android:paddingLeft="@dimen/size_48"
    android:background="@android:color/white"
    android:orientation="horizontal"
    tools:ignore="Overdraw">

    <com.goshop.app.common.view.RobotoLightTextView
        android:id="@+id/tv_search_category_keywords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_grayscale_text"
        android:textSize="@dimen/size_font_14"/>
    <com.goshop.app.common.view.RobotoLightTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_4"
        android:paddingRight="@dimen/size_4"
        android:text="@string/in"
        android:textColor="@color/color_grayscale_text"
        android:textSize="@dimen/size_font_14"/>
    <com.goshop.app.common.view.RobotoLightTextView
        android:id="@+id/tv_search_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_main_pink"
        android:textSize="@dimen/size_font_14"/>

</LinearLayout>