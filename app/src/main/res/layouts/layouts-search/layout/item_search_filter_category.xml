<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingRight="@dimen/size_24"
    android:paddingLeft="@dimen/size_24"
    android:paddingBottom="@dimen/size_12"
    android:paddingTop="@dimen/size_12"
    android:background="@android:color/white"
    android:orientation="horizontal"
    tools:ignore="Overdraw">

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_search_category_keywords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_main_black"
        android:textSize="@dimen/size_font_14"/>
    <com.goshop.app.common.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_4"
        android:paddingRight="@dimen/size_4"
        android:text="@string/in"
        android:textColor="@color/color_main_black"
        android:textSize="@dimen/size_font_14"/>
    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_search_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_main_pink"
        android:textSize="@dimen/size_font_14"/>

</LinearLayout>