<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:animET="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_right_text"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/size_40"
            android:orientation="vertical">

            <com.goshop.app.common.CustomAnimEditText
                android:id="@+id/et_new_address_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                animET:hint="@string/register_name"/>

            <com.goshop.app.common.CustomAnimEditText
                android:id="@+id/et_new_address_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                animET:hint="@string/register_lastname"/>

            <com.goshop.app.common.CustomAnimEditText
                android:id="@+id/et_new_address_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                animET:hint="@string/address_one"/>

            <com.goshop.app.common.CustomAnimEditText
                android:id="@+id/et_new_address_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                animET:hint="@string/address_two"/>

            <com.goshop.app.common.view.RobotoRegularTextView
                android:id="@+id/tv_new_address_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_32"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:paddingRight="@dimen/size_8"
                android:drawableRight="@drawable/ic_icon_spinner_down"
                android:background="@drawable/bg_bottom_line"
                android:paddingBottom="@dimen/size_8"
                android:paddingTop="@dimen/size_20"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_16"
                android:hint="@string/country"
                android:drawableEnd="@drawable/ic_icon_spinner_down"
                tools:ignore="RtlSymmetry"
                android:paddingEnd="@dimen/size_8"/>


            <com.goshop.app.common.view.RobotoRegularTextView
                android:id="@+id/tv_new_address_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_32"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:paddingRight="@dimen/size_8"
                android:drawableRight="@drawable/ic_icon_spinner_down"
                android:background="@drawable/bg_bottom_line"
                android:paddingBottom="@dimen/size_8"
                android:paddingTop="@dimen/size_20"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_16"
                android:hint="@string/state"
                android:drawableEnd="@drawable/ic_icon_spinner_down"
                tools:ignore="RtlSymmetry"
                android:paddingEnd="@dimen/size_8"/>

            <com.goshop.app.common.view.RobotoRegularTextView
                android:id="@+id/tv_new_address_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_32"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:paddingRight="@dimen/size_8"
                android:drawableRight="@drawable/ic_icon_spinner_down"
                android:background="@drawable/bg_bottom_line"
                android:paddingBottom="@dimen/size_8"
                android:paddingTop="@dimen/size_20"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_16"
                android:hint="@string/city"
                android:drawableEnd="@drawable/ic_icon_spinner_down"
                tools:ignore="RtlSymmetry"
                android:paddingEnd="@dimen/size_8"/>

            <com.goshop.app.common.CustomAnimEditText
                android:id="@+id/et_new_address_zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                animET:hint="@string/zip_postal_code"/>

            <com.goshop.app.common.CustomAnimEditText
                android:id="@+id/et_new_address_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                animET:hint="@string/phone_number"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>