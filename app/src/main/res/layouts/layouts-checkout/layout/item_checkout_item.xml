<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/size_16"
    android:background="@drawable/bg_bottom_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_checkout_item_icon"
        android:layout_width="@dimen/size_97"
        android:layout_height="@dimen/size_97"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name" />
    <com.goshop.app.common.view.RobotoMediumTextView
        android:id="@+id/tv_checkout_percent"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_21"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_font_13"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_2"
        android:layout_alignLeft="@id/iv_checkout_item_icon"
        android:layout_alignBottom="@id/iv_checkout_item_icon"
        android:background="@color/color_main_pink"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_checkout_item_icon"
        android:paddingLeft="@dimen/size_8"
        android:orientation="vertical">
        <com.goshop.app.common.view.RobotoLightTextView
            android:id="@+id/tv_checkout_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_font_14"
            android:textColor="@color/color_grayscale_text" />
        <com.goshop.app.common.view.RobotoLightTextView
            android:id="@+id/tv_checkout_color_and_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_grayscale_secondary"
            android:textSize="@dimen/size_font_12"
            android:paddingTop="@dimen/size_4"/>
        <com.goshop.app.common.view.RobotoLightTextView
            android:id="@+id/tv_checkout_old_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:textSize="@dimen/size_font_12"
            android:textColor="@color/color_text_hint"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_1"
            android:orientation="horizontal">
            <com.goshop.app.common.view.RobotoMediumTextView
                android:id="@+id/tv_checkout_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_14" />
            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_checkout_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="@dimen/size_font_14"
                android:textColor="@color/color_grayscale_text"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>