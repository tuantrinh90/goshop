<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_shipping_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_line"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_shipping_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_16"
            android:paddingRight="@dimen/size_16"
            android:paddingTop="@dimen/size_18"
            android:paddingBottom="@dimen/size_20">

            <com.goshop.app.common.view.RobotoMediumTextView
                android:id="@+id/tv_checkout_shipping_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/size_font_20"
                android:text="@string/checkout_shipping"/>

            <com.goshop.app.common.view.RobotoMediumTextView
                android:id="@+id/tv_checkout_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_20"
                android:textSize="@dimen/size_font_16"
                android:layout_below="@id/tv_checkout_shipping_title"
                android:textColor="@color/color_black_light"
                android:text="@string/user_name_test"
            />
            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_checkout_address_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_6"
                android:layout_below="@id/tv_checkout_username"
                android:text="@string/address_one"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_black_light"/>

            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_checkout_address_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_6"
                android:layout_below="@id/tv_checkout_address_first"
                android:text="@string/address_two"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_black_light"/>

            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_checkout_city_state_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_6"
                android:layout_below="@id/tv_checkout_address_second"
                android:text="@string/city_state_1000"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_black_light"/>

            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_checkout_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_6"
                android:layout_below="@id/tv_checkout_city_state_code"
                android:text="@string/country"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_black_light"/>

            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_checkout_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_6"
                android:layout_below="@id/tv_checkout_country"
                android:text="@string/tel"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_black_light"/>

            <ImageView
                android:id="@+id/iv_checkout_shipping_more"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_icon_right_expand"
                android:scaleType="center"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:contentDescription="@string/app_name"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <com.goshop.app.common.view.RobotoLightCheckBox
            android:id="@+id/cb_checkout_use_same"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/size_22"
            android:gravity="top"
            android:layout_marginLeft="@dimen/size_16"
            android:text="@string/use_the_same_address"
            android:textSize="@dimen/size_font_16"
            android:paddingLeft="@dimen/size_16"
            android:button="@drawable/checked_radio_button"/>

        <RelativeLayout
            android:id="@+id/rl_billing_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingLeft="@dimen/size_16"
            android:paddingRight="@dimen/size_16"
            android:paddingBottom="@dimen/size_20">

            <com.goshop.app.common.view.RobotoMediumTextView
                android:id="@+id/tv_checkout_billing_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/size_font_20"
                android:text="@string/type_billing"/>

            <com.goshop.app.common.view.RobotoMediumTextView
                android:id="@+id/tv_checkout_billing_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_20"
                android:textSize="@dimen/size_font_16"
                android:layout_below="@id/tv_checkout_billing_title"
                android:textColor="@color/color_black_light"
                android:text="@string/user_name_test"
            />
            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_checkout_billing_address_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_6"
                android:layout_below="@id/tv_checkout_billing_username"
                android:text="@string/address_one"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_black_light"/>

            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_checkout_billing_address_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_6"
                android:layout_below="@id/tv_checkout_billing_address_first"
                android:text="@string/address_two"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_black_light"/>

            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_checkout_billing_city_state_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_6"
                android:layout_below="@id/tv_checkout_billing_address_second"
                android:text="@string/city_state_1000"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_black_light"/>

            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_checkout_billing_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_6"
                android:layout_below="@id/tv_checkout_billing_city_state_code"
                android:text="@string/country"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_black_light"/>

            <com.goshop.app.common.view.RobotoLightTextView
                android:id="@+id/tv_checkout_billing_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_6"
                android:layout_below="@id/tv_checkout_billing_country"
                android:text="@string/tel"
                android:textSize="@dimen/size_font_16"
                android:textColor="@color/color_black_light"/>

            <ImageView
                android:id="@+id/iv_checkout_billing_shipping_more"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_icon_right_expand"
                android:scaleType="center"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:contentDescription="@string/app_name"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8"
        android:background="@drawable/drawable_biger_divider_with_shadow"/>

    <com.goshop.app.common.view.RobotoMediumTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_18"
        android:paddingLeft="@dimen/size_16"
        android:textColor="@color/color_black_light"
        android:textSize="@dimen/size_font_20"
        android:text="@string/payment"
        tools:ignore="RtlHardcoded,RtlSymmetry"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_checkout_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_18"
        android:layout_marginBottom="@dimen/size_20"
        android:nestedScrollingEnabled="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8"
        android:background="@drawable/drawable_biger_divider_with_shadow"/>


</LinearLayout>