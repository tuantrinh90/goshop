<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <include
        layout="@layout/toolbar_img_text_img_close"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_shipping_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:paddingTop="@dimen/size_20"
                android:paddingBottom="@dimen/size_20"
                android:background="@drawable/bg_bottom_line">

                <com.goshop.app.common.view.CustomBoldTextView
                    android:id="@+id/tv_checkout_shipping_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_grayscale_text"
                    android:textSize="@dimen/size_font_16"
                    android:text="@string/checkout_shipping"/>

                <com.goshop.app.common.view.CustomBoldTextView
                    android:id="@+id/tv_checkout_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_20"
                    android:textSize="@dimen/size_font_16"
                    android:layout_below="@id/tv_checkout_shipping_title"
                    android:textColor="@color/color_grayscale_text"
                    android:text="@string/user_name_test"
                />
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_checkout_address_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_4"
                    android:layout_below="@id/tv_checkout_username"
                    android:text="@string/address_one"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_grayscale_text"/>

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_checkout_address_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_4"
                    android:layout_below="@id/tv_checkout_address_first"
                    android:text="@string/address_two"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_grayscale_text"/>

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_checkout_city_state_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_4"
                    android:layout_below="@id/tv_checkout_address_second"
                    android:text="@string/city_state_1000"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_grayscale_text"/>

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_checkout_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_4"
                    android:layout_below="@id/tv_checkout_city_state_code"
                    android:text="@string/country"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_grayscale_text"/>

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_checkout_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_4"
                    android:layout_below="@id/tv_checkout_country"
                    android:text="@string/tel"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_grayscale_text"/>

                <ImageView
                    android:id="@+id/iv_checkout_shipping_more"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_icon_right_expand"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/app_name"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_8"
                android:background="@drawable/bg_top_bottom_shadow_grey"/>

            <com.goshop.app.common.view.CustomBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_20"
                android:paddingLeft="@dimen/size_16"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_16"
                android:text="@string/checkout_shipping"
                tools:ignore="RtlHardcoded,RtlSymmetry"/>
            <RadioGroup
                android:id="@+id/radio_payment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginBottom="@dimen/size_20"
                android:orientation="vertical"
                tools:ignore="RelativeOverlap">
                <com.goshop.app.common.view.CustomRadioButton
                    android:id="@+id/rb_checkout_payment_banking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_grayscale_text"
                    android:text="@string/checkout_payment_bank"/>
                <com.goshop.app.common.view.CustomRadioButton
                    android:id="@+id/rb_checkout_payment_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_grayscale_text"
                    android:text="@string/checkout_payment_credit"/>
                <com.goshop.app.common.view.CustomRadioButton
                    android:id="@+id/rb_checkout_payment_cash_on_deliery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_16"
                    android:textColor="@color/color_grayscale_text"
                    android:text="@string/checkout_payment_cash_on_deliery"/>
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_8"
                android:background="@drawable/bg_top_bottom_shadow_grey"/>

            <com.goshop.app.common.view.CustomBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_20"
                android:paddingLeft="@dimen/size_16"
                android:paddingBottom="@dimen/size_4"
                android:textColor="@color/color_grayscale_text"
                android:textSize="@dimen/size_font_16"
                android:text="@string/my_orders_items"
                tools:ignore="RtlHardcoded,RtlSymmetry"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_order_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_8"
                android:background="@drawable/bg_top_bottom_shadow_grey"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_16">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.goshop.app.common.view.CustomBoldTextView
                        android:id="@+id/tv_btn_check_discount_apply"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_40"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:layout_marginLeft="@dimen/size_8"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/apply"
                        android:layout_alignParentRight="true"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:background="@drawable/drawable_round_black"
                        android:layout_alignParentEnd="true"
                        tools:ignore="RtlHardcoded"/>

                    <com.goshop.app.common.view.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:textColor="@color/color_apply_grey"
                        android:hint="@string/enter_discount_code"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/size_12"
                        android:paddingTop="@dimen/size_10"
                        android:paddingBottom="@dimen/size_10"
                        android:maxLines="1"
                        android:layout_toLeftOf="@id/tv_btn_check_discount_apply"
                        android:layout_toStartOf="@id/tv_btn_check_discount_apply"
                        android:textColorHint="@color/color_divider_grey"
                        android:background="@drawable/bg_et_editable"
                        tools:ignore="RtlHardcoded,RtlSymmetry"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_16">

                    <com.goshop.app.common.view.CustomBoldTextView
                        android:id="@+id/tv_btn_check_gift_card_apply"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_40"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:layout_marginLeft="@dimen/size_8"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/apply"
                        android:layout_alignParentRight="true"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:background="@drawable/drawable_round_black"
                        android:layout_alignParentEnd="true"
                        tools:ignore="RtlHardcoded"/>

                    <com.goshop.app.common.view.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:textColor="@color/color_apply_grey"
                        android:hint="@string/enter_egift_card_code"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/size_12"
                        android:paddingTop="@dimen/size_10"
                        android:paddingBottom="@dimen/size_10"
                        android:maxLines="1"
                        android:layout_alignBottom="@id/tv_btn_check_gift_card_apply"
                        android:layout_toLeftOf="@id/tv_btn_check_gift_card_apply"
                        android:layout_toStartOf="@id/tv_btn_check_gift_card_apply"
                        android:textColorHint="@color/color_divider_grey"
                        android:background="@drawable/bg_et_editable"
                        tools:ignore="RtlHardcoded,RtlSymmetry"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_16">

                    <com.goshop.app.common.view.CustomBoldTextView
                        android:id="@+id/tv_btn_check_points_apply"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_40"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:layout_marginLeft="@dimen/size_8"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/apply"
                        android:layout_alignParentRight="true"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:background="@drawable/drawable_round_black"
                        android:layout_alignParentEnd="true"
                        tools:ignore="RtlHardcoded"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/tv_btn_check_points_apply"
                        android:layout_toStartOf="@id/tv_btn_check_points_apply"
                        android:orientation="horizontal">
                        <com.goshop.app.common.view.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_14"
                            android:layout_gravity="center_vertical"
                            android:paddingRight="@dimen/size_8"
                            android:textColor="@color/color_grayscale_text_two"
                            android:text="@string/use"
                            tools:ignore="RtlHardcoded,RtlSymmetry"/>
                        <com.goshop.app.common.view.CustomEditText
                            android:layout_width="@dimen/size_86"
                            android:layout_height="@dimen/size_36"
                            android:textSize="@dimen/size_font_14"
                            android:textColor="@color/color_apply_grey"
                            android:paddingLeft="@dimen/size_12"
                            android:paddingTop="@dimen/size_10"
                            android:paddingBottom="@dimen/size_10"
                            android:maxLines="1"
                            android:textColorHint="@color/color_divider_grey"
                            android:background="@drawable/bg_et_editable"
                            tools:ignore="RtlHardcoded,RtlSymmetry"/>

                        <com.goshop.app.common.view.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size_font_14"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="@dimen/size_8"
                            android:textColor="@color/color_grayscale_text_two"
                            android:text="@string/go_shop_points"
                            tools:ignore="RtlHardcoded,RtlSymmetry"/>
                    </LinearLayout>


                </RelativeLayout>
                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_checkout_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_font_14"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="@dimen/size_12"
                    android:textColor="@color/color_grayscale_text_two"
                    android:text="@string/checkout_tip"
                />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:layout_marginTop="@dimen/size_20"
                    android:background="@color/color_divider_grey"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_16">

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/sub_total"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/color_grayscale_text"
                        android:gravity="start"
                        android:layout_alignParentStart="true"/>

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/demo_cart_price1"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_grayscale_text"
                        android:gravity="end"
                        android:layout_alignParentEnd="true"
                        tools:ignore="RelativeOverlap"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8">

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/rounding_amount"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/color_grayscale_text"
                        android:gravity="start"
                        android:layout_alignParentStart="true"/>

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/demo_cart_price1"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_grayscale_text"
                        android:gravity="end"
                        android:layout_alignParentEnd="true"
                        tools:ignore="RelativeOverlap"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8">

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/shipping_fee"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/color_grayscale_text"
                        android:gravity="start"
                        android:layout_alignParentStart="true"/>

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/demo_cart_price1"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_grayscale_text"
                        android:gravity="end"
                        android:layout_alignParentEnd="true"
                        tools:ignore="RelativeOverlap"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8">

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/disscount"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/color_grayscale_text"
                        android:gravity="start"
                        android:layout_alignParentStart="true"/>

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/demo_cart_price2"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_grayscale_text"
                        android:gravity="end"
                        android:layout_alignParentEnd="true"
                        tools:ignore="RelativeOverlap"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8">

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/egift_card"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/color_grayscale_text"
                        android:gravity="start"
                        android:layout_alignParentStart="true"/>

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/demo_cart_price2"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_grayscale_text"
                        android:gravity="end"
                        android:layout_alignParentEnd="true"
                        tools:ignore="RelativeOverlap"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8">

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/go_shop_points_num"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/color_grayscale_text"
                        android:gravity="start"
                        android:layout_alignParentStart="true"/>

                    <com.goshop.app.common.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_14"
                        android:text="@string/demo_cart_price2"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_grayscale_text"
                        android:gravity="end"
                        android:layout_alignParentEnd="true"
                        tools:ignore="RelativeOverlap"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8">

                    <com.goshop.app.common.view.CustomBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_18"
                        android:text="@string/total_incl_gst"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/color_grayscale_text"
                        android:gravity="start"
                        android:layout_alignParentStart="true"/>

                    <com.goshop.app.common.view.CustomBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_font_18"
                        android:text="@string/demo_cart_price3"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_main_pink"
                        android:gravity="end"
                        android:layout_alignParentEnd="true"
                        tools:ignore="RelativeOverlap"/>
                </RelativeLayout>


            </LinearLayout>

            <com.goshop.app.common.view.CustomBoldTextView
                android:id="@+id/btn_checkout_place_my_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_round_pink"
                android:layout_margin="@dimen/size_8"
                android:gravity="center"
                android:paddingTop="@dimen/size_12"
                android:paddingBottom="@dimen/size_16"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_font_16"
                android:text="@string/checkout_place_my_order"/>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>