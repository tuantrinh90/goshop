<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_select_address_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_shadow_white"
        android:padding="@dimen/size_8"
        android:layout_alignParentBottom="true">
        <include
            layout="@layout/layout_button_white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_above="@id/ll_select_address_bottom">
        <include
            layout="@layout/toolbar_img_text_img_close"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_select_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>



</RelativeLayout>