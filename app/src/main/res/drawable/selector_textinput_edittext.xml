<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>

            </item>
            <item
                android:left="@dimen/size_2_negative"
                android:right="@dimen/size_2_negative"
                android:top="@dimen/size_2_negative">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="@dimen/size_divider"
                        android:color="@color/color_orange_red"
                        android:dashGap="@dimen/size_0"
                        android:dashWidth="@dimen/size_0" />
                </shape>
            </item>
        </layer-list>
    </item>


    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>

            </item>
            <item
                android:left="@dimen/size_2_negative"
                android:right="@dimen/size_2_negative"
                android:top="@dimen/size_2_negative">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="@dimen/size_divider"
                        android:color="@color/color_grayscale_secondary"
                        android:dashGap="@dimen/size_0"
                        android:dashWidth="@dimen/size_0" />
                </shape>
            </item>
        </layer-list>
    </item>


    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item
                android:left="@dimen/size_2_negative"
                android:right="@dimen/size_2_negative"
                android:top="@dimen/size_2_negative">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="@dimen/size_divider"
                        android:color="@color/color_divider_grey"
                        android:dashGap="@dimen/size_0"
                        android:dashWidth="@dimen/size_0" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>