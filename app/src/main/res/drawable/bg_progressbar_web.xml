<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/size_5" />
            <gradient
                android:angle="0"
                android:centerColor="@color/color_corporate_purple"
                android:centerY="0.75"
                android:endColor="@color/color_corporate_purple"
                android:startColor="@color/color_corporate_purple" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/size_5" />
                <gradient
                    android:angle="0"
                    android:centerColor="@color/color_corporate_purple"
                    android:centerY="0.75"
                    android:endColor="@color/color_corporate_purple"
                    android:startColor="@color/color_corporate_purple" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/size_5" />
                <gradient
                    android:angle="0"
                    android:endColor="@color/color_main_pink"
                    android:startColor="@color/color_main_pink" />
            </shape>
        </clip>
    </item>

</layer-list>