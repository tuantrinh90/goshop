<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/color_whole_bg"/>
                    <padding
                        android:right="@dimen/size_6"
                        android:left="@dimen/size_6" />
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="end"
                    android:src="@drawable/ic_icon_arrow_up"/>
            </item>
        </layer-list>
    </item>
    <item
        android:state_selected="false"
    >
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/color_whole_bg"/>
                    <padding
                        android:right="@dimen/size_6"
                    android:left="@dimen/size_6"/>
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="end"
                    android:src="@drawable/ic_icon_arrow_down"/>
            </item>
        </layer-list>
    </item>
</selector>
