<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- bottom shadow -->
    <item>
        <shape android:shape="rectangle" >
            <!-- from top to bottom -->
            <gradient
                android:angle="90"
                android:centerColor="@color/color_shadow_dark_center"
                android:endColor="@color/color_shadow_dark_end"
                android:startColor="@color/color_shadow_dark" />
        </shape>
    </item>

    <!-- content -->
    <item android:bottom="@dimen/size_4">
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list>