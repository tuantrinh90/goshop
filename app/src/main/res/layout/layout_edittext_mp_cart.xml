<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_et_minus_plus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:focusableInTouchMode="true"
    android:focusable="true" >

    <ImageView
        android:id="@+id/iv_minus"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bg_cart_mp"
        android:src="@drawable/ic_icon_et_minus"
        android:scaleType="center"
        android:contentDescription="@string/app_name"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/iv_plus"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_cart_mp"
        android:src="@drawable/ic_icon_et_plus"
        android:scaleType="center"
        android:contentDescription="@string/app_name"
        android:layout_alignParentEnd="true"/>

    <com.goshop.app.common.view.RobotoRegularEditText
        android:id="@+id/et_minus_plus"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_24"
        android:layout_toLeftOf="@id/iv_plus"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/size_font_14"
        android:textColor="@color/color_grayscale_text"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:singleLine="true"
        android:layout_marginRight="@dimen/size_8"
        android:layout_marginLeft="@dimen/size_8"
        android:imeOptions="actionDone"
        android:layout_toRightOf="@id/iv_minus"
        android:layout_toStartOf="@id/iv_plus"
        android:layout_toEndOf="@id/iv_minus"/>

</RelativeLayout>