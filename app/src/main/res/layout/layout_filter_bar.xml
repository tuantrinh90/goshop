<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_48">

    <com.goshop.app.common.view.CustomTextView
        android:id="@+id/tv_btn_sort"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/new_arrivals"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/size_16"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/size_font_14"
        tools:ignore="RtlSymmetry"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/iv_sort_arrow"
        android:layout_width="@dimen/size_16"
        android:layout_height="@dimen/size_16"
        android:src="@drawable/selector_image_expand_selected"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_btn_sort"
        android:contentDescription="@string/app_name"
        android:layout_toEndOf="@id/tv_btn_sort"/>


    <ImageView
        android:id="@+id/iv_btn_filter"
        android:layout_width="@dimen/size_20"
        android:layout_height="@dimen/size_18"
        android:background="@mipmap/filter"
        android:layout_marginRight="@dimen/size_16"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"/>

</RelativeLayout>