<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="10dp"
>
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbar"
        app:layout_scrollFlags="enterAlways"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <!-- TODO modify this class according to your needs -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_image_left"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="@dimen/toolbar_height"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageview_left_menu"
                    android:layout_width="18dp"
                    android:layout_height="12dp"
                    android:scaleType="centerInside"
                    android:layout_centerInParent="true"
                    tools:ignore="ContentDescription"
                    android:background="@drawable/ic_icon_home"
                />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_image_right"
                android:layout_width="@dimen/toolbar_height"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                >
                <ImageView
                    android:id="@+id/imageview_right_menu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/ic_home_checkout"
                    android:layout_centerInParent="true"
                    tools:ignore="ContentDescription"
                />

                <com.goshop.app.common.view.CustomTextView
                    android:id="@+id/tv_toolbar_shoppingCart_num"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@drawable/bg_slide_menu_number"
                    android:text="1"
                    android:textSize="10sp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:gravity="center"
                    tools:ignore="HardcodedText"
                    android:layout_marginEnd="12dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_toRightOf="@id/rl_image_left"
                android:layout_toLeftOf="@id/rl_image_right"
                android:layout_centerInParent="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/rl_image_left"
                android:layout_toStartOf="@id/rl_image_right">
                <com.goshop.app.common.view.CustomEditText
                    android:id="@+id/et_home_search"
                    android:paddingLeft="25dp"
                    android:theme="@style/MyEditText"
                    android:hint="@string/home_search_hint"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:textColorHint="@color/blackTrans38"
                    android:textCursorDrawable="@drawable/edittext_cursor_color"
                    android:layout_height="match_parent"
                    tools:ignore="RtlSymmetry"
                    android:paddingStart="25dp"/>
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/ic_search"
                    android:contentDescription="@string/app_name"
                    android:layout_marginStart="5dp"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
        </RelativeLayout>


    </android.support.v7.widget.Toolbar>
</android.support.v7.widget.CardView>