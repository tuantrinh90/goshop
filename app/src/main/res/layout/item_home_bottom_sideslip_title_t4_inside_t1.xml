<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <ImageView
        android:id="@+id/iv_home_bottom_slide_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/tv_home_bottom_slide_name"
        android:text="@string/home_item_test_product_name"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_home_bottom_slide_price"
        android:textStyle="bold"
        android:text="@string/home_item_test_product_price"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>