<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_anim_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorTextAppearance="@style/errorAppearance"
        app:hintTextAppearance="@style/hintAppearance">

        <com.goshop.app.common.ClickToSelectEditText
            android:id="@+id/et_anim_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/size_6"
            android:paddingTop="@dimen/size_6"/>

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/iv_anim_spinner"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_marginTop="@dimen/size_12"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"
        android:background="@drawable/ic_chevron_titlebar_down"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>