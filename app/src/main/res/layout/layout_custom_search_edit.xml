<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_search_del"
        android:layout_width="@dimen/size_20"
        android:layout_height="@dimen/size_20"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size_8"
        android:background="@mipmap/close"
        android:contentDescription="@string/app_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/size_8"/>

    <com.goshop.app.common.view.CustomEditText
        android:id="@+id/et_search_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_search_del"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/size_font_16"
        android:maxLines="1"
        android:textCursorDrawable="@null"
        android:paddingLeft="@dimen/size_8"
        android:paddingRight="@dimen/size_8"
        android:background="@null"
        android:gravity="left"
        android:inputType="text"
        android:hint="@string/search_hint"
        android:textColorHint="@color/color_hint_grey"
        android:imeOptions="actionSearch"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@id/iv_search_del"
        tools:ignore="RtlHardcoded"/>

</RelativeLayout>