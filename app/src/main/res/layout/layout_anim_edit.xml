<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_anim_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_13"
        android:gravity="bottom"
        app:errorTextAppearance="@style/errorAppearance"
        app:hintTextAppearance="@style/hintAppearance">

        <com.goshop.app.common.view.RobotoRegularEditText
            android:id="@+id/et_anim_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:gravity="left|center_vertical"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/size_6"
            android:layout_marginBottom="@dimen/size_6"
            android:layout_marginTop="@dimen/size_2"
            android:background="@drawable/selector_textinput_edittext"
            android:textColor="@color/color_grayscale_text"
            android:textColorHint="@color/color_text_hint"
            android:singleLine="true"
            android:textSize="@dimen/size_font_16"
            android:textCursorDrawable="@drawable/drawable_cursor"
            tools:ignore="RtlSymmetry"/>

    </android.support.design.widget.TextInputLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_13"
        android:paddingBottom="@dimen/size_6"
        android:layout_alignTop="@id/til_anim_edittext"
        android:layout_alignBottom="@id/til_anim_edittext">
        <ImageView
            android:id="@+id/iv_anim_del_edittext"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:layout_marginTop="@dimen/size_8"
            android:background="@drawable/ic_icon_text_delete"
            android:contentDescription="@string/app_name"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


</RelativeLayout>