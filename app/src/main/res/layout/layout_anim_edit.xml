<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_anim_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorTextAppearance="@style/errorAppearance"
        app:hintTextAppearance="@style/hintAppearance">

        <com.goshop.app.common.view.CustomEditText
            android:id="@+id/et_anim_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:textSize="@dimen/size_font_16"
            android:textCursorDrawable="@null"/>

    </android.support.design.widget.TextInputLayout>


    <ImageView
        android:id="@+id/iv_anim_del_edittext"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_marginTop="@dimen/size_12"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="@mipmap/del"
        android:contentDescription="@string/app_name"/>

</RelativeLayout>