<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_et_minus_plus"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_28"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@drawable/bg_white_top_bottom_line">

    <ImageView
        android:id="@+id/iv_minus"
        android:layout_width="@dimen/size_28"
        android:layout_height="@dimen/size_28"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bg_left_right_line_grey"
        android:src="@drawable/ic_icon_et_minus"
        android:scaleType="center"
        android:contentDescription="@string/app_name"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/iv_plus"
        android:layout_width="@dimen/size_28"
        android:layout_height="@dimen/size_28"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_left_right_line_grey"
        android:src="@drawable/ic_icon_et_plus"
        android:scaleType="center"
        android:contentDescription="@string/app_name"
        android:layout_alignParentEnd="true"/>

    <com.goshop.app.common.view.CustomEditText
        android:id="@+id/et_minus_plus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/iv_plus"
        android:textCursorDrawable="@null"
        android:textColor="@color/color_text_black"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:layout_marginRight="@dimen/size_8"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_toRightOf="@id/iv_minus"
        android:layout_toStartOf="@id/iv_plus"
        android:layout_toEndOf="@id/iv_minus"/>

</RelativeLayout>